@{
    const string title = "Quản lý bài viết";
    const string screenCode = "article";
    ViewBag.Title = title;
}

@section HeadScripts {
    <partial name="__LibRTE"/>
}

<div class="screen @screenCode">
    <section class="page-header d-print-none">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="page-title">@title</h2>
                </div>
                <div class="col-auto ms-auto">
                    <button class="btn btn-primary command-modal-" asp-area="Admin" asp-controller="Article"
                            asp-action="Create" data-bs-toggle="modal" data-bs-backdrop="true"
                            data-bs-target="#create-article--modal">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                             stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M12 5l0 14"/>
                            <path d="M5 12l14 0"/>
                        </svg>
                        Thêm danh mục mới
                    </button>
                </div>
            </div>
        </div>
    </section>

    <section class="dm-form form-create-container"></section>
    <section class="dm-form form-details-container"></section>
    <section class="dm-form form-edit-container"></section>
    <section class="dm-form form-delete-container"></section>
    <section class="paged-list">
        <partial name="_List"/>
    </section>
</div>

<!-- Modal for Create/Edit Article -->
<div class="modal modal-blur fade" id="create-article--modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm/Sửa bài viết</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="articleForm">
                    <input type="hidden" id="articleId" name="Id"/>
                    <div class="mb-3">
                        <label class="form-label">Tiêu đề</label>
                        <input type="text" class="form-control" name="Title" placeholder="Nhập tiêu đề bài viết">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nội dung</label>
                        <textarea class="form-control" name="Content" id="rte"
                                  placeholder="Nhập nội dung bài viết"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="mb-3">
                                <label class="form-label">Tác giả</label>
                                <input type="text" class="form-control" name="Author" placeholder="Nhập tên tác giả">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label class="form-label">Danh mục</label>
                                <select class="form-select" name="Category">
                                    <option value="">Chọn danh mục</option>
                                    <option value="news">Tin tức</option>
                                    <option value="tutorial">Hướng dẫn</option>
                                    <option value="review">Đánh giá</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày đăng</label>
                        <input type="date" class="form-control" name="PublishDate">
                    </div>
                    <div class="mb-3">
                        <label class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="IsPublished">
                            <span class="form-check-label">Xuất bản</span>
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                    Hủy
                </a>
                <a href="#" class="btn btn-primary ms-auto" id="saveArticle">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                         stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                         stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M5 12l5 5l10 -10"/>
                    </svg>
                    Lưu bài viết
                </a>
            </div>
        </div>
    </div>
</div>



@section FootScripts {
    <script>
        $(document).ready(function () {
            new RichTextEditor($("#rte")[0], {
                width: "100%"
            });
        });
    </script>
}
