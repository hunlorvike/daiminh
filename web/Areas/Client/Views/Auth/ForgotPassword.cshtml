@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "Layout/_Layout.Blank";
}

<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="text-center mb-4">
            <a href="/" class="navbar-brand navbar-brand-autodark">
                <img src="/img/logo.svg" height="36" alt="">
            </a>
        </div>
        <form class="card card-md" action="/forgot-password" method="post" autocomplete="off" novalidate>
            @Html.AntiForgeryToken()
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Quên mật khẩu</h2>
                <p class="text-muted mb-4">
                    Nhập địa chỉ email của bạn và chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu.
                </p>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Nhập email của bạn" required>
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                             stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"/>
                            <path d="M3 7l9 6l9 -6"/>
                        </svg>
                        Gửi hướng dẫn đặt lại mật khẩu
                    </button>
                </div>
            </div>
        </form>
        <div class="text-center text-muted mt-3">
            <a href="/login" tabindex="-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                     stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M5 12l14 0"/>
                    <path d="M5 12l6 6"/>
                    <path d="M5 12l6 -6"/>
                </svg>
                Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>
