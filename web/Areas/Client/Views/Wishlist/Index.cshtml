@{
    ViewBag.Title = "Sản phẩm yêu thích";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    @ViewBag.Title
                </h2>
                <div class="text-muted mt-1">10 sản phẩm</div>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            @for (int i = 0; i < 10; i++)
            {
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <div class="card card-sm product-card h-100">
                        <div class="ribbon ribbon-top ribbon-start bg-primary">Sale</div>
                        <a href="#" class="d-block position-relative">
                            <img src="~/img/placeholder.svg" class="card-img-top object-cover" style="height: 200px;"
                                 alt="Sản phẩm">
                            <div class="product-actions">
                                <button class="btn btn-primary btn-icon me-2" data-bs-toggle="tooltip"
                                        title="Thêm vào giỏ hàng">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="icon icon-tabler icon-tabler-shopping-cart" width="24" height="24"
                                         viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                         stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                        <path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                        <path d="M17 17h-11v-14h-2"></path>
                                        <path d="M6 5l14 1l-1 7h-13"></path>
                                    </svg>
                                </button>
                                <button class="btn btn-danger btn-icon" data-bs-toggle="tooltip"
                                        title="Xóa khỏi danh sách yêu thích">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash"
                                         width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                                         stroke="currentColor" fill="none" stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M4 7l16 0"></path>
                                        <path d="M10 11l0 6"></path>
                                        <path d="M14 11l0 6"></path>
                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                                    </svg>
                                </button>
                            </div>
                        </a>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-blue text-blue-fg me-2">Mới</span>
                                <div class="text-muted">Mã SP: SP@(i + 1)</div>
                            </div>
                            <h3 class="card-title mb-1">Con lăn sơn cao cấp @(i + 1)</h3>
                            <div class="text-muted mb-2">Thương hiệu: Brand X</div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-primary fw-bold h4">150.000đ</span>
                                <span class="text-decoration-line-through text-muted ms-2">180.000đ</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section FootScripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}

