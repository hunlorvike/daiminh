@{
    ViewBag.Title = "Tìm kiếm sản phẩm";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Tìm kiếm sản phẩm
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        <div class="row g-4">
            <!-- Filters -->
            <div class="col-12 col-md-3">
                <form action="/search" method="get">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Bộ lọc</h3>
                            <div class="mb-3">
                                <label class="form-label">Danh mục</label>
                                <select class="form-select" name="category">
                                    <option value="">Tất cả danh mục</option>
                                    <option value="interior">Sơn nội thất</option>
                                    <option value="exterior">Sơn ngoại thất</option>
                                    <option value="wood">Sơn gỗ</option>
                                    <option value="metal">Sơn kim loại</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Thương hiệu</label>
                                <div class="form-selectgroup">
                                    <label class="form-selectgroup-item">
                                        <input type="checkbox" name="brand[]" value="dulux"
                                               class="form-selectgroup-input">
                                        <span class="form-selectgroup-label">Dulux</span>
                                    </label>
                                    <label class="form-selectgroup-item">
                                        <input type="checkbox" name="brand[]" value="jotun"
                                               class="form-selectgroup-input">
                                        <span class="form-selectgroup-label">Jotun</span>
                                    </label>
                                    <label class="form-selectgroup-item">
                                        <input type="checkbox" name="brand[]" value="nippon"
                                               class="form-selectgroup-input">
                                        <span class="form-selectgroup-label">Nippon</span>
                                    </label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Giá</label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <input type="number" class="form-control" name="min_price" placeholder="Từ">
                                    </div>
                                    <div class="col-6">
                                        <input type="number" class="form-control" name="max_price" placeholder="Đến">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Đánh giá</label>
                                <div class="mb-3">
                                    <label class="form-check">
                                        <input class="form-check-input" type="radio" name="rating" value="4">
                                        <span class="form-check-label">4 sao trở lên</span>
                                    </label>
                                    <label class="form-check">
                                        <input class="form-check-input" type="radio" name="rating" value="3">
                                        <span class="form-check-label">3 sao trở lên</span>
                                    </label>
                                    <label class="form-check">
                                        <input class="form-check-input" type="radio" name="rating" value="2">
                                        <span class="form-check-label">2 sao trở lên</span>
                                    </label>
                                </div>
                            </div>
                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary w-100">
                                    Áp dụng bộ lọc
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Search Results -->
            <div class="col-12 col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <h3 class="card-title">Kết quả tìm kiếm (24)</h3>
                            <div class="ms-auto text-muted">
                                Sắp xếp:
                                <div class="ms-2 d-inline-block">
                                    <select class="form-select form-select-sm">
                                        <option value="relevance">Liên quan nhất</option>
                                        <option value="price_asc">Giá tăng dần</option>
                                        <option value="price_desc">Giá giảm dần</option>
                                        <option value="rating">Đánh giá cao nhất</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row row-cards">
                            @for (int i = 1; i <= 9; i++)
                            {
                                <div class="col-sm-6 col-lg-4">
                                    <div class="card card-sm">
                                        <a href="#" class="d-block"><img src="~/img/placeholder.svg"
                                                                         class="card-img-top"
                                                                         alt="Sơn Dulux"></a>
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <span class="avatar me-3 rounded"
                                                      style="background-image: url('@Url.Content("~/img/placeholder.svg")')"></span>
                                                <div>
                                                    <div>Sơn Dulux Weathershield</div>
                                                    <div class="text-muted">Sơn ngoại thất cao cấp</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="d-flex">
                                                <a href="#" class="btn btn-primary w-100">
                                                    Xem chi tiết
                                                </a>
                                                <a href="#" class="btn btn-icon btn-outline-primary ms-2"
                                                   data-bs-toggle="tooltip" title="Thêm vào giỏ hàng">
                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                         class="icon icon-tabler icon-tabler-shopping-cart" width="24"
                                                         height="24" viewBox="0 0 24 24" stroke-width="2"
                                                         stroke="currentColor" fill="none" stroke-linecap="round"
                                                         stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                        <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                                        <path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                                                        <path d="M17 17h-11v-14h-2"></path>
                                                        <path d="M6 5l14 1l-1 7h-13"></path>
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="d-flex mt-4">
                            <ul class="pagination ms-auto">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                             viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                             stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M15 6l-6 6l6 6"/>
                                        </svg>
                                        Trước
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">4</a></li>
                                <li class="page-item"><a class="page-link" href="#">5</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        Sau
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                             viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                             stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M9 6l6 6l-6 6"/>
                                        </svg>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FootScripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}

