@{
	ViewData["Title"] = "Dự án thi công - Sơn Đại Mih";
}

<div class="container-xl py-4">
	<div class="mb-4">
		<h1 class="h2 mb-2 font-serif">Dự án thi công</h1>
		<div class="text-muted small">
			<a href="/" class="text-reset hover-text-primary">Trang chủ</a>
			<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
				<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
				<path d="M9 6l6 6l-6 6"></path>
			</svg>
			<span>Dự án</span>
		</div>
	</div>

	<!-- Project Categories -->
	<div class="mb-4">
		<div class="card">
			<div class="card-body">
				<div class="tabs-menu">
					<ul class="nav nav-tabs nav-fill" data-bs-toggle="tabs">
						<li class="nav-item">
							<a href="#tab-all" class="nav-link active" data-bs-toggle="tab">Tất cả</a>
						</li>
						<li class="nav-item">
							<a href="#tab-residential" class="nav-link" data-bs-toggle="tab">Nhà ở</a>
						</li>
						<li class="nav-item">
							<a href="#tab-commercial" class="nav-link" data-bs-toggle="tab">Thương mại</a>
						</li>
						<li class="nav-item">
							<a href="#tab-industrial" class="nav-link" data-bs-toggle="tab">Công nghiệp</a>
						</li>
						<li class="nav-item">
							<a href="#tab-public" class="nav-link" data-bs-toggle="tab">Công trình công cộng</a>
						</li>
					</ul>
					<div class="tab-content mt-3">
						<div class="tab-pane active show" id="tab-all">
							<div class="row row-cards">
								@for (int i = 0; i < 9; i++)
								{
									string[] projectTypes = { "Nhà ở", "Thương mại", "Công nghiệp", "Công trình công cộng" };
									string[] projectNames = {
								"Chung cư Palm Heights",
								"Tòa nhà văn phòng Sunshine Tower",
								"Nhà máy sản xuất ABC",
								"Trường học XYZ",
								"Biệt thự ven sông",
								"Trung tâm thương mại Mega Mall",
								"Khu công nghiệp Tân Bình",
								"Bệnh viện Quốc tế",
								"Khu dân cư Vinhomes"
													};
									string[] locations = {
								"Quận 1, TP.HCM",
								"Quận 2, TP.HCM",
								"Quận 7, TP.HCM",
								"Quận 9, TP.HCM",
								"Quận Bình Thạnh, TP.HCM",
								"Quận Tân Bình, TP.HCM",
								"Hà Nội",
								"Đà Nẵng",
								"Nha Trang"
													};
									Random rnd = new Random();
									int month = rnd.Next(1, 13);
									int year = 2022 + rnd.Next(0, 2);

									<div class="col-md-6 col-lg-4">
										<div class="card card-sm">
											<div class="position-relative">
												<img src="/img/placeholder.svg?text=Dự+án+@(i+1)" class="card-img-top" alt="@projectNames[i % projectNames.Length]">
												<div class="position-absolute top-0 start-0 m-2">
													<span class="badge bg-orange">@projectTypes[i % projectTypes.Length]</span>
												</div>
											</div>
											<div class="card-body">
												<h3 class="card-title">
													<a href="/du-an/@(i+1)" class="text-reset hover-text-primary">@projectNames[i % projectNames.Length]</a>
												</h3>
												<div class="d-flex align-items-center text-muted mb-2">
													<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-map-pin me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
														<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
														<path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
														<path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"></path>
													</svg>
													<span>@locations[i % locations.Length]</span>
												</div>
												<div class="d-flex align-items-center text-muted mb-3">
													<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
														<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
														<path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"></path>
														<path d="M16 3v4"></path>
														<path d="M8 3v4"></path>
														<path d="M4 11h16"></path>
													</svg>
													<span>Hoàn thành: @month/@year</span>
												</div>
												<div class="d-flex justify-content-between align-items-center">
													<div class="avatar-list avatar-list-stacked">
														@foreach (var initial in new[] { "CT", "ST", "KT" })
														{
															<span class="avatar avatar-xs avatar-rounded bg-primary">@initial</span>
														}
													</div>
													<a href="/du-an/@(i+1)" class="text-primary d-flex align-items-center">
														Chi tiết
														<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-right ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
															<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
															<path d="M5 12l14 0"></path>
															<path d="M13 18l6 -6"></path>
															<path d="M13 6l6 6"></path>
														</svg>
													</a>
												</div>
											</div>
										</div>
									</div>
								}
							</div>
						</div>

						<div class="tab-pane" id="tab-residential">
							<div class="row row-cards">
								@for (int i = 0; i < 3; i++)
								{
									string[] projectNames = { "Chung cư Palm Heights", "Biệt thự ven sông", "Khu dân cư Vinhomes" };
									string[] locations = { "Quận 2, TP.HCM", "Quận Bình Thạnh, TP.HCM", "Hà Nội" };
									Random rnd = new Random();
									int month = rnd.Next(1, 13);
									int year = 2022 + rnd.Next(0, 2);

									<div class="col-md-6 col-lg-4">
										<div class="card card-sm">
											<div class="position-relative">
												<img src="/img/placeholder.svg?text=Nhà+ở+@(i+1)" class="card-img-top" alt="@projectNames[i % projectNames.Length]">
												<div class="position-absolute top-0 start-0 m-2">
													<span class="badge bg-orange">Nhà ở</span>
												</div>
											</div>
											<div class="card-body">
												<h3 class="card-title">
													<a href="/du-an/@(i+1)" class="text-reset hover-text-primary">@projectNames[i % projectNames.Length]</a>
												</h3>
												<div class="d-flex align-items-center text-muted mb-2">
													<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-map-pin me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
														<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
														<path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
														<path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"></path>
													</svg>
													<span>@locations[i % locations.Length]</span>
												</div>
												<div class="d-flex align-items-center text-muted mb-3">
													<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
														<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
														<path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"></path>
														<path d="M16 3v4"></path>
														<path d="M8 3v4"></path>
														<path d="M4 11h16"></path>
													</svg>
													<span>Hoàn thành: @month/@year</span>
												</div>
												<div class="d-flex justify-content-between align-items-center">
													<div class="avatar-list avatar-list-stacked">
														@foreach (var initial in new[] { "CT", "ST", "KT" })
														{
															<span class="avatar avatar-xs avatar-rounded bg-primary">@initial</span>
														}
													</div>
													<a href="/du-an/@(i+1)" class="text-primary d-flex align-items-center">
														Chi tiết
														<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-right ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
															<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
															<path d="M5 12l14 0"></path>
															<path d="M13 18l6 -6"></path>
															<path d="M13 6l6 6"></path>
														</svg>
													</a>
												</div>
											</div>
										</div>
									</div>
								}
							</div>
						</div>

						<!-- Other tabs with similar structure -->
						<div class="tab-pane" id="tab-commercial">
							<div class="text-center py-4">
								<p>Đang cập nhật dự án thương mại...</p>
							</div>
						</div>

						<div class="tab-pane" id="tab-industrial">
							<div class="text-center py-4">
								<p>Đang cập nhật dự án công nghiệp...</p>
							</div>
						</div>

						<div class="tab-pane" id="tab-public">
							<div class="text-center py-4">
								<p>Đang cập nhật dự án công trình công cộng...</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Featured Project -->
	<div class="mb-5">
		<h2 class="h3 mb-3 font-serif">Dự án nổi bật</h2>
		<div class="card">
			<div class="row g-0">
				<div class="col-md-6">
					<img src="/img/placeholder.svg?text=Dự+án+nổi+bật" class="w-100 h-100 object-fit-cover" alt="Dự án nổi bật">
				</div>
				<div class="col-md-6">
					<div class="card-body p-4">
						<div class="mb-2">
							<span class="badge bg-orange">Dự án nổi bật</span>
						</div>
						<h3 class="card-title mb-2">Tòa nhà văn phòng Sunshine Tower</h3>
						<div class="d-flex align-items-center text-muted mb-2">
							<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-map-pin me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
								<path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
								<path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"></path>
							</svg>
							<span>Quận 1, TP.HCM</span>
						</div>
						<div class="d-flex align-items-center text-muted mb-3">
							<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
								<path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"></path>
								<path d="M16 3v4"></path>
								<path d="M8 3v4"></path>
								<path d="M4 11h16"></path>
							</svg>
							<span>Hoàn thành: 06/2023</span>
						</div>

						<div class="mb-3">
							<h4 class="font-medium mb-2">Thông tin dự án:</h4>
							<ul class="list-unstyled space-y-1 text-muted">
								<li>• Diện tích: 5,000 m²</li>
								<li>• Loại công trình: Văn phòng cao cấp</li>
								<li>• Giải pháp sử dụng: Sơn ngoại thất cao cấp, chống thấm sàn mái</li>
								<li>• Thời gian thi công: 3 tháng</li>
							</ul>
						</div>

						<p class="text-muted mb-4">
							Dự án tòa nhà văn phòng Sunshine Tower là một trong những công trình tiêu biểu của chúng tôi. Với
							yêu cầu cao về thẩm mỹ và độ bền, chúng tôi đã sử dụng các sản phẩm sơn và chống thấm cao cấp nhất,
							đảm bảo công trình luôn giữ được vẻ đẹp và tuổi thọ lâu dài.
						</p>

						<div class="d-flex flex-column flex-sm-row gap-2">
							<a href="#" class="btn btn-primary">Xem chi tiết dự án</a>
							<a href="#" class="btn btn-outline-primary">Xem quy trình thi công</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Project Timeline -->
	<div class="mb-5">
		<h2 class="h3 mb-3 font-serif">Dự án theo thời gian</h2>
		<ul class="steps steps-vertical">
			@for (int i = 0; i < 4; i++)
			{
				string[] years = { "2023", "2022", "2021", "2020" };
				int[] projectCounts = { 5, 8, 6, 4 };

				<li class="step-item @(i == 0 ? "active" : "")">
					<div class="h4 m-0">@years[i]</div>
					<div class="text-secondary mb-3">
						Hoàn thành @projectCounts[i] dự án lớn nhỏ trong năm @years[i], bao gồm các công trình nhà ở, thương mại và công nghiệp.
					</div>
					<div class="row g-2 mb-3">
						@for (int j = 0; j < 3; j++)
						{
							<div class="col-4 col-sm-4">
								<div class="position-relative">
									<img src="/img/placeholder.svg?text=@years[i]" class="img-fluid rounded" alt="Dự án @(j + 1) năm @years[i]">
									<div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex align-items-center justify-content-center opacity-0 hover-opacity-100 transition-opacity rounded">
										<span class="text-white small">Xem chi tiết</span>
									</div>
								</div>
							</div>
						}
					</div>
					<div>
						<a href="/du-an/nam/@years[i]" class="text-primary d-inline-flex align-items-center">
							Xem tất cả dự án năm @years[i]
							<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-right ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
								<path d="M5 12l14 0"></path>
								<path d="M13 18l6 -6"></path>
								<path d="M13 6l6 6"></path>
							</svg>
						</a>
					</div>
				</li>
			}
		</ul>
	</div>

	<!-- Call to Action -->
	<div class="card bg-primary text-white mb-4">
		<div class="card-body text-center p-4">
			<h2 class="card-title mb-2">Bạn cần tư vấn cho dự án của mình?</h2>
			<p class="mb-4 mx-auto" style="max-width: 600px;">
				Đội ngũ chuyên gia của chúng tôi sẵn sàng hỗ trợ bạn từ khâu tư vấn, lựa chọn sản phẩm đến thi công hoàn thiện
			</p>
			<div class="d-flex flex-column flex-sm-row justify-content-center gap-2">
				<a href="#" class="btn btn-orange">Liên hệ tư vấn</a>
				<a href="#" class="btn btn-outline-white">Xem thêm dự án</a>
			</div>
		</div>
	</div>
</div>
