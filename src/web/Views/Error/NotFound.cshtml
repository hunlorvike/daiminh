@using shared.Models
@model ErrorViewModel
@{
	ViewData["Title"] = "Not Found";
}

<div class="page page-center">
	<div class="container-tight py-4">
		<div class="empty">
			<div class="empty-header">404</div>
			<p class="empty-title">Không tìm thấy trang</p>
			<p class="empty-subtitle text-muted">
				Chúng tôi rất tiếc, trang bạn đang tìm kiếm không tồn tại hoặc đã bị di chuyển.
			</p>
			<div class="empty-action">
				<a href="/" class="btn btn-primary">
					<i class="ti ti-arrow-left me-2"></i>Quay lại trang chủ
				</a>
			</div>
			@if (Model.ShowRequestId)
			{
				<div class="text-muted mt-3">
					<small>Request ID: <code>@Model.RequestId</code></small>
				</div>
			}
		</div>
	</div>
</div>

