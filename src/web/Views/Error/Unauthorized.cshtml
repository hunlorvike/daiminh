@using shared.Models
@model ErrorViewModel
@{
	ViewData["Title"] = "Unauthorized";
}

<div class="page page-center">
	<div class="container-tight py-4">
		<div class="empty">
			<div class="empty-header">401</div>
			<p class="empty-title">Chưa đăng nhập</p>
			<p class="empty-subtitle text-muted">
				Bạn cần đăng nhập để truy cập trang này.
			</p>
			<div class="empty-action">
				<a href="/Identity/Account/Login" class="btn btn-primary">
					<i class="ti ti-login me-2"></i>Đăng nhập
				</a>
				<a href="/" class="btn btn-secondary ms-2">
					<i class="ti ti-arrow-left me-2"></i>Quay lại trang chủ
				</a>
			</div>
			@if (Model.ShowRequestId)
			{
				<div class="text-muted mt-3">
					<small>Request ID: <code>@Model.RequestId</code></small>
				</div>
			}
		</div>
	</div>
</div>

