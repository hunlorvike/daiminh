@using shared.Models
@model ErrorViewModel
@{
	ViewData["Title"] = "Error";
}

<div class="page page-center">
	<div class="container-tight py-4">
		<div class="empty">
			<div class="empty-header">500</div>
			<p class="empty-title">Oops… Đã xảy ra lỗi</p>
			<p class="empty-subtitle text-muted">
				Chúng tôi rất tiếc, đã xảy ra lỗi trong quá trình xử lý yêu cầu của bạn.
			</p>
			<div class="empty-action">
				<a href="/" class="btn btn-primary">
					<i class="ti ti-arrow-left me-2"></i>Quay lại trang chủ
				</a>
			</div>
			@if (Model.ShowRequestId)
			{
				<div class="text-muted mt-3">
					<small>Request ID: <code>@Model.RequestId</code></small>
				</div>
			}
			@if (Model.Exception != null)
			{
				<div class="card mt-3">
					<div class="card-header">
						<h3 class="card-title">Chi tiết lỗi</h3>
					</div>
					<div class="card-body">
						<div class="alert alert-danger">
							<h4 class="alert-title">@Model.Exception.GetType().Name</h4>
							<p>@Model.Exception.Message</p>
						</div>
						<div class="mt-3">
							<pre class="bg-dark text-white p-3 rounded"><code>@Model.Exception.StackTrace</code></pre>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>

