@using web.Areas.Admin.ViewModels.Seo
@model IEnumerable<SeoAnalyticsListItemViewModel>
@{
	ViewData["Title"] = "Chi tiết phân tích SEO";
}

<div class="container-fluid">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Chi tiết phân tích SEO</h1>
		<div>
			<a asp-action="Analytics" class="btn btn-info btn-sm">
				<i class="fas fa-chart-line fa-sm"></i> Xem tổng quan
			</a>
			<a asp-action="ImportAnalytics" class="btn btn-primary btn-sm">
				<i class="fas fa-file-import fa-sm"></i> Nhập dữ liệu
			</a>
			<a asp-action="ExportAnalytics" asp-route-entityType="@ViewBag.SelectedEntityType" asp-route-entityId="@ViewBag.SelectedEntityId" asp-route-startDate="@ViewBag.StartDate" asp-route-endDate="@ViewBag.EndDate" class="btn btn-success btn-sm">
				<i class="fas fa-file-export fa-sm"></i> Xuất Excel
			</a>
		</div>
	</div>

	<!-- Bộ lọc -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Bộ lọc</h6>
		</div>
		<div class="card-body">
			<form asp-action="AnalyticsDetails" method="get" class="form-inline">
				<div class="form-group mb-2 mr-2">
					<label for="entityType" class="mr-2">Loại đối tượng:</label>
					<select name="entityType" id="entityType" class="form-control">
						<option value="">Tất cả</option>
						@foreach (var type in ViewBag.EntityTypes)
						{
							<option value="@type" selected="@(type == ViewBag.SelectedEntityType)">@type</option>
						}
					</select>
				</div>
				<div class="form-group mb-2 mr-2">
					<label for="entityId" class="mr-2">ID đối tượng:</label>
					<input type="number" name="entityId" id="entityId" class="form-control" value="@ViewBag.SelectedEntityId" />
				</div>
				<div class="form-group mb-2 mr-2">
					<label for="startDate" class="mr-2">Từ ngày:</label>
					<input type="date" name="startDate" id="startDate" class="form-control" value="@ViewBag.StartDate" />
				</div>
				<div class="form-group mb-2 mr-2">
					<label for="endDate" class="mr-2">Đến ngày:</label>
					<input type="date" name="endDate" id="endDate" class="form-control" value="@ViewBag.EndDate" />
				</div>
				<button type="submit" class="btn btn-primary mb-2">Lọc</button>
			</form>
		</div>
	</div>

	<!-- Bảng dữ liệu -->
	<div class="card shadow mb-4">
		<div class="card-header py-3 d-flex justify-content-between align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">Dữ liệu phân tích SEO</h6>
			<div class="dropdown no-arrow">
				<a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
				</a>
				<div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
					<div class="dropdown-header">Tùy chọn:</div>
					<a class="dropdown-item" href="@Url.Action("ExportAnalytics", new { entityType = ViewBag.SelectedEntityType, entityId = ViewBag.SelectedEntityId, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })">
						<i class="fas fa-file-export fa-sm fa-fw mr-2 text-gray-400"></i>
						Xuất Excel
					</a>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-hover" width="100%" cellspacing="0">
					<thead class="thead-light">
						<tr>
							<th>@Html.DisplayNameFor(model => model.Date)</th>
							<th>@Html.DisplayNameFor(model => model.EntityType)</th>
							<th>@Html.DisplayNameFor(model => model.EntityId)</th>
							<th>@Html.DisplayNameFor(model => model.EntityTitle)</th>
							<th>@Html.DisplayNameFor(model => model.EntityUrl)</th>
							<th>@Html.DisplayNameFor(model => model.Impressions)</th>
							<th>@Html.DisplayNameFor(model => model.Clicks)</th>
							<th>@Html.DisplayNameFor(model => model.CTR)</th>
							<th>@Html.DisplayNameFor(model => model.AveragePosition)</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Date.ToString("dd/MM/yyyy")</td>
								<td>@item.EntityType</td>
								<td>@item.EntityId</td>
								<td>@item.EntityTitle</td>
								<td>
									@if (!string.IsNullOrEmpty(item.EntityUrl))
									{
										<a href="@item.EntityUrl" target="_blank">@item.EntityUrl</a>
									}
								</td>
								<td>@item.Impressions.ToString("N0")</td>
								<td>@item.Clicks.ToString("N0")</td>
								<td>@item.CTR.ToString("N2")%</td>
								<td>@item.AveragePosition.ToString("N1")</td>
							</tr>
						}
					</tbody>
				</table>
			</div>

			<!-- Phân trang -->
			@if (Model.Count() > 0)
			{
				<nav aria-label="Page navigation">
					<ul class="pagination justify-content-center mt-4">
						<li class="page-item disabled">
							<a class="page-link" href="#" tabindex="-1" aria-disabled="true">Trước</a>
						</li>
						<li class="page-item active"><a class="page-link" href="#">1</a></li>
						<li class="page-item"><a class="page-link" href="#">2</a></li>
						<li class="page-item"><a class="page-link" href="#">3</a></li>
						<li class="page-item">
							<a class="page-link" href="#">Sau</a>
						</li>
					</ul>
				</nav>
			}
		</div>
	</div>
</div>

@section Scripts {
}

