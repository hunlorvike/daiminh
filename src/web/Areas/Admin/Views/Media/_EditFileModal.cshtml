@using web.Areas.Admin.ViewModels.Media
@model MediaFileEditViewModel

<div class="modal modal-blur fade" id="editFileModal" tabindex="-1" aria-labelledby="editFileModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		@* Larger modal *@
		<div class="modal-content">
			<form id="editFileForm" asp-controller="MediaApi" asp-action="UpdateFileDetails" method="put">
				@* Posts to API *@
				<div class="modal-header">
					<h5 class="modal-title" id="editFileModalLabel">Chỉnh sửa chi tiết File</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<input type="hidden" asp-for="Id" id="editFileIdInput" /> @* Hidden ID *@
					<div class="row">
						<div class="col-md-4 text-center mb-3 mb-md-0">
							<img id="editFileThumbnailPreview" src="/img/placeholder.svg" alt="File Preview" class="img-fluid rounded border" style="max-height: 150px; object-fit: contain;" />
							<p class="text-muted small mt-2" id="editFileNameDisplay">Filename.jpg</p>
						</div>
						<div class="col-md-8">
							<div class="form-group mb-3">
								<label asp-for="AltText" class="form-label">Văn bản thay thế (Alt Text)</label>
								<input asp-for="AltText" class="form-control" id="editFileAltTextInput" />
								<span asp-validation-for="AltText" class="text-danger"></span>
								<small class="form-hint">Mô tả ngắn gọn về hình ảnh cho SEO và khả năng truy cập.</small>
							</div>
							<div class="form-group">
								<label asp-for="Description" class="form-label">Mô tả</label>
								<textarea asp-for="Description" class="form-control" rows="3" id="editFileDescriptionInput"></textarea>
								<span asp-validation-for="Description" class="text-danger"></span>
								<small class="form-hint">Chú thích hoặc mô tả thêm về file (tùy chọn).</small>
							</div>
						</div>
					</div>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-link link-secondary" data-bs-dismiss="modal">Hủy</button>
					<button type="submit" class="btn btn-primary">
						<i class="ti ti-device-floppy me-1"></i> Lưu thay đổi
					</button>
				</div>
			</form>
		</div>
	</div>
</div>