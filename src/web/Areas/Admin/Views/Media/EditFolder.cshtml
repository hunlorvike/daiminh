@using web.Areas.Admin.ViewModels.Media
@model MediaFolderViewModel
@{
	ViewData["Title"] = "Chỉnh sửa thư mục - Hệ thống quản trị";
}

<div class="card">
	<div class="card-body">
		<form asp-action="EditFolder" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />

			<div class="row mb-3">
				<div class="col-md-8">
					<div class="form-group mb-3">
						<label asp-for="Name" class="form-label required">Tên thư mục</label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>

					<div class="form-group mb-3">
						<label asp-for="Description" class="form-label">Mô tả</label>
						<textarea asp-for="Description" class="form-control" rows="3"></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
						<small class="form-hint">Mô tả ngắn về thư mục (tối đa 255 ký tự)</small>
					</div>
				</div>

				<div class="col-md-4">
					<div class="form-group mb-3">
						<label asp-for="ParentId" class="form-label">Thư mục cha</label>
						<select asp-for="ParentId" class="form-select">
							<option value="">-- Thư mục gốc --</option>
							@if (Model.AvailableParents != null)
							{
								@foreach (var parent in Model.AvailableParents)
								{
									<option value="@parent.Id">@parent.DisplayName</option>
								}
							}
						</select>
						<span asp-validation-for="ParentId" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="d-flex justify-content-between mt-4">
				<a asp-action="Index" asp-route-folderId="@Model.ParentId" class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left me-2"></i> Quay lại
                </a>
				<button type="submit" class="btn btn-primary">
                    <i class="ti ti-folder-up me-2"></i> Cập nhật thư mục
				</button>
			</div>
		</form>
	</div>
</div>

