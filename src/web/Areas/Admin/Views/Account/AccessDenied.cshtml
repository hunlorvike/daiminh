@{
	string? returnUrl = ViewData["ReturnUrl"]?.ToString();

	ViewData["ReturnUrl"] = returnUrl;
	ViewData["Title"] = "Truy cập bị từ chối - Hệ thống quản trị";
	ViewData["PageTitle"] = "Bạn không có quyền truy cập";
	ViewData[TempDataConstants.Breadcrumbs] = new List<(string Text, string Url)> {
("Truy cập bị từ chối", "")
};
}

<div class="container d-flex flex-column justify-content-center">
	<div class="empty">
		<div class="empty-icon">
			<i class="ti ti-lock-access fs-1 text-danger"></i>
		</div>
		<p class="empty-title">Truy cập bị từ chối</p>
		<p class="empty-subtitle text-muted">
			Bạn không có quyền truy cập vào tài nguyên hoặc trang này.
			Vui lòng liên hệ quản trị viên để được cấp quyền.
		</p>
		<div class="empty-action">
			@if (!string.IsNullOrEmpty(returnUrl))
			{
				<a href="@returnUrl" class="btn btn-outline-primary">
					<i class="ti ti-arrow-left me-2"></i> Thử quay lại trang trước
				</a>
			}
			<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-link">
				<i class="ti ti-dashboard me-2"></i> Về trang chủ Admin
			</a>
		</div>
	</div>
</div>
