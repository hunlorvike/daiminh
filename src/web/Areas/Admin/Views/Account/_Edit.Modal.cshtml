@model web.Areas.Admin.Requests.Account.UserRequest

<div class="modal modal-blur fade" id="edit-user--modal"
     tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm modal-dialog-centered modal-dialog-scrollable" role="document">
        <form asp-area="Admin" asp-controller="Account" asp-action="Edit" class="modal-content border">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa người dùng</h5>
                <button type="button" class="btn-close command-modal-close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label asp-for="RoleId" class="form-label"></label>
                            <select asp-for="RoleId" class="form-select">
                                @foreach (var role in (ViewBag.Roles as List<SelectListItem>)!)
                                {
                                    <option value="@role.Value" selected="@role.Selected">@role.Text</option>
                                }
                            </select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-link link-secondary command-modal-close">Hủy</button>
                <button class="btn btn-primary command-submit ms-auto" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                         stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                         stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M5 12l5 5l10 -10" />
                    </svg>
                    Lưu thông tin
                </button>
            </div>
        </form>
    </div>
</div>>