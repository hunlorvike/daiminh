@using web.Areas.Admin.ViewModels.Testimonial
@model IEnumerable<TestimonialListItemViewModel>
@{
	ViewData["Title"] = "Quản lý đánh giá khách hàng - Hệ thống quản trị";
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" class="btn btn-primary d-sm-inline-block">
			<i class="fas fa-plus me-2"></i> Thêm đánh giá
		</a>
	</div>
}

<!-- Filter form -->
<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-6">
				<label class="form-label">Tìm kiếm</label>
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Tìm đánh giá khách hàng..." name="searchTerm" value="@ViewBag.SearchTerm">
					<button class="btn btn-icon" type="button" id="clearSearch">
						<i class="fas fa-times"></i>
					</button>
				</div>
			</div>
			<div class="col-md-3">
				<button type="submit" class="btn btn-primary w-100">
					<i class="fas fa-search me-2"></i> Tìm kiếm
				</button>
			</div>
			<div class="col-md-3">
				<a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
					<i class="fas fa-redo me-2"></i> Đặt lại
				</a>
			</div>
		</form>
	</div>
</div>

<!-- Content -->
<div class="card">
	<div class="card-header">
		<h3 class="card-title">Danh sách đánh giá khách hàng</h3>
	</div>
	<div class="card-body p-0">
		@if (!Model.Any())
		{
			<div class="empty">
				<div class="empty-img">
					<i class="fas fa-comment-dots fa-5x text-muted"></i>
				</div>
				<p class="empty-title">Không tìm thấy đánh giá nào</p>
				<p class="empty-subtitle text-muted">
					Hãy thêm đánh giá khách hàng để hiển thị trên website
				</p>
				<div class="empty-action">
					<a asp-action="Create" class="btn btn-primary">
						<i class="fas fa-plus me-2"></i> Thêm đánh giá mới
					</a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th class="w-1">STT</th>
							<th style="width: 25%">Khách hàng</th>
							<th style="width: 35%">Nội dung</th>
							<th style="width: 10%">Đánh giá</th>
							<th style="width: 10%">Thứ tự</th>
							<th style="width: 10%">Trạng thái</th>
							<th style="width: 15%">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@{
							int index = 1;
						}
						@foreach (var item in Model)
						{
							<tr>
								<td class="text-muted">@(index++)</td>
								<td>
									<div class="d-flex align-items-center">
										@if (!string.IsNullOrEmpty(item.ClientAvatar))
										{
											<span class="avatar me-2" style="background-image: url(@item.ClientAvatar)"></span>
										}
										else
										{
											<span class="avatar me-2">
												@item.ClientName.Substring(0, 1).ToUpper()
											</span>
										}
										<div class="d-flex flex-column">
											<span class="font-weight-medium">@item.ClientName</span>
											@if (!string.IsNullOrEmpty(item.ClientTitle) || !string.IsNullOrEmpty(item.ClientCompany))
											{
												<small class="text-muted">
													@(item.ClientTitle ?? "") @(!string.IsNullOrEmpty(item.ClientTitle) && !string.IsNullOrEmpty(item.ClientCompany) ? " - " : "") @(item.ClientCompany ?? "")
												</small>
											}
										</div>
									</div>
								</td>
								<td>
									<div class="text-truncate" style="max-width: 300px;" title="@item.Content">@item.Content</div>
									@if (!string.IsNullOrEmpty(item.ProjectReference))
									{
										<small class="text-muted">Dự án: @item.ProjectReference</small>
									}
								</td>
								<td>
									<div class="d-flex">
										@for (int i = 1; i <= 5; i++)
										{
											<i class="@(i <= item.Rating ? "fas" : "far") fa-star text-warning"></i>
										}
									</div>
								</td>
								<td>@item.OrderIndex</td>
								<td>
									<label class="form-check form-switch">
										<input class="form-check-input toggle-active" type="checkbox" data-id="@item.Id" @(item.IsActive ? "checked" : "")>
										<span class="form-check-label"></span>
									</label>
								</td>
								<td>
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary">
											<i class="fas fa-edit"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item"
												data-bs-toggle="modal"
												data-bs-target="#delete-modal"
												data-id="@item.Id"
												data-name="@item.ClientName"
												data-delete-url="@Url.Action("Delete", "Testimonial")">
											<i class="fas fa-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			// Active toggle
			$('.toggle-active').on('change', function () {
				var id = $(this).data('id');
				var isChecked = $(this).prop('checked');

				$.ajax({
					url: '@Url.Action("ToggleActive", "Testimonial")',
					type: 'POST',
					data: { id: id },
					success: function (result) {
						if (result.success) {
							toastr.success('Cập nhật trạng thái thành công');
						} else {
							toastr.error(result.message);
							// Revert the checkbox state
							$(this).prop('checked', !isChecked);
						}
					},
					error: function () {
						toastr.error('Đã xảy ra lỗi khi cập nhật trạng thái');
						// Revert the checkbox state
						$(this).prop('checked', !isChecked);
					}
				});
			});

			// Delete item setup
			$('.delete-item').on('click', function () {
				var id = $(this).data('id');
				var name = $(this).data('name');
				var deleteUrl = $(this).data('delete-url');

				$('#delete-item-id').val(id);
				$('#delete-item-name').val(name);
				$('#delete-url').val(deleteUrl);
				$('#delete-modal-message').text('Bạn có chắc chắn muốn xóa đánh giá của khách hàng "' + name + '" không?');
			});

			// Clear search
			$('#clearSearch').on('click', function() {
				$('input[name="searchTerm"]').val('');
				$('#filterForm').submit();
			});
		});
	</script>
}

