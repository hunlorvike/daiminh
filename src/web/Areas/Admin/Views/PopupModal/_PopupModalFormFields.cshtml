@using web.Areas.Admin.ViewModels.PopupModal
@model PopupModalViewModel

<div class="row g-3">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Thông tin Popup</h3>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label required"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-ad"></i>
                        </span>
                        <input asp-for="Title" class="form-control" placeholder="Tiêu đề Popup" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control wysiwyg" rows="8"
                        placeholder="Nội dung popup..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <small class="form-hint">Nội dung chi tiết hiển thị trong popup. Hỗ trợ HTML.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <div class="row g-2 align-items-center mb-2">
                        <div class="col-auto">
                            <div class="avatar avatar-lg" id="image-preview">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" class="avatar-img rounded" />
                                }
                                else
                                {
                                    <span class="avatar-img">
                                        <i class="ti ti-photo fs-1"></i>
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="ti ti-photo"></i>
                                </span>
                                @* Use media selection classes *@
                                <input asp-for="ImageUrl" class="form-control media-url-input" id="imageUrlInput"
                                    placeholder="https://example.com/image.jpg" readonly />
                                <button class="btn btn-outline-secondary select-media-button" type="button"
                                    title="Chọn ảnh" data-bs-toggle="modal" data-bs-target="#selectMediaModal"
                                    data-media-type-filter="0">
                                    <i class="ti ti-folder"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="form-hint">URL đầy đủ đến ảnh hiển thị trong popup (nếu có)</small>
                    <div class="media-preview-area mt-2">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" style="max-width: 100px; height: auto;" class="img-thumbnail" />
                        }
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LinkUrl" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-link"></i>
                        </span>
                        <input asp-for="LinkUrl" type="url" class="form-control"
                            placeholder="https://example.com/destination" />
                    </div>
                    <span asp-validation-for="LinkUrl" class="text-danger"></span>
                    <small class="form-hint">Địa chỉ URL sẽ mở ra khi người dùng click vào popup hoặc ảnh.</small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Thiết lập hiển thị</h3>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label class="form-label d-block">Trạng thái kích hoạt</label>
                    <label class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                        <span class="form-check-label">Hiển thị popup này trên website</span>
                    </label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" type="text" class="form-control datepicker" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                    <small class="form-hint">Popup sẽ bắt đầu hiển thị từ ngày này (để trống nếu muốn hiển thị ngay khi
                        kích hoạt)</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" type="text" class="form-control datepicker" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                    <small class="form-hint">Popup sẽ ngừng hiển thị vào cuối ngày này (để trống nếu muốn hiển thị vô
                        thời hạn)</small>
                </div>
            </div>
        </div>
    </div>
</div>