@using web.Areas.Admin.ViewModels.AttributeValue
@model AttributeValueViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions {
	public string GetAntiXsrfRequestToken()
	{
		return Xsrf.GetAndStoreTokens(Context).RequestToken!;
	}
}

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Thông tin Giá trị thuộc tính</h3>
	</div>
	<div class="card-body">
		<div class="row g-3">
			<div class="col-md-6">
				<div class="form-group mb-3">
					<label asp-for="AttributeId" class="form-label required"></label>
					<select asp-for="AttributeId" asp-items="@Model.AttributeOptions" class="form-select tom-selected"></select>
					<span asp-validation-for="AttributeId" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group mb-3">
					<label asp-for="Value" class="form-label required"></label>
					<input asp-for="Value" class="form-control" />
					<span asp-validation-for="Value" class="text-danger"></span>
				</div>
			</div>
		</div>
        <div class="row g-3">
            <div class="col-md-6">
				<div class="form-group mb-3">
					<label asp-for="Slug" class="form-label"></label>
					<input asp-for="Slug" class="form-control" />
					<span asp-validation-for="Slug" class="text-danger"></span>
					<small class="form-hint">Tùy chọn. Dùng cho URL hoặc định danh.</small>
				</div>
			</div>
             <div class="col-md-6">
				<div class="form-group mb-3">
					<label asp-for="OrderIndex" class="form-label"></label>
					<input asp-for="OrderIndex" type="number" min="0" class="form-control" />
					<span asp-validation-for="OrderIndex" class="text-danger"></span>
                    <small class="form-hint">Thứ tự hiển thị của giá trị trong danh sách.</small>
				</div>
			</div>
        </div>
		<div class="form-group mb-3">
			<label asp-for="Description" class="form-label"></label>
			<textarea asp-for="Description" class="form-control" rows="3"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
	</div>
	<div class="card-footer text-end bg-transparent border-top pt-3">
		<a asp-action="Index" asp-route-AttributeId="@Model.AttributeId" class="btn btn-link">Hủy</a>
		<button type="submit" class="btn btn-primary ms-2">
			<i class="ti ti-device-floppy me-2"></i> @(Model.Id > 0 ? "Cập nhật" : "Lưu") Giá trị
		</button>
	</div>
</div>