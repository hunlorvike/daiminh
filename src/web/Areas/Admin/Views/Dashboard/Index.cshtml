@using shared.Enums
@using web.Areas.Admin.ViewModels
@model DashboardViewModel
@{
	ViewData["Title"] = "Dashboard - Quản trị hệ thống";
	ViewData["PageTitle"] = "Dashboard";
}

<div class="row row-deck row-cards">
	<div class="col-sm-6 col-lg-3">
		<div class="card">
			<div class="card-body">
				<div class="d-flex align-items-center">
					<div class="subheader">Tổng số sản phẩm</div>
				</div>
				<div class="h1 mb-3">@Model.TotalProducts</div>
				<div class="d-flex mb-2">
					<div>Tỷ lệ hoạt động</div>
					<div class="ms-auto">
						<span class="text-green d-inline-flex align-items-center lh-1">
							<i class="fas fa-arrow-up"></i>
						</span>
					</div>
				</div>
				<div class="progress progress-sm">
					<div class="progress-bar bg-primary" style="width: 75%" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" aria-label="75% Complete">
						<span class="visually-hidden">75% Complete</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-6 col-lg-3">
		<div class="card">
			<div class="card-body">
				<div class="d-flex align-items-center">
					<div class="subheader">Tổng số bài viết</div>
				</div>
				<div class="h1 mb-3">@Model.TotalArticles</div>
				<div class="d-flex mb-2">
					<div>Tỷ lệ hoạt động</div>
					<div class="ms-auto">
						<span class="text-green d-inline-flex align-items-center lh-1">
							<i class="fas fa-arrow-up"></i>
						</span>
					</div>
				</div>
				<div class="progress progress-sm">
					<div class="progress-bar bg-blue" style="width: 65%" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" aria-label="65% Complete">
						<span class="visually-hidden">65% Complete</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-6 col-lg-3">
		<div class="card">
			<div class="card-body">
				<div class="d-flex align-items-center">
					<div class="subheader">Tổng số dự án</div>
				</div>
				<div class="h1 mb-3">@Model.TotalProjects</div>
				<div class="d-flex mb-2">
					<div>Tỷ lệ hoạt động</div>
					<div class="ms-auto">
						<span class="text-green d-inline-flex align-items-center lh-1">
							<i class="fas fa-arrow-up"></i>
						</span>
					</div>
				</div>
				<div class="progress progress-sm">
					<div class="progress-bar bg-azure" style="width: 55%" role="progressbar" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100" aria-label="55% Complete">
						<span class="visually-hidden">55% Complete</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-6 col-lg-3">
		<div class="card">
			<div class="card-body">
				<div class="d-flex align-items-center">
					<div class="subheader">Liên hệ mới</div>
				</div>
				<div class="h1 mb-3">@Model.NewContacts</div>
				<div class="d-flex mb-2">
					<div>Tỷ lệ phản hồi</div>
					<div class="ms-auto">
						<span class="text-yellow d-inline-flex align-items-center lh-1">
							<i class="fas fa-minus"></i>
						</span>
					</div>
				</div>
				<div class="progress progress-sm">
					<div class="progress-bar bg-red" style="width: 25%" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" aria-label="25% Complete">
						<span class="visually-hidden">25% Complete</span>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-lg-6">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Bài viết gần đây</h3>
				<div class="card-actions">
					<a href="/admin/article" class="btn btn-primary btn-sm">
						Xem tất cả
					</a>
				</div>
			</div>
			<div class="list-group list-group-flush">
				@foreach (var article in Model.RecentArticles)
				{
					<div class="list-group-item">
						<div class="row align-items-center">
							<div class="col-auto">
								<span class="badge bg-@(article.Status == PublishStatus.Published ? "green" : article.Status == PublishStatus.Draft ? "yellow" : "blue")">
									@article.Status.ToString()
								</span>
							</div>
							<div class="col">
								<a href="/admin/article/edit/@article.Id" class="text-reset d-block">@article.Title</a>
								<div class="text-muted mt-1">
									<div class="d-inline-block">
										<span class="text-muted">@article.AuthorName</span>
									</div>
									<div class="d-inline-block ms-3">
										<i class="far fa-calendar me-1"></i> @article.CreatedAt.ToString("dd/MM/yyyy HH:mm")
									</div>
								</div>
							</div>
							<div class="col-auto">
								<div class="dropdown">
									<a href="#" class="btn-action" data-bs-toggle="dropdown" aria-expanded="false">
										<i class="fas fa-ellipsis-v"></i>
									</a>
									<div class="dropdown-menu dropdown-menu-end">
										<a href="/admin/article/edit/@article.Id" class="dropdown-item">
											<i class="fas fa-edit me-2"></i> Chỉnh sửa
										</a>
										<a href="/bai-viet/@article.Slug" target="_blank" class="dropdown-item">
											<i class="fas fa-eye me-2"></i> Xem
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>

	<div class="col-lg-6">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Liên hệ gần đây</h3>
				<div class="card-actions">
					<a href="/admin/contact" class="btn btn-primary btn-sm">
						Xem tất cả
					</a>
				</div>
			</div>
			<div class="list-group list-group-flush">
				@foreach (var contact in Model.RecentContacts)
				{
					<div class="list-group-item">
						<div class="row align-items-center">
							<div class="col-auto">
								<span class="badge bg-@(contact.Status == ContactStatus.New ? "red" : contact.Status == ContactStatus.InProgress ? "yellow" : contact.Status == ContactStatus.Completed ? "green" : "gray")">
									@(contact.Status == ContactStatus.New ? "Mới" :
																contact.Status == ContactStatus.InProgress ? "Đang xử lý" :
																contact.Status == ContactStatus.Completed ? "Hoàn thành" : "Spam")
								</span>
							</div>
							<div class="col">
								<a href="/admin/contact/detail/@contact.Id" class="text-reset d-block">@contact.Subject</a>
								<div class="text-muted mt-1">
									<div class="d-inline-block">
										<span class="text-muted">@contact.FullName</span>
									</div>
									<div class="d-inline-block ms-3">
										<i class="far fa-calendar me-1"></i> @contact.CreatedAt.ToString("dd/MM/yyyy HH:mm")
									</div>
								</div>
							</div>
							<div class="col-auto">
								<div class="dropdown">
									<a href="#" class="btn-action" data-bs-toggle="dropdown" aria-expanded="false">
										<i class="fas fa-ellipsis-v"></i>
									</a>
									<div class="dropdown-menu dropdown-menu-end">
										<a href="/admin/contact/detail/@contact.Id" class="dropdown-item">
											<i class="fas fa-eye me-2"></i> Xem chi tiết
										</a>
										<a href="mailto:@contact.Email" class="dropdown-item">
											<i class="fas fa-reply me-2"></i> Phản hồi
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>