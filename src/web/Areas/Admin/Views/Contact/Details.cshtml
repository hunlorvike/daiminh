@model web.Areas.Admin.ViewModels.Contact.ContactViewModel

@{
	ViewData["Title"] = "Chi tiết liên hệ - Hệ thống quản trị";
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Index" class="btn btn-outline-secondary d-sm-inline-block">
			<i class="fas fa-arrow-left me-2"></i> Quay lại
		</a>
		<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-sm-inline-block">
			<i class="fas fa-edit me-2"></i> Cập nhật
		</a>
	</div>
}

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Thông tin liên hệ</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-6 mb-3">
				<label class="form-label">Họ tên:</label>
				<div class="form-control-plaintext">@Model.FullName</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label">Email:</label>
				<div class="form-control-plaintext">@Model.Email</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label">Điện thoại:</label>
				<div class="form-control-plaintext">@(Model.Phone ?? "Không có")</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label">Công ty:</label>
				<div class="form-control-plaintext">@(Model.CompanyName ?? "Không có")</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label">Trạng thái:</label>
				<div class="form-control-plaintext">
					@switch (Model.Status)
					{
						case shared.Enums.ContactStatus.New:
							<span class="badge bg-blue">Mới</span>
							break;
						case shared.Enums.ContactStatus.InProgress:
							<span class="badge bg-yellow">Đang xử lý</span>
							break;
						case shared.Enums.ContactStatus.Completed:
							<span class="badge bg-green">Đã xử lý</span>
							break;
						case shared.Enums.ContactStatus.Spam:
							<span class="badge bg-red">Spam</span>
							break;
						default:
							<span class="badge bg-secondary">@Model.Status</span>
							break;
					}
				</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label">Ngày tạo:</label>
				<div class="form-control-plaintext">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
			</div>
			<div class="col-12 mb-3">
				<label class="form-label">Tiêu đề:</label>
				<div class="form-control-plaintext">@Model.Subject</div>
			</div>
			<div class="col-12 mb-3">
				<label class="form-label">Nội dung:</label>
				<div class="form-control-plaintext border p-3 rounded bg-light">@Model.Message</div>
			</div>
			@if (!string.IsNullOrEmpty(Model.ProjectDetails))
			{
				<div class="col-12 mb-3">
					<label class="form-label">Chi tiết dự án:</label>
					<div class="form-control-plaintext border p-3 rounded bg-light">@Model.ProjectDetails</div>
				</div>
			}
			@if (!string.IsNullOrEmpty(Model.AdminNotes))
			{
				<div class="col-12 mb-3">
					<label class="form-label">Ghi chú:</label>
					<div class="form-control-plaintext border p-3 rounded bg-light">@Model.AdminNotes</div>
				</div>
			}
			<div class="col-md-6 mb-3">
				<label class="form-label">Địa chỉ IP:</label>
				<div class="form-control-plaintext">@(Model.IpAddress ?? "Không có")</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label">User Agent:</label>
				<div class="form-control-plaintext">@(Model.UserAgent ?? "Không có")</div>
			</div>
		</div>
	</div>
</div>

