@using web.Areas.Admin.ViewModels.Contact
@using shared.Enums
@model ContactDetailViewModel
@{
    ViewData["Title"] = "Chi tiết Liên hệ";
}

@section Styles {
    <style>
        .message-content {
            white-space: pre-wrap;
            font-family: inherit;
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 4px;
            border: 1px solid #e9ecef;
        }

        .info-label {
            font-weight: 600;
            color: #50667b;
        }
    </style>
}

<form asp-action="UpdateDetails" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-lg-8">
            @* Main Content *@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Nội dung liên hệ</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>

                    <div class="mb-3">
                        <label class="info-label">Chủ đề:</label>
                        <p class="form-control-plaintext"><strong>@Model.Subject</strong></p>
                    </div>
                    <div class="mb-3">
                        <label class="info-label">Nội dung:</label>
                        <div class="message-content">@Model.Message</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ProjectDetails))
                    {
                        <hr class="my-3">
                        <div class="mb-3">
                            <label class="info-label">Chi tiết dự án (nếu có):</label>
                            <div class="message-content">@Model.ProjectDetails</div>
                        </div>
                    }
                    <hr class="my-3">
                    <div class="form-group">
                        <label asp-for="AdminNotes" class="form-label">Ghi chú của quản trị viên</label>
                        <textarea asp-for="AdminNotes" class="form-control" rows="4" placeholder="Thêm ghi chú về liên hệ này..."></textarea>
                        <span asp-validation-for="AdminNotes" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-4">
            @* Sidebar Info & Actions *@
            <div class="card mb-3">
                <div class="card-header"><h4 class="card-title">Thông tin người gửi</h4></div>
                <div class="card-body">
                    <p><strong class="info-label">Họ tên:</strong> @Model.FullName</p>
                    <p><strong class="info-label">Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <p><strong class="info-label">Điện thoại:</strong> <a href="tel:@Model.Phone">@Model.Phone</a></p>
                    }
                    @if (!string.IsNullOrEmpty(Model.CompanyName))
                    {
                        <p><strong class="info-label">Công ty:</strong> @Model.CompanyName</p>
                    }
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header"><h4 class="card-title">Trạng thái & Thông tin khác</h4></div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Status" class="form-label required">Trạng thái</label>
                        <select asp-for="Status" asp-items="@Model.StatusList" class="form-select"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <hr />
                    <p><strong class="info-label">Ngày nhận:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    @if (!string.IsNullOrEmpty(Model.IpAddress))
                    {
                        <p><strong class="info-label">Địa chỉ IP:</strong> @Model.IpAddress</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.UserAgent))
                    {
                        <p><strong class="info-label">Trình duyệt:</strong> <small>@Model.UserAgent</small></p>
                    }
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary w-100"> <i class="ti ti-device-floppy me-1"></i> Lưu thay đổi </button>
                    <a asp-action="Index" class="btn btn-link w-100 mt-2">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</form>
