@using web.Areas.Admin.ViewModels.Contact
@using shared.Enums
@model IEnumerable<ContactListItemViewModel>
@{
    ViewData["Title"] = "Quản lý Liên hệ";
    // Breadcrumbs set in Controller
}

@* No "Add New" button *@

<!-- Filter Form -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
            <div class="col-md-5">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" class="form-control" placeholder="Tên, email, SĐT, chủ đề..." name="searchTerm" value="@ViewBag.SearchTerm">
            </div>
            <div class="col-md-4">
                <label class="form-label">Trạng thái</label>
                <select class="form-select" name="status" asp-items="@ViewBag.Statuses" asp-route-value="@ViewBag.SelectedStatus">
                    <option value="">Tất cả trạng thái</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">Lọc</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Đặt lại</a>
            </div>
        </form>
    </div>
</div>

<!-- Content Table -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách Liên hệ</h3>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="empty">
                <div class="empty-icon"><i class="ti ti-mail-off"></i></div>
                <p class="empty-title">Không có liên hệ nào</p>
                <p class="empty-subtitle text-muted">Chưa có ai gửi liên hệ cho bạn.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-vcenter card-table table-striped">
                    <thead>
                        <tr>
                            <th class="w-1">ID</th>
                            <th>Người gửi</th>
                            <th>Chủ đề</th>
                            <th class="text-center">Trạng thái</th>
                            <th>Ngày nhận</th>
                            <th class="w-1">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Status == ContactStatus.New ? "fw-bold" : "")">
                                @* Highlight new contacts *@
                                <td class="text-muted">@item.Id</td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span>@item.FullName</span>
                                        <small class="text-muted">@item.Email @(!string.IsNullOrEmpty(item.Phone) ? $"- {item.Phone}" : "")</small>
                                    </div>
                                </td>
                                <td>@item.Subject</td>
                                <td class="text-center">
                                    @switch (item.Status)
                                    {
                                        case ContactStatus.New:
                                            <span class="badge bg-primary-lt">Mới</span>
                                            break;
                                        case ContactStatus.Read:
                                            <span class="badge bg-info-lt">Đã đọc</span>
                                            break;
                                        case ContactStatus.Replied:
                                            <span class="badge bg-purple-lt">Đã trả lời</span>
                                            break;
                                        case ContactStatus.InProgress:
                                            <span class="badge bg-yellow-lt">Đang xử lý</span>
                                            break;
                                        case ContactStatus.Resolved:
                                            <span class="badge bg-success-lt">Đã giải quyết</span>
                                            break;
                                        case ContactStatus.Spam:
                                            <span class="badge bg-danger-lt">Spam</span>
                                            break;
                                        case ContactStatus.Archived:
                                            <span class="badge bg-secondary-lt">Lưu trữ</span>
                                            break;
                                        default:
                                            <span class="badge">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-list flex-nowrap">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-secondary" title="Xem chi tiết"> <i class="ti ti-eye"></i> </a>
                                        <button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn" title="Xóa"
                                                data-id="@item.Id" data-name="Liên hệ của @item.FullName" data-delete-url="@Url.Action("Delete", "Contact")">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @* Pagination *@
        }
    </div>
</div>

