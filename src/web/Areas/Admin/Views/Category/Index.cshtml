@using X.PagedList.Mvc.Core
@using X.PagedList
@using web.Areas.Admin.ViewModels.Category
@using shared.Extensions

@model CategoryIndexViewModel
@{
	ViewData["Title"] = "Quản lý Danh mục - Hệ thống quản trị";
	ViewData["PageTitle"] = "Danh sách Danh mục";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("Danh mục", Url.Action(nameof(Index)) ?? "/Admin/Category")
		};
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" asp-route-type="@((int)(Model.Filter.Type ?? shared.Enums.CategoryType.Product))" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm Danh mục
		</a>
	</div>
}

<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-4">
				<label asp-for="Filter.SearchTerm" class="form-label"></label>
				<div class="input-group">
					<input asp-for="Filter.SearchTerm" class="form-control" placeholder="Tìm tên, mô tả...">
					<button class="btn btn-icon" type="button" id="clearSearch" title="Xóa tìm kiếm"><i class="ti ti-x"></i></button>
				</div>
			</div>
			<div class="col-md-3">
				<label asp-for="Filter.Type" class="form-label"></label>
				<select asp-for="Filter.Type" asp-items="@Model.Filter.TypeOptions" class="form-select">
					<option value="">-- Tất cả loại --</option>
				</select>
			</div>
			<div class="col-md-2">
				<label asp-for="Filter.IsActive" class="form-label"></label>
				<select asp-for="Filter.IsActive" asp-items="@Model.Filter.StatusOptions" class="form-select"></select>
			</div>
			<div class="col-md-1">
				<label class="form-label"> </label>
				<button type="submit" class="btn btn-primary w-100"><i class="ti ti-filter me-1"></i> Lọc</button>
			</div>
			<div class="col-md-2">
				<label class="form-label"> </label>
				<a asp-action="Index" class="btn btn-outline-secondary w-100"><i class="ti ti-reload me-2"></i> Đặt lại</a>
			</div>
		</form>
	</div>
</div>

<div class="card">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h3 class="card-title mb-0">Danh sách Danh mục</h3>
		@if (Model.Categories.TotalItemCount > 0)
		{
			<small class="text-muted">Hiển thị @Model.Categories.FirstItemOnPage-@Model.Categories.LastItemOnPage trên tổng số @Model.Categories.TotalItemCount danh mục</small>
		}
	</div>
	<div class="card-body p-0">
		@if (!Model.Categories.Any())
		{
			<div class="empty">
				<div class="empty-icon"><i class="ti ti-folder-off fs-1 text-muted"></i></div>
				<p class="empty-title">Không tìm thấy danh mục nào</p>
				<p class="empty-subtitle text-muted">
					@if (string.IsNullOrWhiteSpace(Model.Filter.SearchTerm) && !Model.Filter.IsActive.HasValue && !Model.Filter.Type.HasValue)
					{
						@:Hãy thêm danh mục đầu tiên.
					}
					else
					{
						@:Không có danh mục nào khớp với tiêu chí lọc của bạn. Hãy thử lại hoặc đặt lại bộ lọc.
					}
				</p>
				<div class="empty-action">
					<a asp-action="Create" asp-route-type="@((int)(Model.Filter.Type ?? shared.Enums.CategoryType.Product))" class="btn btn-primary"> <i class="ti ti-plus me-2"></i> Thêm danh mục </a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th>Tên danh mục</th>
							<th style="width: 15%;">Danh mục cha</th>
							<th style="width: 15%;">Loại</th>
							<th style="width: 10%;">Slug</th>
							<th class="text-center" style="width: 5%;">Thứ tự</th>
							<th class="text-center" style="width: 5%;">Số mục</th>
							<th class="text-center" style="width: 10%;">Trạng thái</th>
							<th class="w-1">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Categories)
						{
							<tr>
								<td>
									<span class="fw-medium">@item.Name</span>
								</td>
								<td class="text-muted">@item.ParentName</td>
								<td class="text-muted">@item.Type.GetDisplayName()</td>
								<td class="text-muted"><code>@item.Slug</code></td>
								<td class="text-muted text-center">@item.OrderIndex</td>
								<td class="text-muted text-center">
									<span class="badge bg-blue-lt">@item.ItemCount</span>
								</td>
								<td class="text-muted text-center">
									@if (item.IsActive)
									{
										<span class="badge bg-success-lt">Kích hoạt</span>
									}
									else
									{
										<span class="badge bg-danger-lt">Ẩn</span>
									}
								</td>
								<td class="text-muted">
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa"><i class="ti ti-pencil"></i></a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												title="Xóa"
												data-id="@item.Id"
												data-name="@item.Name"
												data-delete-url="@Url.Action("Delete", "Category")">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
	@if (Model.Categories.PageCount > 1)
	{
		<div class="card-footer">
			<div class="d-flex justify-content-center">
				@Html.PagedListPager(
								Model.Categories,
								page => Url.Action("Index", new
								{
									page,
									Model.Filter.SearchTerm,
									Model.Filter.Type,
									Model.Filter.IsActive
								}),
								new PagedListRenderOptions
			{
				UlElementClasses = new[] { "pagination mb-0" },
				LiElementClasses = new[] { "page-item" },
				PageClasses = new[] { "page-link" },
				DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
				DisplayLinkToNextPage = PagedListDisplayMode.Always,
				ActiveLiElementClass = "active",
				LinkToPreviousPageFormat = "<span aria-hidden=\"true\">«</span>",
				LinkToNextPageFormat = "<span aria-hidden=\"true\">»</span>",
			})
			</div>
		</div>
	}
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#clearSearch').on('click', function() {
				$('#Filter_SearchTerm').val('');
			});
		});
	</script>
 }