@model FAQViewModel

<div class="row g-3">
	<div class="col-md-8">
		<div class="form-group mb-3">
			<label asp-for="Question" class="form-label required"></label>
			<div class="input-group">
				<span class="input-group-text">
					<i class="ti ti-help"></i>
				</span>
				<input asp-for="Question" class="form-control" placeholder="Nhập câu hỏi thường gặp..." />
			</div>
			<span asp-validation-for="Question" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="Answer" class="form-label required"></label>
			<textarea asp-for="Answer" class="form-control wysiwyg" rows="10"
				placeholder="Nhập câu trả lời chi tiết..."></textarea>
			<span asp-validation-for="Answer" class="text-danger"></span>
		</div>
	</div>
	<div class="col-md-4">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">
					<i class="ti ti-settings me-2"></i>Cài đặt FAQ
				</h3>
			</div>
			<div class="card-body">
				<div class="form-group mb-3">
					<label asp-for="CategoryId" class="form-label required"></label>
					<div class="input-group">
						<span class="input-group-text">
							<i class="ti ti-category"></i>
						</span>
						<select asp-for="CategoryId" asp-items="@Model.Categories"
							class="form-select tom-selected" autocomplete="off" ></select>
					</div>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
					<small class="form-hint">
						<i class="ti ti-info-circle me-1"></i>Chọn một danh mục liên quan.
					</small>
				</div>
				<div class="form-group mb-3">
					<label asp-for="OrderIndex" class="form-label"></label>
					<div class="input-group">
						<span class="input-group-text">
							<i class="ti ti-sort-ascending"></i>
						</span>
						<input type="number" asp-for="OrderIndex" class="form-control" min="0" placeholder="0" />
					</div>
					<span asp-validation-for="OrderIndex" class="text-danger"></span>
					<small class="form-hint">
						<i class="ti ti-info-circle me-1"></i>Số nhỏ hơn hiển thị trước.
					</small>
				</div>
				<div class="form-group mb-0">
					<div class="form-label">Trạng thái hiển thị</div>
					<label class="form-check form-switch">
						<input class="form-check-input" type="checkbox" asp-for="IsActive" role="switch">
						<span class="form-check-label">
							<i class="ti ti-eye me-1"></i>Hiển thị FAQ
						</span>
					</label>
					<span asp-validation-for="IsActive" class="text-danger"></span>
					<small class="form-hint">
						<i class="ti ti-info-circle me-1"></i>Bật để hiển thị FAQ trên trang web.
					</small>
				</div>
			</div>
		</div>

		<div class="card mt-3">
			<div class="card-body">
				<div class="d-flex align-items-center mb-3">
					<div class="avatar avatar-md bg-blue-lt me-3">
						<i class="ti ti-info-circle"></i>
					</div>
					<div>
						<h4 class="mb-0">Hướng dẫn</h4>
						<p class="text-muted mb-0">Cách viết FAQ hiệu quả</p>
					</div>
				</div>
				<ul class="list-unstyled mb-0">
					<li class="d-flex align-items-center mb-2">
						<i class="ti ti-check text-success me-2"></i>
						<span>Viết câu hỏi ngắn gọn, rõ ràng</span>
					</li>
					<li class="d-flex align-items-center mb-2">
						<i class="ti ti-check text-success me-2"></i>
						<span>Trả lời đầy đủ, dễ hiểu</span>
					</li>
					<li class="d-flex align-items-center mb-2">
						<i class="ti ti-check text-success me-2"></i>
						<span>Sử dụng ngôn ngữ đơn giản</span>
					</li>
					<li class="d-flex align-items-center">
						<i class="ti ti-check text-success me-2"></i>
						<span>Cập nhật thường xuyên</span>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>