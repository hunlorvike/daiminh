@using X.PagedList.Mvc.Core
@using X.PagedList
@using web.Areas.Admin.ViewModels.FAQ

@model FAQIndexViewModel
@{
	ViewData["Title"] = "Quản lý Hỏi Đáp (FAQ) - Hệ thống quản trị";
	ViewData["PageTitle"] = "Danh sách FAQ";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("FAQ", Url.Action(nameof(Index)) ?? "Admin/FAQ")
		};
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm FAQ
		</a>
	</div>
}

<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-5">
				<label asp-for="Filter.SearchTerm" class="form-label"></label>
				<div class="input-group">
					<input asp-for="Filter.SearchTerm" class="form-control" placeholder="Tìm câu hỏi hoặc câu trả lời...">
					<button class="btn btn-icon" type="button" id="clearSearch" title="Xóa tìm kiếm">
						<i class="ti ti-x"></i>
					</button>
				</div>
			</div>
			<div class="col-md-4">
				<label asp-for="Filter.CategoryId" class="form-label"></label>
				<select asp-for="Filter.CategoryId" asp-items="@Model.Filter.Categories" class="form-select"></select>
			</div>
			<div class="col-md-1">
				<button type="submit" class="btn btn-primary w-100">
					<i class="ti ti-filter me-1"></i> Lọc
				</button>
			</div>
			<div class="col-md-2">
				<a asp-action="Index" class="btn btn-outline-secondary w-100">
					<i class="ti ti-reload me-2"></i> Đặt lại
				</a>
			</div>
		</form>
	</div>
</div>

<div class="card">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h3 class="card-title mb-0">Danh sách FAQ</h3>
		@if (Model.FAQs.TotalItemCount > 0)
		{
			<small class="text-muted">Hiển thị @Model.FAQs.FirstItemOnPage-@Model.FAQs.LastItemOnPage trên tổng số @Model.FAQs.TotalItemCount câu hỏi</small>
		}
	</div>
	<div class="card-body p-0">
		@if (!Model.FAQs.Any())
		{
			<div class="empty">
				<div class="empty-icon"><i class="ti ti-help-circle fa-5x text-muted"></i></div>
				<p class="empty-title">Không tìm thấy FAQ nào</p>
				<p class="empty-subtitle text-muted">
					@if (string.IsNullOrWhiteSpace(Model.Filter.SearchTerm) && !Model.Filter.CategoryId.HasValue)
					{
						@:Hãy thêm câu hỏi thường gặp đầu tiên.
					}
					else
					{
						@:Không có FAQ nào khớp với tiêu chí lọc của bạn. Hãy thử lại hoặc đặt lại bộ lọc.
					}
				</p>
				<div class="empty-action">
					@if (string.IsNullOrWhiteSpace(Model.Filter.SearchTerm) && !Model.Filter.CategoryId.HasValue)
					{
						<a asp-action="Create" class="btn btn-primary"> <i class="ti ti-plus me-2"></i> Thêm FAQ </a>
					}
					else
					{
						<a asp-action="Index" class="btn btn-outline-secondary">
							<i class="ti ti-reload me-2"></i> Đặt lại bộ lọc
						</a>
					}
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th class="w-1">ID</th>
							<th>Câu hỏi</th>
							<th style="width: 25%;">Danh mục</th>
							<th class="text-center" style="width: 5%;">Thứ tự</th>
							<th class="text-center" style="width: 10%;">Trạng thái</th>
							<th style="width: 15%;">Cập nhật lúc</th>
							<th class="w-1">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.FAQs)
						{
							<tr>
								<td class="text-muted">
									@item.Id
								</td>
								<td class="text-muted">
									<span class="fw-medium text-truncate d-inline-block" style="max-width: 350px;" title="@item.Question">@item.Question</span>
								</td>
								<td class="text-muted">
									<span title="@item.CategoryName">@item.CategoryName</span>
								</td>
								<td class="text-muted text-center">
									@item.OrderIndex
								</td>
								<td class="text-muted text-center">
									@if (item.IsActive)
									{
										<span class="badge bg-success-lt">Hiển thị</span>
									}
									else
									{
										<span class="badge bg-danger-lt">Ẩn</span>
									}
								</td>
								<td class="text-muted">
									<span title="@item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm:ss")">
										@item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
									</span>
								</td>
								<td class="text-muted">
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa">
											<i class="ti ti-pencil"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												title="Xóa"
												data-id="@item.Id"
												data-name="@item.Question"
												data-delete-url="@Url.Action("Delete", "FAQ")">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
	@if (Model.FAQs.PageCount > 1)
	{
		<div class="card-footer">
			<div class="d-flex align-items-center justify-content-center">
				@Html.PagedListPager(
								Model.FAQs,
								page => Url.Action("Index", new
								{
									page,
									searchTerm = Model.Filter.SearchTerm,
									categoryId = Model.Filter.CategoryId
								}),
								new PagedListRenderOptions
			{
				UlElementClasses = new[] { "pagination mb-0" },
				LiElementClasses = new[] { "page-item" },
				PageClasses = new[] { "page-link" },
				DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
				DisplayLinkToNextPage = PagedListDisplayMode.Always,
				ActiveLiElementClass = "active",
				LinkToPreviousPageFormat = "<span aria-hidden=\"true\">«</span>",
				LinkToNextPageFormat = "<span aria-hidden=\"true\">»</span>",
			})
			</div>
		</div>
	}
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#clearSearch').on('click', function() {
				$('#Filter_SearchTerm').val('');
			});
		});
	</script>
 }
