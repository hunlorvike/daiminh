@using web.Areas.Admin.ViewModels.FAQ
@model FAQViewModel
@{
    ViewData["Title"] = "Thêm FAQ mới";
    // Breadcrumbs set in Controller
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Nội dung FAQ</h3>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
            <partial name="_FAQFormFields" model="Model" />
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-link">Hủy</a>
            <button type="submit" class="btn btn-primary">
                <i class="ti ti-device-floppy me-2"></i> Lưu FAQ
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize Tom Select
            new TomSelect('.tom-select-multiple',{
                plugins: ['remove_button'],
                create: false, // Assuming you only select existing categories
                placeholder: 'Chọn danh mục...'
            });

             // Initialize Summernote
            $('.summernote-editor').summernote({
                placeholder: 'Nhập câu trả lời...',
                tabsize: 2,
                height: 250, // Adjust as needed
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });
        });
    </script>
}