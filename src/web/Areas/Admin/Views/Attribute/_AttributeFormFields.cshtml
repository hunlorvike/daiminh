@using web.Areas.Admin.ViewModels.Attribute
@model AttributeViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions {
	public string GetAntiXsrfRequestToken()
	{
		return Xsrf.GetAndStoreTokens(Context).RequestToken!;
	}
}

<div class="card">
	<div class="card-header">
		<h3 class="card-title">
			<i class="ti ti-adjustments-alt me-2"></i>Thông tin Thuộc tính
		</h3>
	</div>
	<div class="card-body">
		<div class="row g-3">
			<div class="col-md-6">
				<div class="form-group mb-3">
					<label asp-for="Name" class="form-label required"></label>
					<div class="input-group">
						<span class="input-group-text">
							<i class="ti ti-forms"></i>
						</span>
						<input asp-for="Name" class="form-control" placeholder="Tên thuộc tính" />
					</div>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group mb-3">
					<label asp-for="Slug" class="form-label required"></label>
					<div class="input-group">
						<span class="input-group-text">
							<i class="ti ti-link"></i>
						</span>
						<input asp-for="Slug" class="form-control" placeholder="ten-thuoc-tinh" />
						<button class="btn btn-outline-secondary" type="button" id="generateSlugButton"
							title="Tạo slug tự động">
							<i class="ti ti-refresh"></i>
						</button>
					</div>
					<span asp-validation-for="Slug" class="text-danger"></span>
					<small class="form-hint">
						<i class="ti ti-info-circle me-1"></i>Dùng cho URL (chỉ chứa chữ cái thường, số và dấu gạch
						ngang). Phải là duy nhất.
					</small>
				</div>
			</div>
		</div>
		<div class="form-group mb-3">
			<label asp-for="Description" class="form-label"></label>
			<div class="input-group">
				<span class="input-group-text">
					<i class="ti ti-notes"></i>
				</span>
				<textarea asp-for="Description" class="form-control" rows="3"
					placeholder="Mô tả về thuộc tính này..."></textarea>
			</div>
			<span asp-validation-for="Description" class="text-danger"></span>
			<small class="form-hint">Mô tả ngắn gọn về thuộc tính này và cách sử dụng</small>
		</div>

		<div class="alert alert-info d-flex mt-4" role="alert">
			<div class="alert-icon">
				<i class="ti ti-info-circle"></i>
			</div>
			<div>
				<h4 class="alert-title">Thông tin về thuộc tính</h4>
				<div class="text-muted">
					Thuộc tính giúp phân loại sản phẩm theo các đặc điểm như màu sắc, kích thước, chất liệu, v.v.
					Sau khi tạo thuộc tính, bạn cần thêm các giá trị cho thuộc tính đó.
				</div>
			</div>
		</div>
	</div>
	<div class="card-footer d-flex justify-content-end bg-transparent border-top pt-3">
		<a asp-action="Index" class="btn btn-link">
			<i class="ti ti-x me-1"></i>Hủy
		</a>
		<button type="submit" class="btn btn-primary ms-2">
			<i class="ti ti-device-floppy me-2"></i> @(Model.Id > 0 ? "Cập nhật" : "Lưu") Thuộc tính
		</button>
	</div>
</div>