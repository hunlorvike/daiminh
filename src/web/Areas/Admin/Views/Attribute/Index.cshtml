@using X.PagedList.Mvc.Core
@using X.PagedList
@using web.Areas.Admin.ViewModels.Attribute

@model AttributeIndexViewModel
@{
	ViewData["Title"] = "Quản lý Thuộc tính - Hệ thống quản trị";
	ViewData["PageTitle"] = "Danh sách Thuộc tính";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("Thuộc tính", Url.Action(nameof(Index)) ?? "/Admin/Attribute")
		};
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm Thuộc tính
		</a>
	</div>
}

<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-4">
				<label asp-for="Filter.SearchTerm" class="form-label"></label>
				<div class="input-group">
					<input asp-for="Filter.SearchTerm" class="form-control" placeholder="Tìm tên, slug...">
					<button class="btn btn-icon" type="button" id="clearSearch" title="Xóa tìm kiếm"><i class="ti ti-x"></i></button>
				</div>
			</div>

			<div class="col-md-auto">
				<label class="form-label"> </label>
				<button type="submit" class="btn btn-primary w-100"><i class="ti ti-filter me-1"></i> Lọc</button>
			</div>
			<div class="col-md-auto">
				<label class="form-label"> </label>
				<a asp-action="Index" class="btn btn-outline-secondary w-100"><i class="ti ti-reload me-2"></i> Đặt lại</a>
			</div>
		</form>
	</div>
</div>

<div class="card">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h3 class="card-title mb-0">Danh sách Thuộc tính</h3>
		@if (Model.Attributes.TotalItemCount > 0)
		{
			<small class="text-muted">Hiển thị @Model.Attributes.FirstItemOnPage-@Model.Attributes.LastItemOnPage trên tổng số @Model.Attributes.TotalItemCount thuộc tính</small>
		}
	</div>
	<div class="card-body p-0">
		@if (!Model.Attributes.Any())
		{
			<div class="empty">
				<div class="empty-icon"><i class="ti ti-settings off fs-1 text-muted"></i></div> @* Assuming ti-settings icon exists *@
				<p class="empty-title">Không tìm thấy thuộc tính nào</p>
				<p class="empty-subtitle text-muted">
					@if (string.IsNullOrWhiteSpace(Model.Filter.SearchTerm))
					{
						@:Hãy thêm thuộc tính đầu tiên.
					}
					else
					{
						@:Không có thuộc tính nào khớp với tiêu chí lọc của bạn. Hãy thử lại hoặc đặt lại bộ lọc.
					}
				</p>
				<div class="empty-action">
					<a asp-action="Create" class="btn btn-primary"> <i class="ti ti-plus me-2"></i> Thêm thuộc tính </a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th>Tên thuộc tính</th>
							<th>Slug</th>
                            <th class="text-center">Giá trị</th>
							<th>Cập nhật</th>
							<th class="w-1">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Attributes)
						{
							<tr>
								<td>
									<span class="fw-medium">@item.Name</span>
								</td>
								<td class="text-muted"><code>@item.Slug</code></td>
                                <td class="text-center">
                                     @if (item.ValueCount > 0)
                                     {
                                        <a asp-area="Admin" asp-controller="AttributeValue" asp-action="Index" asp-route-AttributeId="@item.Id" class="badge bg-blue-lt" title="Xem các giá trị">
                                            @item.ValueCount
                                        </a>
                                     }
                                     else
                                     {
                                         <span class="text-muted">0</span>
                                     }
                                </td>
								<td>
									@if (item.UpdatedAt.HasValue)
									{
										<span>@item.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
									}
									else
									{
										<span class="text-muted">N/A</span>
									}
								</td>
								<td class="text-muted">
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa"><i class="ti ti-pencil"></i></a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												title="Xóa"
												data-id="@item.Id"
												data-name="@item.Name"
												data-delete-url="@Url.Action("Delete", "Attribute")">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
	@if (Model.Attributes.PageCount > 1)
	{
		<div class="card-footer">
			<div class="d-flex justify-content-center">
				@Html.PagedListPager(
								Model.Attributes,
								page => Url.Action("Index", new
								{
									page,
									Model.Filter.SearchTerm
								}),
								new PagedListRenderOptions
			{
				UlElementClasses = new[] { "pagination mb-0" },
				LiElementClasses = new[] { "page-item" },
				PageClasses = new[] { "page-link" },
				DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
				DisplayLinkToNextPage = PagedListDisplayMode.Always,
				ActiveLiElementClass = "active",
				LinkToPreviousPageFormat = "<span aria-hidden=\"true\">«</span>",
				LinkToNextPageFormat = "<span aria-hidden=\"true\">»</span>",
			})
			</div>
		</div>
	}
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#clearSearch').on('click', function() {
				$('#Filter_SearchTerm').val('');
			});
		});
	</script>
}