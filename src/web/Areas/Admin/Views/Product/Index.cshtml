@using shared.Helpers
@using web.Areas.Admin.ViewModels.Product
@using shared.Enums 
@model IEnumerable<ProductListItemViewModel>
@{
	ViewData["Title"] = "Quản lý Sản phẩm";
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm sản phẩm
		</a>
	</div>
}

<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-3 col-sm-6">
				<label class="form-label">Tìm kiếm</label>
				<input type="text" class="form-control" placeholder="Tên, SKU..." name="searchTerm" value="@ViewBag.SearchTerm">
			</div>
			<div class="col-md-2 col-sm-6">
				<label class="form-label">Loại SP</label>
				<select class="form-select" name="typeId" asp-items="@ViewBag.ProductTypes" asp-route-value="@ViewBag.SelectedTypeId">
					<option value="">Tất cả</option>
				</select>
			</div>
			<div class="col-md-2 col-sm-6">
				<label class="form-label">Thương hiệu</label>
				<select class="form-select" name="brandId" asp-items="@ViewBag.Brands" asp-route-value="@ViewBag.SelectedBrandId">
					<option value="">Tất cả</option>
				</select>
			</div>
			<div class="col-md-2 col-sm-6">
				<label class="form-label">Trạng thái</label>
				<select class="form-select" name="status" asp-items="@ViewBag.Statuses" asp-route-value="@ViewBag.SelectedStatus">
					<option value="">Tất cả</option>
				</select>
			</div>
			<div class="col-md-1 col-sm-6">
				<button type="submit" class="btn btn-primary w-100">Lọc</button>
			</div>
			<div class="col-md-2 col-sm-6">
				<a asp-action="Index" class="btn btn-outline-secondary w-100">Đặt lại</a>
			</div>
		</form>
	</div>
</div>

<!-- Content Table -->
<div class="card">
	<div class="card-header">
		<h3 class="card-title">Danh sách Sản phẩm</h3>
	</div>
	<div class="card-body p-0">
		@if (!Model.Any())
		{
			<div class="empty">
				<div class="empty-img">
					<i class="ti ti-package fa-5x text-muted"></i>
				</div>

				<p class="empty-title">Không tìm thấy sản phẩm nào</p>
				<p class="empty-subtitle text-muted">Hãy thêm sản phẩm đầu tiên.</p>
				<div class="empty-action">
					<a asp-action="Create" class="btn btn-primary"> <i class="ti ti-plus me-2"></i> Thêm sản phẩm </a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th class="w-1">STT</th>
							<th style="width: 7%;">Ảnh</th>
							<th>Tên sản phẩm</th>
							<th>Loại</th>
							<th>Thương hiệu</th>
							<th class="text-center">Trạng thái</th>
							<th class="text-center">Nổi bật</th>
							<th class="text-center">Lượt xem</th>
							<th class="w-1">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@{
							int index = 1;
						}
						@foreach (var item in Model)
						{
							<tr>
								<td class="text-muted">@(index++)</td>
								<td>
									<img src="@MediaUrlHelper.GetMinioUrl(item.MainImageUrl, "/img/placeholder.svg")"
										 alt="@item.Name"
										 class="avatar avatar-md object-fit-contain" />
								</td>
								<td>
									<a asp-action="Edit" asp-route-id="@item.Id" class="fw-medium">@item.Name</a>
									@* Optional: Display SKU or Short Desc *@
									@* <small class="text-muted d-block">SKU: @item.Sku</small> *@
								</td>
								<td class="text-muted">@item.ProductTypeName</td>
								<td class="text-muted">@item.BrandName</td>
								<td class="text-center">
									@switch (item.Status)
									{
										case PublishStatus.Published:
											<span class="badge bg-success-lt">Xuất bản</span>
											break;
										case PublishStatus.Draft:
											<span class="badge bg-secondary-lt">Nháp</span>
											break;
										case PublishStatus.Scheduled:
											<span class="badge bg-warning-lt">Lên lịch</span>
											break;
										case PublishStatus.Archived:
											<span class="badge bg-dark-lt">Lưu trữ</span>
											break;
										default:
											<span class="badge">@item.Status</span>
											break;
									}
								</td>
								<td class="text-center">
									@if (item.IsFeatured)
									{
										<i class="ti ti-star-filled text-warning" title="Nổi bật"></i>
									}
								</td>
								<td class="text-center text-muted">@item.ViewCount</td>
								<td>
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa">
											<i class="ti ti-pencil"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												title="Xóa"
												data-id="@item.Id"
												data-name="@item.Name"
												data-delete-url="@Url.Action("Delete", "Product")">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			@* Add Pagination here if needed *@
		}
	</div>
</div>

