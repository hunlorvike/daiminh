@using X.PagedList.Mvc.Core
@using web.Areas.Admin.ViewModels.Tag
@using shared.Extensions
@using shared.Enums
@using X.PagedList
@model IPagedList<TagListItemViewModel>
@{
	ViewData["Title"] = ViewData["PageTitle"];
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" asp-route-type="@ViewBag.TagType" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm @(((TagType)ViewBag.TagType).GetDisplayName().ToLowerInvariant())
		</a>
	</div>
}

<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-4">
				<label class="form-label">Loại thẻ</label>
				@Html.DropDownList("type", (IEnumerable<SelectListItem>)ViewBag.TagTypes, new { @class = "form-select" })
			</div>
			<div class="col-md-4">
				<label class="form-label">Tìm kiếm</label>
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Tìm thẻ..." name="searchTerm" value="@ViewBag.SearchTerm">
					<button class="btn btn-icon" type="button" id="clearSearch">
						<i class="ti ti-x"></i>
					</button>
				</div>
			</div>
			<div class="col-md-2">
				<button type="submit" class="btn btn-primary w-100">
					<i class="ti ti-search me-2"></i> Lọc
				</button>
			</div>
			<div class="col-md-2">
				<a href="@Url.Action("Index", new { type = ViewBag.TagType })" class="btn btn-outline-secondary w-100">
					<i class="ti ti-reload me-2"></i> Đặt lại
				</a>
			</div>
		</form>
	</div>
</div>

<div class="card">
	<div class="card-header">
		<h3 class="card-title">@ViewData["PageTitle"]</h3>
	</div>
	<div class="card-body p-0">
		@if (!Model.Any())
		{
			<div class="empty">
				<div class="empty-icon">
					<i class="ti ti-tags fa-5x text-muted"></i>
				</div>
				<p class="empty-title">Không tìm thấy @(((TagType)ViewBag.TagType).GetDisplayName().ToLowerInvariant()) nào</p>
				<p class="empty-subtitle text-muted">
					Hãy tạo @(((TagType)ViewBag.TagType).GetDisplayName().ToLowerInvariant()) để phân loại nội dung của bạn
				</p>
				<div class="empty-action">
					<a asp-action="Create" asp-route-type="@ViewBag.TagType" class="btn btn-primary">
						<i class="ti ti-plus"></i> Thêm @(((TagType)ViewBag.TagType).GetDisplayName().ToLowerInvariant())
					</a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th>Tên thẻ</th>
							<th style="width: 20%">Slug</th>
							<th style="width: 15%">Số mục</th>
							<th style="width: 15%">Cập nhật lúc</th>
							<th style="width: 15%">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<div class="d-flex flex-column">
										<span class="font-weight-medium">@item.Name</span>
										@if (!string.IsNullOrEmpty(item.Description))
										{
											<small class="text-muted text-truncate" style="max-width: 300px;" title="@item.Description">@item.Description</small>
										}
									</div>
								</td>
								<td>@item.Slug</td>
								<td>@item.ItemCount mục</td>
								<td>@item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
								<td>
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa @item.Type.GetDisplayName()">
											@* Thêm title *@
											<i class="ti ti-pencil"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												data-id="@item.Id"
												data-name="@item.Name"
												data-type-name="@item.Type.GetDisplayName().ToLowerInvariant()"
												data-delete-url="@Url.Action("Delete", "Tag")"
												title="Xóa @item.Type.GetDisplayName()">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
	@if (Model.PageCount > 1)
	{
		<div class="card-footer">
			<div class="d-flex justify-content-center">
				@Html.PagedListPager(
								Model,
								page => Url.Action("Index", new { page, type = ViewBag.TagType, searchTerm = ViewBag.SearchTerm }),
								new PagedListRenderOptions
			{
				UlElementClasses = new[] { "pagination mb-0" },
				LiElementClasses = new[] { "page-item" },
				PageClasses = new[] { "page-link" },
				DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
				DisplayLinkToNextPage = PagedListDisplayMode.Always,
			})
			</div>
		</div>
	}
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#clearSearch').on('click', function() {
				$('input[name="searchTerm"]').val('');
			});
		});
	</script>
}
