@using X.PagedList.Mvc.Core
@using X.PagedList
@using web.Areas.Admin.ViewModels.Tag
@using shared.Extensions
@using shared.Enums

@model TagIndexViewModel
@{
	ViewData["Title"] = "Quản lý Thẻ - Hệ thống quản trị";
	ViewData["PageTitle"] = "Danh sách Thẻ";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("Thẻ", Url.Action(nameof(Index)) ?? "/Admin/Tag")
		};
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" asp-route-type="@((int)(Model.Filter.Type ?? shared.Enums.TagType.Product))" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm Danh mục
		</a>
	</div>
}

<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-6">
				<label asp-for="Filter.SearchTerm" class="form-label"></label>
				<div class="input-group">
					<input asp-for="Filter.SearchTerm" class="form-control" placeholder="Tìm thẻ...">
					<button class="btn btn-icon" type="button" id="clearSearch" title="Xóa tìm kiếm">
						<i class="ti ti-x"></i>
					</button>
				</div>
			</div>
			<div class="col-md-3">
				<label asp-for="Filter.Type" class="form-label"></label>
				<select asp-for="Filter.Type" asp-items="Model.Filter.TagTypes" class="form-select"></select>
			</div>
			<div class="col-md-1">
				<button type="submit" class="btn btn-primary w-100">
					<i class="ti ti-search me-2"></i> Lọc
				</button>
			</div>
			<div class="col-md-2">
                 <a asp-action="Index" asp-route-type="@Model.Filter.Type" class="btn btn-outline-secondary w-100">
                    <i class="ti ti-reload me-2"></i> Đặt lại tìm kiếm
                 </a>
			</div>
		</form>
	</div>
</div>

<div class="card">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h3 class="card-title mb-0">@ViewData["PageTitle"]</h3>
		@if (Model.Tags.TotalItemCount > 0)
		{
			<small class="text-muted">Hiển thị @Model.Tags.FirstItemOnPage-@Model.Tags.LastItemOnPage trên tổng số @Model.Tags.TotalItemCount thẻ</small>
		}
	</div>
	<div class="card-body p-0">
		@if (!Model.Tags.Any())
		{
			<div class="empty">
				<div class="empty-icon"><i class="ti ti-folder-off fa-5x text-muted"></i></div>
				<p class="empty-title">Không tìm thấy thẻ nào</p>
				<p class="empty-subtitle text-muted">
					@if (string.IsNullOrWhiteSpace(Model.Filter.SearchTerm) && !Model.Filter.Type.HasValue)
					{
						@:Hãy thêm thẻ đầu tiên.
					}
					else
					{
						@:Không có thẻ nào khớp với tiêu chí lọc của bạn. Hãy thử lại hoặc đặt lại bộ lọc.
					}
				</p>
				<div class="empty-action">
					<a asp-action="Create" asp-route-type="@((int)(Model.Filter.Type ?? shared.Enums.TagType.Product))" class="btn btn-primary"> <i class="ti ti-plus me-2"></i> Thêm danh mục </a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th>Tên thẻ</th>
							<th style="width: 20%">Slug</th>
							<th style="width: 15%">Số mục</th>
							<th style="width: 15%">Cập nhật lúc</th>
							<th style="width: 15%">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Tags)
						{
							var itemTypeNameLower = item.Type.GetDisplayName().ToLowerInvariant();
							<tr>
								<td>
									<div class="d-flex flex-column">
										<span class="fw-medium">@item.Name</span>
										@if (!string.IsNullOrEmpty(item.Description))
										{
											<small class="text-muted text-truncate d-inline-block" style="max-width: 300px;" title="@item.Description">@item.Description</small>
										}
									</div>
								</td>
								<td class="text-muted">@item.Slug</td>
								<td class="text-muted">@item.ItemCount mục</td>
								<td class="text-muted" title="@item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm:ss")">@item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
								<td>
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa @itemTypeNameLower">
											<i class="ti ti-pencil"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												data-id="@item.Id"
												data-name="@item.Name"
												data-type-name="@itemTypeNameLower"
												data-delete-url="@Url.Action("Delete", "Tag")"
												title="Xóa @itemTypeNameLower">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
	@if (Model.Tags.PageCount > 1)
	{
		<div class="card-footer">
			<div class="d-flex justify-content-center">
				@Html.PagedListPager(
								Model.Tags,
								page => Url.Action("Index", new
								{
									page,
									Type = Model.Filter.Type,
									SearchTerm = Model.Filter.SearchTerm
								}),
								new PagedListRenderOptions
			{
				UlElementClasses = new[] { "pagination mb-0" },
				LiElementClasses = new[] { "page-item" },
				PageClasses = new[] { "page-link" },
				DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
				DisplayLinkToNextPage = PagedListDisplayMode.Always,
				ActiveLiElementClass = "active",
				LinkToPreviousPageFormat = "<span aria-hidden=\"true\">«</span>",
				LinkToNextPageFormat = "<span aria-hidden=\"true\">»</span>",
			})
			</div>
		</div>
	}
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#clearSearch').on('click', function() {
				$('#Filter_SearchTerm').val('');
			});
		});
	</script>
}
