@using web.Areas.Admin.ViewModels.Newsletter
@using web.Extensions
@model NewsletterViewModel

<div class="form-group mb-3">
	<label asp-for="Email" class="form-label required"></label>
	<div class="input-group">
		<span class="input-group-text">
			<i class="ti ti-mail"></i>
		</span>
		<input asp-for="Email" class="form-control" type="email" placeholder="example@domain.com" />
	</div>
	<span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<label asp-for="Name" class="form-label"></label>
	<div class="input-group">
		<span class="input-group-text">
			<i class="ti ti-user"></i>
		</span>
		<input asp-for="Name" class="form-control" placeholder="Tên người đăng ký (tùy chọn)" />
	</div>
	<span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group mb-3">
	<div class="form-label">Trạng thái đăng ký</div>
	<label class="form-check form-switch">
		<input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
		<span class="form-check-label">
			<i class="ti ti-activity me-1"></i>Đang hoạt động (chưa hủy đăng ký)
		</span>
	</label>
	<span asp-validation-for="IsActive" class="text-danger"></span>
	<small class="form-hint d-block">
		<i class="ti ti-info-circle me-1"></i>Bỏ chọn nếu muốn hủy đăng ký thủ công.
	</small>
</div>

@if (Model.Id > 0)
{
	<div class="card mt-4">
		<div class="card-header">
			<h3 class="card-title">
				<i class="ti ti-info-circle me-2"></i>Thông tin bổ sung (Chỉ xem)
			</h3>
		</div>
		<div class="card-body">
			<div class="row g-3">
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="IpAddress" class="form-label"></label>
						<div class="input-group">
							<span class="input-group-text">
								<i class="ti ti-device-desktop"></i>
							</span>
							<input asp-for="IpAddress" class="form-control" readonly disabled />
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="ConfirmedAt" class="form-label"></label>
						<div class="input-group">
							<span class="input-group-text">
								<i class="ti ti-circle-check"></i>
							</span>
							<input class="form-control" type="text" value="@Html.ToLocalTime(Model.ConfirmedAt, "Asia/Ho_Chi_Minh","dd/MM/yyyy HH:mm")" readonly disabled />
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="UnsubscribedAt" class="form-label"></label>
						<div class="input-group">
							<span class="input-group-text">
								<i class="ti ti-circle-x"></i>
							</span>
							<input class="form-control" type="text" value="@Html.ToLocalTime(Model.UnsubscribedAt, "Asia/Ho_Chi_Minh","dd/MM/yyyy HH:mm")" readonly disabled />
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="CreatedAt" class="form-label"></label>
						<div class="input-group">
							<span class="input-group-text">
								<i class="ti ti-calendar-event"></i>
							</span>
							<input class="form-control" type="text" value="@Html.ToLocalTime(Model.CreatedAt, "Asia/Ho_Chi_Minh","dd/MM/yyyy HH:mm")" readonly disabled />
						</div>
					</div>
				</div>
				<div class="col-12">
					<div class="form-group">
						<label asp-for="UserAgent" class="form-label"></label>
						<div class="input-group">
							<span class="input-group-text">
								<i class="ti ti-browser"></i>
							</span>
							<textarea asp-for="UserAgent" class="form-control" rows="2" readonly disabled></textarea>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}