@using web.Areas.Admin.ViewModels.Newsletter
@model NewsletterViewModel
@{
	ViewData["Title"] = "Thêm Đăng ký Newsletter - Hệ thống quản trị";
	ViewData["PageTitle"] = "Thêm Đăng ký Newsletter";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("Newsletter", Url.Action(nameof(Index)) ?? "Admin/Newsletter"),
			("Thêm mới", "")
		};
}

<div class="card">
	<div class="card-header">
		<h3 class="card-title">@ViewData["PageTitle"]</h3>
	</div>
	<div class="card-body">
		<form asp-action="Create" method="post">
			@Html.AntiForgeryToken()

			<partial name="_NewsletterFormFields" model="Model" />

			<div class="card-footer text-end bg-transparent mt-3 p-0 border-top pt-3">
				<a asp-action="Index" class="btn btn-link">Hủy</a>
				<button type="submit" class="btn btn-primary ms-2">
					<i class="ti ti-device-floppy me-2"></i> Lưu đăng ký
				</button>
			</div>
		</form>
	</div>
</div>
