@model web.Areas.Admin.ViewModels.Newsletter.NewsletterViewModel

@{
	ViewData["Title"] = "Chi tiết đăng ký nhận tin - Hệ thống quản trị";
	ViewData["PageTitle"] = "Chi tiết đăng ký"; 
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Index" class="btn btn-outline-secondary d-sm-inline-block">
			<i class="ti ti-arrow-left me-2"></i> Quay lại
		</a>
		<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-edit me-2"></i> Sửa
		</a>
	</div>
}

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Thông tin đăng ký</h3>
		<div class="card-actions">
			<a href="mailto:@Model.Email" class="btn btn-sm btn-outline-info">
				<i class="ti ti-mail me-2"></i> Gửi Email
			</a>
		</div>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-6 mb-3">
				<label class="form-label fw-bold">Email:</label>
				<div class="form-control-plaintext"><a href="mailto:@Model.Email">@Model.Email</a></div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label fw-bold">Tên:</label>
				<div class="form-control-plaintext">@(Model.Name ?? "N/A")</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label fw-bold">Trạng thái:</label>
				<div class="form-control-plaintext">
					@if (Model.IsActive)
					{
						<span class="badge bg-green-lt">
							<i class="ti ti-check me-1"></i> Đang hoạt động
						</span>
					}
					else
					{
						<span class="badge bg-red-lt">
							<i class="ti ti-x me-1"></i> Đã hủy đăng ký
						</span>
					}
				</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label fw-bold">Ngày đăng ký:</label>
				<div class="form-control-plaintext" title="@Model.CreatedAt.ToString("F")">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label fw-bold">Ngày xác nhận:</label>
				<div class="form-control-plaintext" title="@(Model.ConfirmedAt?.ToString("F"))">@(Model.ConfirmedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa xác nhận")</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label fw-bold">Ngày hủy đăng ký:</label>
				<div class="form-control-plaintext" title="@(Model.UnsubscribedAt?.ToString("F"))">@(Model.UnsubscribedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa hủy")</div>
			</div>

			<hr class="my-3">

			<div class="col-md-6 mb-3">
				<label class="form-label text-muted">Địa chỉ IP (khi đăng ký):</label>
				<div class="form-control-plaintext">@(Model.IpAddress ?? "N/A")</div>
			</div>
			<div class="col-md-6 mb-3">
				<label class="form-label text-muted">User Agent (khi đăng ký):</label>
				<div class="form-control-plaintext text-muted small" title="@Model.UserAgent">@(Model.UserAgent ?? "N/A")</div>
			</div>
		</div>
	</div>
</div>

