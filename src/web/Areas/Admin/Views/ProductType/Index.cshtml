@using web.Areas.Admin.ViewModels.ProductType
@model IEnumerable<ProductTypeListItemViewModel>
@{
	ViewData["Title"] = "Quản lý loại sản phẩm - Hệ thống quản trị";
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm loại sản phẩm
		</a>
	</div>
}

<!-- Filter form -->
<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-4">
				<label class="form-label">Tìm kiếm</label>
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Tìm loại sản phẩm..." name="searchTerm" value="@(ViewBag.SearchTerm ?? string.Empty)">
					<button class="btn btn-icon" type="button" id="clearSearch">
						<i class="ti ti-x"></i>
					</button>
				</div>
			</div>
			<div class="col-md-3">
				<label class="form-label">Trạng thái</label>
				<select class="form-select" name="isActive" id="activeFilter">
					<option value="">Tất cả trạng thái</option>
					<option value="true" selected="@(ViewBag.SelectedIsActive == true ? "selected" : null)">Đang hoạt động</option>
					<option value="false" selected="@(ViewBag.SelectedIsActive == false ? "selected" : null)">Không hoạt động</option>
				</select>
			</div>
			<div class="col-md-2">
				<button type="submit" class="btn btn-primary w-100">
					<i class="ti ti-search me-2"></i> Lọc
				</button>
			</div>
			<div class="col-md-3">
				<a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
					<i class="ti ti-reload me-2"></i> Đặt lại
				</a>
			</div>
		</form>
	</div>
</div>

<!-- Content -->
<div class="card">
	<div class="card-header">
		<h3 class="card-title">Danh sách loại sản phẩm</h3>
	</div>
	<div class="card-body p-0">
		@if (!Model.Any())
		{
			<div class="empty">
				<div class="empty-img" style="font-size: 5rem;">
					<i class="ti ti-box-multiple text-muted"></i>
				</div>
				<p class="empty-title">Không tìm thấy loại sản phẩm nào</p>
				<p class="empty-subtitle text-muted">
					Hãy thêm loại sản phẩm để phân loại sản phẩm của bạn
				</p>
				<div class="empty-action">
					<a asp-action="Create" class="btn btn-primary">
						<i class="ti ti-plus me-2"></i> Thêm loại sản phẩm mới
					</a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th class="w-1">STT</th>
							<th style="width: 50px">Icon</th>
							<th>Tên loại sản phẩm</th>
							<th>Slug</th>
							<th>Mô tả</th>
							<th style="width: 10%">Số sản phẩm</th>
							<th style="width: 10%">Trạng thái</th>
							<th style="width: 15%">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@{
							int index = 1;
						}
						@foreach (var item in Model)
						{
							<tr>
								<td class="text-muted">@(index++)</td>
								<td class="text-center">
									@if (!string.IsNullOrEmpty(item.Icon))
									{
										<i class="@item.Icon" style="font-size: 1.5rem;"></i>
									}
									else
									{
										<i class="ti ti-box text-muted" style="font-size: 1.5rem;"></i>
									}
								</td>
								<td>@item.Name</td>
								<td>@item.Slug</td>
								<td>
									@if (!string.IsNullOrEmpty(item.Description))
									{
										<span>@item.Description</span>
									}
									else
									{
										<span class="text-muted">Không có mô tả</span>
									}
								</td>
								<td>
									<span class="badge bg-primary text-white">@item.ProductCount</span>
								</td>
								<td>
									<label class="form-check form-switch">
										<input class="form-check-input toggle-active" type="checkbox" data-id="@item.Id" @(item.IsActive ? "checked" : "")>
										<span class="form-check-label"></span>
									</label>
								</td>
								<td>
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa">
											<i class="ti ti-pencil"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item"
												data-bs-toggle="modal"
												data-bs-target="#delete-modal"
												data-id="@item.Id"
												data-name="@item.Name"
												data-delete-url="@Url.Action("Delete", "ProductType")"
												title="Xóa"
										@(item.ProductCount > 0 ? "disabled" : "")>
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			// Active toggle
			$('.toggle-active').on('change', function () {
				var checkbox = $(this); // Store reference
				var id = checkbox.data('id');
				var isChecked = checkbox.prop('checked');

				$.ajax({
					url: '@Url.Action("ToggleActive", "ProductType")',
					type: 'POST',
					data: { id: id },
					headers: { // Include AntiForgeryToken if needed
					   // RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
					},
					success: function (result) {
						if (result.success) {
							toastr.success('Cập nhật trạng thái thành công');
							// State already visually changed, do nothing more
						} else {
							toastr.error(result.message || 'Cập nhật trạng thái thất bại');
							// Revert the checkbox state visually
							checkbox.prop('checked', !isChecked);
						}
					},
					error: function () {
						toastr.error('Đã xảy ra lỗi khi gửi yêu cầu');
						// Revert the checkbox state visually
						checkbox.prop('checked', !isChecked);
					}
				});
			});

			// Delete item setup
			$('.delete-item').on('click', function () {
				var id = $(this).data('id');
				var name = $(this).data('name');
				var deleteUrl = $(this).data('delete-url');

				$('#delete-item-id').val(id);
				$('#delete-item-name').val(name);
				$('#delete-url').val(deleteUrl);
				$('#delete-modal-message').text('Bạn có chắc chắn muốn xóa loại sản phẩm "' + name + '" không? Thao tác này không thể hoàn tác.');
			});

			// Clear search
			$('#clearSearch').on('click', function() {
				$('input[name="searchTerm"]').val('');
				// Optionally reset the status filter as well
				// $('#activeFilter').val('');
				$('#filterForm').submit();
			});

			// Auto submit on filter change
			$('#activeFilter').on('change', function() {
				$('#filterForm').submit();
			});
		});
	</script>
}