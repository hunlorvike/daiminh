@using web.Areas.Admin.ViewModels.ProductType
@model IEnumerable<ProductTypeListItemViewModel>
@{
	ViewData["Title"] = "Quản lý loại sản phẩm - Hệ thống quản trị";
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm loại sản phẩm
		</a>
	</div>
}

<!-- Filter form -->
<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-4">
				<label class="form-label">Tìm kiếm</label>
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Tìm loại sản phẩm..." name="searchTerm" value="@(ViewBag.SearchTerm ?? string.Empty)">
					<button class="btn btn-icon" type="button" id="clearSearch">
						<i class="ti ti-x"></i>
					</button>
				</div>
			</div>
			<div class="col-md-3">
				<label class="form-label">Trạng thái</label>
				<select class="form-select" name="isActive" id="activeFilter">
					<option value="">Tất cả trạng thái</option>
					<option value="true" selected="@(ViewBag.SelectedIsActive == true ? "selected" : null)">Đang hoạt động</option>
					<option value="false" selected="@(ViewBag.SelectedIsActive == false ? "selected" : null)">Không hoạt động</option>
				</select>
			</div>
			<div class="col-md-2">
				<button type="submit" class="btn btn-primary w-100">
					<i class="ti ti-search me-2"></i> Lọc
				</button>
			</div>
			<div class="col-md-3">
				<a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
					<i class="ti ti-reload me-2"></i> Đặt lại
				</a>
			</div>
		</form>
	</div>
</div>

<!-- Content -->
<div class="card">
	<div class="card-header">
		<h3 class="card-title">Danh sách loại sản phẩm</h3>
	</div>
	<div class="card-body p-0">
		@if (!Model.Any())
		{
			<div class="empty">
				<div class="empty-icon" style="font-size: 3rem;">
					<i class="ti ti-package text-muted"></i>
				</div>
				<p class="empty-title">Không tìm thấy loại sản phẩm nào</p>
				<p class="empty-subtitle text-muted">
					Hãy thêm loại sản phẩm đầu tiên của bạn.
				</p>
				<div class="empty-action">
					<a asp-action="Create" class="btn btn-primary">
						<i class="ti ti-plus me-2"></i> Thêm loại sản phẩm
					</a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th class="w-1">STT</th>
							<th>Tên loại</th>
							<th style="width: 20%;">Slug</th>
							<th style="width: 10%;">Sản phẩm</th>
							<th style="width: 10%;">Trạng thái</th>
							<th style="width: 15%;">Cập nhật lúc</th>
							<th style="width: 10%;">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@{
							int index = 1;
						}
						@foreach (var item in Model)
						{
							<tr>
								<td class="text-muted">@(index++)</td>
								<td>
									<div class="d-flex align-items-center">
										@if (!string.IsNullOrEmpty(item.Icon))
										{
											<span class="avatar avatar-xs me-2" title="@item.Icon"><i class="@item.Icon"></i></span>
										}
										<div class="d-flex flex-column">
											<span class="fw-medium">@item.Name</span>
											@if (!string.IsNullOrEmpty(item.Description))
											{
												<small class="text-muted text-truncate" style="max-width: 300px;" title="@item.Description">@item.Description</small>
											}
										</div>
									</div>
								</td>
								<td><code>@item.Slug</code></td>
								<td class="text-muted">@item.ProductCount SP</td>
								<td>
									@if (item.IsActive)
									{
										<span class="badge bg-success-lt">Kích hoạt</span>
									}
									else
									{
										<span class="badge bg-danger-lt">Ẩn</span>
									}
								</td>
								<td class="text-muted">@item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
								<td>
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa">
											<i class="ti ti-pencil"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												title="Xóa"
												data-id="@item.Id"
												data-name="@item.Name"
												data-delete-url="@Url.Action("Delete", "ProductType")">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			@* TODO: Add Pagination *@
		}
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#clearSearch').on('click', function() {
				$('input[name="searchTerm"]').val('');
				$('#filterForm').submit();
			});
		});
	</script>
}