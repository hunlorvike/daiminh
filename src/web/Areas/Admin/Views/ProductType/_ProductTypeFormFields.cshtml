@using web.Areas.Admin.ViewModels.ProductType
@model ProductTypeViewModel


<div class="row mb-3">
	<div class="col-md-6">
		<div class="form-group mb-3 mb-md-0">
			@* Remove bottom margin on smaller screens if stacked *@
			<label asp-for="Name" class="form-label required">Tên loại</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			<label asp-for="Slug" class="form-label required">Slug</label>
			<div class="input-group">
				<input asp-for="Slug" class="form-control" />
				<button class="btn btn-outline-secondary" type="button" id="generateSlugButton">
					<i class="ti ti-refresh"></i>
				</button>
			</div>
			<span asp-validation-for="Slug" class="text-danger"></span>
			<small class="form-hint">Dùng cho URL (chỉ chứa chữ cái thường, số và dấu gạch ngang)</small>
		</div>
	</div>
</div>

@* Row for Description and Icon *@	
<div class="row mb-3">
	<div class="col-md-6">
		<div class="form-group mb-3 mb-md-0">
			<label asp-for="Description" class="form-label">Mô tả</label>
			<textarea asp-for="Description" class="form-control" rows="3"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			<label asp-for="Icon" class="form-label">Icon (Tabler)</label>
			<div class="input-group">
				<span class="input-group-text">
					<i id="iconPreview" class="@(string.IsNullOrEmpty(Model.Icon) ? "ti ti-box" : Model.Icon)"></i>
				</span>
				<input asp-for="Icon" class="form-control" placeholder="ti ti-box" />
			</div>
			<span asp-validation-for="Icon" class="text-danger"></span>
			<small class="form-hint">Nhập class của Tabler icon (ví dụ: ti ti-box)</small>
		</div>
	</div>
</div>

@* Row for IsActive *@
<div class="row">
	<div class="col-md-12">
		<div class="form-check form-switch">
			<input class="form-check-input" type="checkbox" asp-for="IsActive" role="switch" />
			<label class="form-check-label" asp-for="IsActive">Kích hoạt</label>
		</div>
		<span asp-validation-for="IsActive" class="text-danger"></span>
	</div>
</div>
