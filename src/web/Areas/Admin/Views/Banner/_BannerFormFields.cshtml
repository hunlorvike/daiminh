@model BannerViewModel

<div class="row g-3">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Thông tin Banner</h3>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label required"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-heading"></i>
                        </span>
                        <input asp-for="Title" class="form-control" placeholder="Tiêu đề banner" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label required"></label>
                    <div class="row g-2 align-items-center mb-2">
                        <div class="col-auto">
                            <div class="avatar avatar-lg" id="image-preview">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="" class="avatar-img rounded" />
                                }
                                else
                                {
                                    <span class="avatar-img">
                                        <i class="ti ti-photo fs-1"></i>
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="ti ti-photo"></i>
                                </span>
                                <input asp-for="ImageUrl" class="form-control media-url-input" id="imageUrlInput"
                                    placeholder="https://example.com/banner.jpg" readonly />
                                <button class="btn btn-outline-secondary select-media-button" type="button"
                                    title="Chọn ảnh" data-bs-toggle="modal" data-bs-target="#selectMediaModal"
                                    data-media-type-filter="0">
                                    <i class="ti ti-folder"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="form-hint">URL đầy đủ đến ảnh banner. Đây là trường bắt buộc.</small>
                    <div class="media-preview-area mt-2">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" style="max-width: 100px; height: auto;" class="img-thumbnail" />
                        }
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LinkUrl" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-link"></i>
                        </span>
                        <input asp-for="LinkUrl" type="url" class="form-control"
                            placeholder="https://example.com/landing-page" />
                    </div>
                    <span asp-validation-for="LinkUrl" class="text-danger"></span>
                    <small class="form-hint">Địa chỉ URL sẽ mở ra khi người dùng click vào banner (nếu có)</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-notes"></i>
                        </span>
                        <textarea asp-for="Description" class="form-control" rows="4"
                            placeholder="Mô tả ngắn gọn..."></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <small class="form-hint">Mô tả ngắn gọn hoặc alt text cho banner.</small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Thiết lập hiển thị</h3>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label asp-for="Type" class="form-label required"></label>
                    <select asp-for="Type" asp-items="@Html.GetEnumSelectList<BannerType>()"
                        class="form-select"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                    <small class="form-hint">Loại banner để hiển thị ở các vị trí khác nhau trên website.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="OrderIndex" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="ti ti-sort-ascending-numbers"></i>
                        </span>
                        <input asp-for="OrderIndex" type="number" min="0" class="form-control" />
                    </div>
                    <span asp-validation-for="OrderIndex" class="text-danger"></span>
                    <small class="form-hint">Banner có số thứ tự nhỏ hơn sẽ hiển thị trước.</small>
                </div>


                <div class="form-group mb-3">
                    <label class="form-label d-block">Trạng thái kích hoạt</label>
                    <label class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                        <span class="form-check-label">Hiển thị banner này trên website</span>
                    </label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>