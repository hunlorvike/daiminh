@model web.Areas.Admin.ViewModels.UserViewModel

<div class="form-group mb-3">
    <label asp-for="SelectedClaimDefinitionIds" class="form-label"></label>
    <select asp-for="SelectedClaimDefinitionIds" asp-items="@Model.AvailableClaimDefinitions"
            class="form-select tom-selected" multiple data-placeholder="Chọn các quyền hạn trực tiếp cho người dùng này">
    </select>
    <span asp-validation-for="SelectedClaimDefinitionIds" class="text-danger"></span>
    <small class="form-hint">
        <i class="ti ti-info-circle me-1"></i>Gán các quyền hạn cụ thể cho người dùng này (ngoài các quyền từ vai trò).
    </small>
</div>