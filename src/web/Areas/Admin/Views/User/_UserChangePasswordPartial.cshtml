@model web.Areas.Admin.ViewModels.UserChangePasswordViewModel

<form asp-action="ResetPassword" asp-controller="User" method="post" id="changePasswordForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label required"></label>
        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Mật khẩu mới" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmNewPassword" class="form-label required"></label>
        <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu mới" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="ti ti-device-floppy me-2"></i>Lưu mật khẩu mới
        </button>
    </div>
</form>