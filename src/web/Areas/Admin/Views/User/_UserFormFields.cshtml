@model web.Areas.Admin.ViewModels.UserViewModel

<div class="row g-3">
    <div class="col-md-8">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label required"></label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="ti ti-mail"></i>
                </span>
                <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email..." />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="ti ti-user"></i>
                </span>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên..." />
            </div>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        @if (Model.Id == 0)
        {
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label required"></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="ti ti-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu..." />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label required"></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="ti ti-lock-check"></i>
                    </span>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu..." />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="ti ti-settings me-2"></i>Cài đặt Người dùng
                </h3>
            </div>
            <div class="card-body">
                <div class="form-group mb-0">
                    <div class="form-label">Trạng thái tài khoản</div>
                    <label class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" role="switch">
                        <span class="form-check-label">
                            <i class="ti ti-eye me-1"></i>Kích hoạt tài khoản
                        </span>
                    </label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <small class="form-hint">
                        <i class="ti ti-info-circle me-1"></i>Bật để tài khoản có thể đăng nhập.
                    </small>
                </div>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="ti ti-info-circle me-2"></i>Hướng dẫn tạo Người dùng
                </h3>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="d-flex align-items-center mb-2">
                        <i class="ti ti-check text-success me-2"></i>
                        <span>Email là duy nhất và là tên đăng nhập.</span>
                    </li>
                    <li class="d-flex align-items-center mb-2">
                        <i class="ti ti-check text-success me-2"></i>
                        <span>Mật khẩu phải đáp ứng các yêu cầu bảo mật.</span>
                    </li>
                    <li class="d-flex align-items-center">
                        <i class="ti ti-check text-success me-2"></i>
                        <span>Có thể gán vai trò và quyền hạn ngay khi tạo.</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>