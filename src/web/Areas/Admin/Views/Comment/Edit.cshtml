@using web.Areas.Admin.ViewModels.Comment
@model CommentViewModel
@{
	ViewData["Title"] = "Chỉnh sửa bình luận - Hệ thống quản trị";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)>
	{
		("Quản lý bình luận", "/Admin/Comment"),
		("Chỉnh sửa", "")
	};
}

<form asp-action="Edit" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="ArticleId" />
	<input type="hidden" asp-for="ParentId" />

	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Chỉnh sửa bình luận</h3>
					<div class="ms-auto">
						<span class="text-muted small">
							<i class="ti ti-clock me-1"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
						</span>
					</div>
				</div>
				<div class="card-body">
					@if (Model.ParentId.HasValue)
					{
						<div class="alert alert-info alert-important mb-3" role="alert">
							<div class="d-flex">
								<div>
									<i class="alert-icon ti ti-arrow-back-up-double me-2"></i>
								</div>
								<div>
									<h4 class="alert-title mb-1">Phản hồi cho bình luận của @Model.ParentAuthorName</h4>
									<div class="text-muted">
										<a href="@Url.Action("Details", new { id = Model.ParentId })">Xem bình luận gốc</a>
									</div>
								</div>
							</div>
						</div>
					}

					<div class="mb-3">
						<label asp-for="Content" class="form-label required">Nội dung</label>
						<textarea asp-for="Content" class="form-control" rows="5"></textarea>
						<span asp-validation-for="Content" class="text-danger"></span>
					</div>

					<div class="row">
						<div class="col-md-6">
							<div class="mb-3">
								<label asp-for="AuthorName" class="form-label required">Tên tác giả</label>
								<input asp-for="AuthorName" class="form-control" />
								<span asp-validation-for="AuthorName" class="text-danger"></span>
							</div>
						</div>
						<div class="col-md-6">
							<div class="mb-3">
								<label asp-for="AuthorEmail" class="form-label">Email</label>
								<input asp-for="AuthorEmail" class="form-control" type="email" />
								<span asp-validation-for="AuthorEmail" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-6">
							<div class="mb-3">
								<label asp-for="AuthorWebsite" class="form-label">Website</label>
								<input asp-for="AuthorWebsite" class="form-control" type="url" placeholder="https://example.com" />
								<span asp-validation-for="AuthorWebsite" class="text-danger"></span>
							</div>
						</div>
						<div class="col-md-6">
							<div class="mb-3">
								<label asp-for="AuthorAvatar" class="form-label">Avatar URL</label>
								<input asp-for="AuthorAvatar" class="form-control" type="url" placeholder="https://.../avatar.jpg" />
								<span asp-validation-for="AuthorAvatar" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="form-check form-switch mb-3">
						<input asp-for="IsApproved" class="form-check-input" type="checkbox" />
						<label asp-for="IsApproved" class="form-check-label">Duyệt bình luận</label>
						<small class="form-hint d-block">Bình luận sẽ hiển thị trên website</small>
					</div>

					<div class="d-flex justify-content-between mt-4 border-top pt-3">
						<a asp-action="Index" class="btn btn-outline-secondary">
							<i class="ti ti-arrow-left me-2"></i> Quay lại
						</a>
						<button type="submit" class="btn btn-primary">
							<i class="ti ti-device-floppy me-2"></i> Cập nhật
						</button>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Thông tin bài viết</h3>
				</div>
				<div class="card-body">
					<div class="mb-3">
						<label class="form-label">Bài viết</label>
						<div>
							<a href="/Admin/Article/Edit/@Model.ArticleId" class="text-reset" title="Chỉnh sửa bài viết">
								<strong>@Model.ArticleTitle</strong>
							</a>
						</div>
					</div>
					@* TODO: Add link to view article on frontend *@
					@* <div class="mb-3"> *@
					@*     <a href="#" class="btn btn-outline-primary w-100"> *@
					@*         <i class="ti ti-external-link me-2"></i> Xem bài viết *@
					@*     </a> *@
					@* </div> *@
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<script>
		$(document).ready(function () {
			// No specific scripts needed for this simple edit form currently
		});
	</script>
}