@using web.Areas.Admin.ViewModels.Comment
@model CommentViewModel
@{
    ViewData["Title"] = "Chỉnh sửa Bình luận";
    // Breadcrumbs set in Controller
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ArticleId" /> @* Keep track of article ID *@

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết Bình luận</h3>
            <div class="card-actions">
                <a asp-action="Index" class="btn btn-link">Hủy</a>
                <button type="submit" class="btn btn-primary ms-2">
                    <i class="ti ti-device-floppy me-2"></i> Lưu thay đổi
                </button>
            </div>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>

            <div class="mb-3">
                <label class="form-label">Bài viết:</label>
                <p class="form-control-plaintext">
                    @* Ideally link to the article edit page *@
                    <a asp-controller="Article" asp-action="Edit" asp-route-id="@Model.ArticleId" target="_blank">@Model.ArticleTitle</a>
                </p>
            </div>
            <div class="mb-3">
                <label class="form-label">Ngày gửi:</label>
                <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
            </div>

            <hr class="my-3">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AuthorName" class="form-label required">Tên tác giả</label>
                        <input asp-for="AuthorName" class="form-control" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AuthorEmail" class="form-label">Email</label>
                        <input type="email" asp-for="AuthorEmail" class="form-control" />
                        <span asp-validation-for="AuthorEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AuthorWebsite" class="form-label">Website</label>
                        <input type="url" asp-for="AuthorWebsite" class="form-control" />
                        <span asp-validation-for="AuthorWebsite" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Content" class="form-label required">Nội dung bình luận</label>
                @* Use Summernote for editing content *@
                <textarea asp-for="Content" class="form-control summernote-editor" rows="6"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-check form-switch mb-0">
                <input class="form-check-input" type="checkbox" asp-for="IsApproved" role="switch" id="commentIsApprovedSwitch">
                <label class="form-check-label" for="commentIsApprovedSwitch">Đã duyệt</label>
            </div>

        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-link">Hủy</a>
            <button type="submit" class="btn btn-primary">
                <i class="ti ti-device-floppy me-2"></i> Lưu thay đổi
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.summernote-editor').summernote({
                placeholder: 'Nội dung bình luận...',
                tabsize: 2,
                height: 150,
                toolbar: [ /* Basic toolbar */ ['font', ['bold', 'italic']], ['para', ['ul', 'ol']], ['insert', ['link']], ['view', ['codeview']] ]
            });
        });
    </script>
 }