@using web.Areas.Admin.Models.Gallery
@model GalleryViewModel;

<div class="page-body">
	<div class="container">
		<div class="card">
			<div class="card-body row p-0">
				<!-- Folder Tree (Left Column) -->
				<div class="col-md-3">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Thư mục</h3>
						</div>
						<div class="card-body p-2">
							<div id="folder-tree" class="folder-tree">
								<ul class="folder-tree-list">
									<li class="folder-tree-item @(Model.CurrentFolder == null ? "active" : "")">
										<a asp-area="Admin" asp-controller="Gallery" asp-action="Index" class="folder-tree-link">
											<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
												<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
												<path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
												<path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
												<path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
											</svg>
											Thư mục gốc
										</a>
									</li>
									@await Html.PartialAsync("__FolderTree", Model.AllFolders)
								</ul>
							</div>
						</div>
					</div>
				</div>

				<!-- Files (Right Column) -->
				<div class="col-md-9">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">
								@if (Model.CurrentFolder != null)
								{
									<span>@Model.CurrentFolder.Name</span>
								}
								else
								{
									<span>Tất cả tệp</span>
								}
							</h3>
							<div class="card-actions">
								<ul class="nav nav-tabs card-tabs" data-bs-toggle="tabs">
									<li class="nav-item">
										<a href="#tabs-grid" class="nav-link active" data-bs-toggle="tab">
											<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-layout-grid" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
												<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
												<path d="M4 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
												<path d="M14 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
												<path d="M4 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
												<path d="M14 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
											</svg>
											Lưới
										</a>
									</li>
									<li class="nav-item">
										<a href="#tabs-list" class="nav-link" data-bs-toggle="tab">
											<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
												<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
												<path d="M9 6l11 0"></path>
												<path d="M9 12l11 0"></path>
												<path d="M9 18l11 0"></path>
												<path d="M5 6l0 .01"></path>
												<path d="M5 12l0 .01"></path>
												<path d="M5 18l0 .01"></path>
											</svg>
											Danh sách
										</a>
									</li>
								</ul>
							</div>
						</div>
                        <div class="card-body">
                            <div class="tab-content">
                                <!-- Grid View -->
                                <div class="tab-pane active show" id="tabs-grid">
                                    <!-- Folders in current directory -->
                                    @if (Model.Folders.Any())
                                    {
                                        <div class="subfolders mb-4">
                                            <h4 class="mb-3">Thư mục con</h4>
                                            <div class="row row-cards">
                                                @foreach (var folder in Model.Folders)
                                                {
                                                    <div class="col-sm-6 col-lg-4">
                                                        <div class="card card-sm">
                                                            <div class="card-body">
                                                                <div class="row align-items-center">
                                                                    <div class="col-auto">
                                                                        <span class="bg-yellow text-white avatar">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-folder" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                                <path d="M5 4h4l3 3h7a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-11a2 2 0 0 1 2 -2"></path>
                                                                            </svg>
                                                                        </span>
                                                                    </div>
                                                                    <div class="col">
                                                                        <div class="font-weight-medium">
                                                                            <a asp-area="Admin" asp-controller="Gallery" asp-action="Index" asp-route-folderId="@folder.Id" class="text-reset">
                                                                                @folder.Name
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-auto">
                                                                        <div class="dropdown">
                                                                            <a href="#" class="btn-action" data-bs-toggle="dropdown" aria-expanded="false">
                                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-dots-vertical" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                                    <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                    <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                    <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                </svg>
                                                                            </a>
                                                                            <div class="dropdown-menu dropdown-menu-end">
																				<button class="dropdown-item command-modal-edit" asp-area="Admin" asp-controller="Gallery" asp-action="EditFolder" asp-route-id="@folder.Id" data-bs-toggle="modal" data-bs-target="#modal-rename-folder">
																					Đổi tên	
                                                                                </button>
                                                                                <a href="#" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#modal-delete-folder" data-folder-id="@folder.Id" data-folder-name="@folder.Name">
                                                                                    Xóa
                                                                                </a>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <!-- Files -->
                                    <div class="files">
                                        <h4 class="mb-3">Tệp</h4>
                                        @if (!Model.MediaFiles.Any())
                                        {
                                            <div class="empty">
                                                <div class="empty-img">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-off" width="48" height="48" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                        <path d="M3 3l18 18"></path>
                                                        <path d="M7 3h7l5 5v7m0 4a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-14"></path>
                                                    </svg>
                                                </div>
                                                <p class="empty-title">Không có tệp nào</p>
                                                <p class="empty-subtitle text-muted">
                                                    Hãy tải lên tệp mới hoặc tạo thư mục để tổ chức tài liệu của bạn.
                                                </p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="row row-cards">
                                                @foreach (var file in Model.MediaFiles)
                                                {
                                                    <div class="col-sm-6 col-lg-4">
                                                        <div class="card card-sm">
                                                            <div class="ribbon ribbon-top ribbon-start bg-secondary">
                                                                @file.Extension
                                                            </div>
                                                            @if (file.MimeType.StartsWith("image/"))
                                                            {
                                                                <a href="@file.Url" class="d-block" target="_blank">
                                                                    <img src="@file.Url" class="card-img-top" alt="@file.Name" style="height: 180px; object-fit: cover;">
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <div class="card-img-top img-responsive img-responsive-16by9 text-center bg-white pt-4" style="height: 180px;">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file" width="64" height="64" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                        <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                                                        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                                                    </svg>
                                                                </div>
                                                            }
                                                            <div class="card-body">
                                                                <div class="d-flex align-items-center">
                                                                    <div>
                                                                        <div title="@file.Name">@(file.Name.Length > 20 ? file.Name.Substring(0, 17) + "..." : file.Name)</div>
                                                                        <div class="text-muted">@(file.Size / 1024.0) KB</div>
                                                                    </div>
                                                                    <div class="ms-auto">
                                                                        <div class="dropdown">
                                                                            <a href="#" class="btn-action" data-bs-toggle="dropdown" aria-expanded="false">
                                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-dots-vertical" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                                    <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                    <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                    <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                </svg>
                                                                            </a>
                                                                            <div class="dropdown-menu dropdown-menu-end">
                                                                                <a href="@file.Url" class="dropdown-item" target="_blank">
                                                                                    Xem
                                                                                </a>
                                                                                <a href="@file.Url" class="dropdown-item" download="@file.Name">
                                                                                    Tải xuống
                                                                                </a>
                                                                                <a href="#" class="dropdown-item" onclick="copyToClipboard('@file.Url'); return false;">
                                                                                    Sao chép URL
                                                                                </a>
                                                                                <a href="#" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#modal-rename-file" data-file-id="@file.Id" data-file-name="@file.Name">
                                                                                    Đổi tên
                                                                                </a>
                                                                                <a href="#" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#modal-delete-file" data-file-id="@file.Id" data-file-name="@file.Name">
                                                                                    Xóa
                                                                                </a>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                                
                                <!-- List View -->
                                <div class="tab-pane" id="tabs-list">
                                    <!-- Folders in current directory -->
                                    @if (Model.Folders.Any())
                                    {
                                        <div class="subfolders mb-4">
                                            <h4 class="mb-3">Thư mục con</h4>
                                            <div class="table-responsive">
                                                <table class="table table-vcenter card-table">
                                                    <thead>
                                                        <tr>
                                                            <th>Tên thư mục</th>
                                                            <th class="w-1"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var folder in Model.Folders)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div class="d-flex align-items-center">
                                                                        <span class="avatar bg-yellow me-2">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-folder" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                                <path d="M5 4h4l3 3h7a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-11a2 2 0 0 1 2 -2"></path>
                                                                            </svg>
                                                                        </span>
                                                                        <a asp-area="Admin" asp-controller="Gallery" asp-action="Index" asp-route-folderId="@folder.Id" class="text-reset">
                                                                            @folder.Name
                                                                        </a>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="dropdown">
                                                                        <a href="#" class="btn-action" data-bs-toggle="dropdown" aria-expanded="false">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-dots-vertical" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                                <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                            </svg>
                                                                        </a>
                                                                        <div class="dropdown-menu dropdown-menu-end">
																			<button asp-area="Admin" asp-controller="Gallery" asp-action="EditFolder" asp-route-id="@folder.Id" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#modal-rename-folder" data-folder-id="@folder.Id" data-folder-name="@folder.Name">
                                                                                Đổi tên
                                                                            </button>
                                                                            <button href="#" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#modal-delete-folder" data-folder-id="@folder.Id" data-folder-name="@folder.Name">
                                                                                Xóa
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    }

                                    <!-- Files -->
                                    <div class="files">
                                        <h4 class="mb-3">Tệp</h4>
                                        @if (!Model.MediaFiles.Any())
                                        {
                                            <div class="empty">
                                                <div class="empty-img">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-off" width="48" height="48" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                        <path d="M3 3l18 18"></path>
                                                        <path d="M7 3h7l5 5v7m0 4a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-14"></path>
                                                    </svg>
                                                </div>
                                                <p class="empty-title">Không có tệp nào</p>
                                                <p class="empty-subtitle text-muted">
                                                    Hãy tải lên tệp mới hoặc tạo thư mục để tổ chức tài liệu của bạn.
                                                </p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-vcenter card-table">
                                                    <thead>
                                                        <tr>
                                                            <th>Tên tệp</th>
                                                            <th>Loại</th>
                                                            <th>Kích thước</th>
                                                            <th class="w-1"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var file in Model.MediaFiles)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div class="d-flex align-items-center">
																		<span class="avatar me-2" style="background-image: url('@file.Url')"></span>
                                                                        <div>
                                                                            <a href="@file.Url" target="_blank" class="text-reset">@file.Name</a>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td class="text-muted">
                                                                    @file.Extension
                                                                </td>
                                                                <td class="text-muted">
                                                                    @(file.Size / 1024.0) KB
                                                                </td>
                                                                <td>
                                                                    <div class="dropdown">
                                                                        <a href="#" class="btn-action" data-bs-toggle="dropdown" aria-expanded="false">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-dots-vertical" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                                <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                                <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                                                                            </svg>
                                                                        </a>
                                                                        <div class="dropdown-menu dropdown-menu-end">
                                                                            <a href="@file.Url" class="dropdown-item" target="_blank">
                                                                                Xem
                                                                            </a>
                                                                            <a href="@file.Url" class="dropdown-item" download="@file.Name">
                                                                                Tải xuống
                                                                            </a>
                                                                            <a href="#" class="dropdown-item" onclick="copyToClipboard('@file.Url'); return false;">
                                                                                Sao chép URL
                                                                            </a>
                                                                            <a href="#" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#modal-rename-file" data-file-id="@file.Id" data-file-name="@file.Name">
                                                                                Đổi tên
                                                                            </a>
                                                                            <a href="#" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#modal-delete-file" data-file-id="@file.Id" data-file-name="@file.Name">
                                                                                Xóa
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

