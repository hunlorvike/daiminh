@using shared.Enums
@using web.Areas.Admin.ViewModels.Gallery
@model IEnumerable<GalleryListItemViewModel>
@{
    ViewData["Title"] = "Quản lý thư viện ảnh - Hệ thống quản trị";
    var filter = ViewBag.Filter as GalleryFilterViewModel ?? new GalleryFilterViewModel();
}

@section PageActions {
    <div class="btn-list">
        <a asp-action="Create" class="btn btn-primary d-sm-inline-block">
            <i class="fas fa-plus me-2"></i> Thêm thư viện ảnh mới
        </a>
    </div>
}

<!-- Filter form -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Tìm kiếm</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm thư viện ảnh..." name="SearchTerm" value="@filter.SearchTerm">
                    <button class="btn btn-icon" type="button" id="clearSearch">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label">Danh mục</label>
                <select class="form-select" name="CategoryId" id="categoryFilter">
                    <option value="">Tất cả danh mục</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Value" selected="@category.Selected">@category.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Thẻ</label>
                <select class="form-select" name="TagId" id="tagFilter">
                    <option value="">Tất cả thẻ</option>
                    @foreach (var tag in ViewBag.Tags)
                    {
                        <option value="@tag.Value" selected="@tag.Selected">@tag.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Trạng thái</label>
                <select class="form-select" name="Status" id="statusFilter">
                    <option value="">Tất cả trạng thái</option>
                    @foreach (var status in Enum.GetValues(typeof(PublishStatus)))
                    {
                        <option value="@status" selected="@(filter.Status.HasValue && filter.Status.Value.ToString() == status.ToString())">
                            @(status.ToString() == "Draft" ? "Nháp" :
                                status.ToString() == "Published" ? "Đã xuất bản" : status.ToString())
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-2"></i> Lọc
                </button>
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-redo me-2"></i> Đặt lại
                </a>
            </div>
            <div class="col-md-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="IsFeatured" value="true" id="featuredFilter" @(filter.IsFeatured == true ? "checked" : "")>
                    <label class="form-check-label" for="featuredFilter">Chỉ hiển thị thư viện nổi bật</label>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Content -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách thư viện ảnh</h3>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="empty">
                <div class="empty-img">
                    <i class="fas fa-images fa-5x text-muted"></i>
                </div>
                <p class="empty-title">Không tìm thấy thư viện ảnh nào</p>
                <p class="empty-subtitle text-muted">
                    Không có thư viện ảnh nào phù hợp với tiêu chí tìm kiếm
                </p>
                <div class="empty-action">
                    <a href="@Url.Action("Index")" class="btn btn-primary">
                        <i class="fas fa-redo me-2"></i> Đặt lại bộ lọc
                    </a>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i> Thêm thư viện ảnh mới
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-vcenter card-table table-striped">
                    <thead>
                        <tr>
                            <th class="w-1">STT</th>
                            <th>Tên thư viện</th>
                            <th>Danh mục</th>
                            <th>Trạng thái</th>
                            <th>Số ảnh</th>
                            <th>Lượt xem</th>
                            <th>Ngày tạo</th>
                            <th style="width: 15%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted">@(index++)</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.CoverImage))
                                        {
                                            <span class="avatar me-2" style="background-image: url(@item.CoverImage)"></span>
                                        }
                                        else
                                        {
                                            <span class="avatar me-2">
                                                <i class="fas fa-images"></i>
                                            </span>
                                        }
                                        <div>
                                            <div class="font-weight-medium">
                                                @item.Name
                                                @if (item.IsFeatured)
                                                {
                                                    <span class="badge bg-yellow ms-1" title="Nổi bật">
                                                        <i class="fas fa-star"></i>
                                                    </span>
                                                }
                                            </div>
                                            <div class="text-muted">
                                                <a href="#" class="text-reset" title="Xem trên website">/@item.Slug</a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Categories.Any())
                                    {
                                        foreach (var category in item.Categories.Take(2))
                                        {
                                            <span class="badge bg-blue-lt me-1">@category</span>
                                        }

                                        if (item.Categories.Count > 2)
                                        {
                                            <span class="badge bg-blue-lt">+@(item.Categories.Count - 2)</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa phân loại</span>
                                    }
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm dropdown-toggle status-dropdown"
                                                data-bs-toggle="dropdown"
                                                data-id="@item.Id"
                                                type="button">
                                            <span class="status-indicator @(item.Status == PublishStatus.Published ? "bg-success" : "bg-warning")"></span>
                                            @(item.Status == PublishStatus.Published ? "Đã xuất bản" : "Nháp")
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item status-item" href="#" data-status="@PublishStatus.Published">
                                                <span class="status-indicator bg-success"></span>
                                                Đã xuất bản
                                            </a>
                                            <a class="dropdown-item status-item" href="#" data-status="@PublishStatus.Draft">
                                                <span class="status-indicator bg-warning"></span>
                                                Nháp
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-azure">@item.ImageCount</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.ViewCount</span>
                                </td>
                                <td>
                                    <div class="text-muted">
                                        @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-list flex-nowrap">
                                        <button class="btn btn-sm btn-icon btn-outline-warning toggle-featured"
                                                data-id="@item.Id"
                                                title="@(item.IsFeatured ? "Bỏ nổi bật" : "Đánh dấu nổi bật")">
                                            <i class="fas @(item.IsFeatured ? "fa-star" : "fa-star text-muted")"></i>
                                        </button>
                                        <a href="#" class="btn btn-sm btn-icon btn-outline-secondary" title="Xem trên website">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-icon btn-outline-danger delete-item"
                                                data-bs-toggle="modal"
                                                data-bs-target="#delete-modal"
                                                data-id="@item.Id"
                                                data-name="@item.Name"
                                                data-delete-url="@Url.Action("Delete", "Gallery")"
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Toggle featured status
            $('.toggle-featured').on('click', function () {
                var button = $(this);
                var id = button.data('id');

                $.ajax({
                    url: '@Url.Action("ToggleFeatured", "Gallery")',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            var icon = button.find('i');
                            if (result.featured) {
                                icon.removeClass('text-muted').addClass('text-warning');
                                button.attr('title', 'Bỏ nổi bật');
                                toastr.success('Đã đánh dấu thư viện là nổi bật');
                            } else {
                                icon.addClass('text-muted').removeClass('text-warning');
                                button.attr('title', 'Đánh dấu nổi bật');
                                toastr.success('Đã bỏ đánh dấu nổi bật');
                            }
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function () {
                        toastr.error('Đã xảy ra lỗi khi cập nhật trạng thái nổi bật');
                    }
                });
            });

            // Update status
            $('.status-item').on('click', function (e) {
                e.preventDefault();

                var item = $(this);
                var status = item.data('status');
                var dropdown = item.closest('.dropdown');
                var button = dropdown.find('.status-dropdown');
                var id = button.data('id');

                $.ajax({
                    url: '@Url.Action("UpdateStatus", "Gallery")',
                    type: 'POST',
                    data: { id: id, status: status },
                    success: function (result) {
                        if (result.success) {
                            // Update the button text and indicator
                            var statusText = '';
                            var statusClass = '';

                            switch (status) {
                                case @((int)PublishStatus.Published):
                                    statusText = 'Đã xuất bản';
                                    statusClass = 'bg-success';
                                    break;
                                case @((int)PublishStatus.Draft):
                                    statusText = 'Nháp';
                                    statusClass = 'bg-warning';
                                    break;
                                default:
                                    statusText = result.status;
                                    statusClass = 'bg-secondary';
                            }

                            button.html('<span class="status-indicator ' + statusClass + '"></span>' + statusText);
                            toastr.success('Đã cập nhật trạng thái thư viện');
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function () {
                        toastr.error('Đã xảy ra lỗi khi cập nhật trạng thái');
                    }
                });
            });

            // Delete item setup
            $('.delete-item').on('click', function () {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var deleteUrl = $(this).data('delete-url');

                $('#delete-item-id').val(id);
                $('#delete-item-name').val(name);
                $('#delete-url').val(deleteUrl);
                $('#delete-modal-message').text('Bạn có chắc chắn muốn xóa thư viện "' + name + '" không?');
            });

            // Clear search
            $('#clearSearch').on('click', function() {
                $('input[name="SearchTerm"]').val('');
                $('#filterForm').submit();
            });

            // Auto submit on filter change
            $('#categoryFilter, #tagFilter, #statusFilter, #featuredFilter').on('change', function() {
                $('#filterForm').submit();
            });
        });
    </script>
}