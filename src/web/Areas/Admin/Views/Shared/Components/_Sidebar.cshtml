					</a>
				</li>

				<!-- CẤU HÌNH HỆ THỐNG -->
				<li class="nav-item dropdown @(IsMenuActive("Setting", "User") ? "active" : "")">
					<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button">
						<span class="nav-link-icon"><i class="ti ti-settings"></i></span>
						<span class="nav-link-title">Hệ thống</span>
					</a>
					<div class="dropdown-menu show">
						<a class="dropdown-item @(currentController == "Setting" ? "active" : "")" asp-controller="Setting" asp-action="Index">Cấu hình</a>
