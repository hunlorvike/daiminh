							<a class="dropdown-item @(IsTaxonomyActive("Tag", TagType.Product.ToString()) ? "active" : "")" asp-controller="Tag" asp-action="Index" asp-route-type="@TagType.Product">Sản phẩm</a>
							<a class="dropdown-item @(IsTaxonomyActive("Tag", TagType.Article.ToString()) ? "active" : "")" asp-controller="Tag" asp-action="Index" asp-route-type="@TagType.Article">Bài viết</a>
