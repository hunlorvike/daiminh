<div class="modal modal-blur fade" id="selectMediaModal" tabindex="-1" role="dialog" aria-labelledby="selectMediaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                @* Added Modal Header *@
                <h5 class="modal-title" id="selectMediaModalLabel">Chọn Media</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @* This is where the dynamic content from _SelectMediaModalContent will be loaded by JS *@
                <div id="select-media-modal-body-content">
                    @* Initial loading spinner (will be replaced by AJAX content) *@
                    <div class="text-center p-5">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-2 text-muted">Đang tải...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="w-100 d-flex justify-content-between align-items-center">
                    @* This area is for specific actions when a file is selected *@
                    <div id="modal-selected-file-info" style="display: none;">
                        Đã chọn: <strong id="selected-file-name"></strong>
                    </div>
                    <div>
                        <button type="button" class="btn" data-bs-dismiss="modal">Đóng</button>
                        @* Add a "Select" button, hidden until a file is chosen *@
                        <button type="button" class="btn btn-primary ms-2" id="modal-select-file-btn" disabled>
                            Chọn
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

