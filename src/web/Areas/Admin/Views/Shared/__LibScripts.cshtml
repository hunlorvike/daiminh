<script src="~/lib/toastr/build/toastr.min.js" asp-append-version="true"></script>

<script>
	$(document).ready(function() {
		// Load pending comments count
		$.ajax({
			url: '/Admin/Comment/GetPendingCount',
			type: 'GET',
			success: function(result) {
				if (result > 0) {
					$('#pendingCommentsCount').text(result);
				}
			}
		});
	});
</script>

<script>
	$(document).ready(function () {
		let deleteUrl = '';
		let itemIdToDelete = null;
		let itemNameToDelete = '';
		let rowToDelete = null;

		const deleteModal = new bootstrap.Modal(document.getElementById('delete-confirmation-modal'));
		const confirmDeleteButton = document.getElementById('confirm-delete-button');
		const deleteModalMessage = document.getElementById('delete-modal-message');

		function addAntiForgeryToken(data) {
			data = data || {};
			data.__RequestVerificationToken = '@antiForgeryTokenValue';
			return data;
		}

		// --- Event Listener for showing the modal ---
		// Use event delegation on the body to catch clicks on any current or future '.delete-item-btn'
		$('body').on('click', '.delete-item-btn', function () {
			const button = $(this);
			deleteUrl = button.data('delete-url');
			itemIdToDelete = button.data('id');
			itemNameToDelete = button.data('name');

			if (itemNameToDelete) {
				$(deleteModalMessage).text(`Bạn có chắc chắn muốn xóa "${itemNameToDelete}" không? Hành động này không thể hoàn tác.`);
			} else {
				$(deleteModalMessage).text('Bạn có chắc chắn muốn xóa mục này không? Hành động này không thể hoàn tác.');
			}

			if (deleteUrl && itemIdToDelete !== null) {
				deleteModal.show();
			} else {
				console.error("Delete button is missing data-delete-url or data-id attribute.");
			}
		});

		if (confirmDeleteButton) {
			confirmDeleteButton.addEventListener('click', function () {
				const button = $(this);
				const originalButtonText = button.html();
				button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Đang xóa...'); // Indicate loading

				$.ajax({
					url: deleteUrl,
					type: 'POST',
					data: addAntiForgeryToken({ id: itemIdToDelete }),
					dataType: 'json',
					success: function (response) {
						deleteModal.hide();
						if (response.success) {
							location.reload();
						} else {
							 console.error("Delete failed:", response.message);
						}
					},
					error: function (xhr, status, error) {
						deleteModal.hide();
						console.error("AJAX Error:", status, error, xhr.responseText);
					},
					complete: function () {
						button.prop('disabled', false).html(originalButtonText);
						deleteUrl = '';
						itemIdToDelete = null;
						itemNameToDelete = '';
						rowToDelete = null;
					}
				});
			});
		} else {
			console.error("Confirm delete button (#confirm-delete-button) not found.");
		}
	});
</script>