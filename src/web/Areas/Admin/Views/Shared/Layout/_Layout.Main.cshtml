@{
    var themeCookie = Context.Request.Cookies["daiminhTheme"];
    var theme = string.IsNullOrEmpty(themeCookie) ? "light" : themeCookie;
    var isDark = theme == "dark";
}

<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
	<title>@ViewData["Title"]</title>
	<partial name="__LibStyles" />
	@await RenderSectionAsync("Styles", required: false)
</head>
<body data-bs-theme="@(isDark ? "dark" : null)">
    <div class="page">
		<!-- Sidebar -->
		<partial name="Components/_Sidebar" />

		<div class="page-wrapper">
			<!-- Navbar -->
			<partial name="Components/_Header" />

			<!-- Page header -->
			<div class="page-header d-print-none">
				<div class="container-xl">
					<div class="row g-2 align-items-center">
						<div class="col">
							<h2 class="page-title">@ViewData["PageTitle"]</h2>

							@if (ViewData["Breadcrumbs"] != null)
							{
								<div class="text-muted mt-1">
									<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
										<li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>

										@foreach (var breadcrumb in (List<(string Text, string Url)>)ViewData["Breadcrumbs"])
										{
											if (string.IsNullOrEmpty(breadcrumb.Url))
											{
												<li class="breadcrumb-item active" aria-current="page">@breadcrumb.Text</li>
											}
											else
											{
												<li class="breadcrumb-item"><a href="@breadcrumb.Url">@breadcrumb.Text</a></li>
											}
										}
									</ol>
								</div>
							}
						</div>

						<div class="col-auto ms-auto d-print-none">
							@RenderSection("PageActions", required: false)
						</div>
					</div>
				</div>
			</div>


			<!-- Page body -->
			<div class="page-body">
				<div class="container-xl">
					@RenderBody()
				</div>
			</div>

			<partial name="Components/_DeleteModal" />

			<!-- Footer -->
			<partial name="Components/_Footer" />
		</div>
	</div>

	<!-- Toast notifications -->
	<div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>

	<partial name="Components/_SelectMediaModal" />

	<partial name="__LibScripts" />

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>