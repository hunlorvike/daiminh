@using shared.Helpers
@using web.Areas.Admin.ViewModels.Article
@using shared.Enums
@model IEnumerable<ArticleListItemViewModel>
@{
    ViewData["Title"] = "Quản lý Bài viết";
}

@section PageActions {
    <div class="btn-list">
        <a asp-action="Create" class="btn btn-primary d-sm-inline-block">
            <i class="ti ti-file-plus me-2"></i> Viết bài mới
        </a>
    </div>
}

<!-- Filter Form -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
            <div class="col-md-3 col-sm-6">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" class="form-control" placeholder="Tiêu đề, tóm tắt..." name="searchTerm" value="@ViewBag.SearchTerm">
            </div>
            <div class="col-md-2 col-sm-6">
                <label class="form-label">Danh mục</label>
                <select class="form-select" name="categoryId" asp-items="@ViewBag.Categories" asp-route-value="@ViewBag.SelectedCategoryId">
                    <option value="">Tất cả</option>
                </select>
            </div>
            <div class="col-md-2 col-sm-6">
                <label class="form-label">Loại bài viết</label>
                <select class="form-select" name="type" asp-items="@ViewBag.Types" asp-route-value="@ViewBag.SelectedType">
                    <option value="">Tất cả</option>
                </select>
            </div>
            <div class="col-md-2 col-sm-6">
                <label class="form-label">Trạng thái</label>
                <select class="form-select" name="status" asp-items="@ViewBag.Statuses" asp-route-value="@ViewBag.SelectedStatus">
                    <option value="">Tất cả</option>
                </select>
            </div>
            <div class="col-md-1 col-sm-6">
                <button type="submit" class="btn btn-primary w-100">Lọc</button>
            </div>
            <div class="col-md-2 col-sm-6">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Đặt lại</a>
            </div>
        </form>
    </div>
</div>

<!-- Content Table -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách Bài viết</h3>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="empty">
                <div class="empty-icon"><i class="ti ti-file-off"></i></div>
                <p class="empty-title">Không tìm thấy bài viết nào</p>
                <p class="empty-subtitle text-muted">Hãy tạo bài viết đầu tiên.</p>
                <div class="empty-action"> <a asp-action="Create" class="btn btn-primary"> <i class="ti ti-plus me-2"></i> Viết bài mới </a> </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-vcenter card-table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 5%;">Ảnh</th>
                            <th>Tiêu đề</th>
                            <th>Tác giả</th>
                            <th>Danh mục</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Lượt xem</th>
                            <th>Ngày xuất bản</th>
                            <th class="w-1">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@MediaUrlHelper.GetMinioUrl(item.ThumbnailImage, "/img/placeholder-image.png")"
                                         alt="@item.Title" class="avatar avatar-md object-fit-cover" />
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="fw-medium">@item.Title</a>
                                    @if (item.IsFeatured)
                                    {
                                        <i class="ti ti-star-filled text-warning ms-1" title="Nổi bật"></i>
                                    }
                                </td>
                                <td class="text-muted">@item.AuthorName</td>
                                <td class="text-muted">@item.CategoryNames</td>
                                <td class="text-center">
                                    @switch (item.Status)
                                    {
                                        case PublishStatus.Published:
                                            <span class="badge bg-success-lt">Xuất bản</span>
                                            break;
                                        case PublishStatus.Draft:
                                            <span class="badge bg-secondary-lt">Nháp</span>
                                            break;
                                        case PublishStatus.Scheduled:
                                            <span class="badge bg-warning-lt">Lên lịch</span>
                                            break;
                                        case PublishStatus.Archived:
                                            <span class="badge bg-dark-lt">Lưu trữ</span>
                                            break;
                                        default:
                                            <span class="badge">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-center text-muted">@item.ViewCount</td>
                                <td class="text-muted">@(item.PublishedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                <td>
                                    <div class="btn-list flex-nowrap">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa"> <i class="ti ti-pencil"></i> </a>
                                        @* Link to Comments Management (Optional) *@
                                        <a asp-controller="Comment" asp-action="Index" asp-route-articleId="@item.Id" class="btn btn-sm btn-icon btn-outline-secondary" title="Xem bình luận"> <i class="ti ti-message-circle"></i> </a>
                                        <button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn" title="Xóa"
                                                data-id="@item.Id" data-name="@item.Title" data-delete-url="@Url.Action("Delete", "Article")">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @* Pagination *@
        }
    </div>
</div>
