@using web.Areas.Admin.ViewModels.Article
@model ArticleViewModel
@{
	ViewData["Title"] = "Chỉnh sửa Bài viết - Hệ thống quản trị";
	ViewData["PageTitle"] = $"Chỉnh sửa Bài viết: {Model.Title}";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("Bài viết", Url.Action(nameof(Index)) ?? "/Admin/Article"),
			($"Chỉnh sửa: {Model.Title}", "")
		};
}

<form asp-action="Edit" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<div asp-validation-summary="All" class="text-danger alert alert-danger mb-3" role="alert"></div>

	<partial name="_ArticleFormFields" model="Model" />

	<div class="card mt-4">
		<div class="card-header">
			<h3 class="card-title">Tối ưu SEO</h3>
		</div>
		<div class="card-body">
            <partial name="Components/Crud/_SeoFormFields" model="Model.Seo" />
		</div>
		<div class="card-footer text-end bg-transparent border-top pt-3">
			<a asp-action="Index" class="btn btn-link">Hủy</a>
			<button type="submit" class="btn btn-primary ms-2">
				<i class="ti ti-device-floppy me-2"></i> Cập nhật Bài viết
			</button>
		</div>
	</div>
</form>

@section Scripts {
	<script src="~/js/slug.js" asp-append-version="true"></script>
	@* Add script for SelectMediaModal integration here if needed for images *@

	<script>
		$(document).ready(function () {
			// Slug generation (only generate if slug is empty)
			const titleInput = $('#Title');
			const slugInput = $('#Slug');
			const generateSlugBtn = $('#generateSlugButton');

			titleInput.on('input', function() {
				if (slugInput.val() === '') {
					slugInput.val(generateVietnameseSlug(titleInput.val()));
				}
			});

			generateSlugBtn.on('click', function() {
				slugInput.val(generateVietnameseSlug(titleInput.val()));
			});

			// Summernote initialization
			$('#Content').summernote({
				placeholder: 'Nhập nội dung chi tiết bài viết',
				height: 300,
				lang: 'vi-VN',
				callbacks: {
					onInit: function() {
						// Prevent Summernote from adding <p><br></p> if content is empty initially
						if ($(this).summernote('isEmpty')) {
							$(this).summernote('code', '');
						}
					}
					 // Add callbacks for image/media upload integration here
				}
			});

			// Tom-select initialization for Tags and Products
			new TomSelect("#SelectedTagIds",{ plugins: { remove_button: { title: 'Xóa' } } });
			new TomSelect("#SelectedProductIds",{ plugins: { remove_button: { title: 'Xóa' } } });

			// Optional: Datepicker for PublishedAt
		});
	</script>
}