@model web.Areas.Admin.Requests.ProductFieldDefinition.ProductFieldDefinitionDeleteRequest

<div class="modal modal-blur fade" id="delete-product-field-definition--modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <form asp-area="Admin" asp-controller="ProductFieldDefinition" asp-action="Delete" class="modal-content">
            <button type="button" class="btn-close command-modal-close"></button>
            <div class="modal-status bg-danger"></div>
            <div class="modal-body text-center py-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24"
                     viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                     stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M12 9v2m0 4v.01"/>
                    <path
                        d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"/>
                </svg>
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden"/>
                <h3>Bạn có chắc chắn muốn xóa trường nội dung này không?</h3>
                <div class="text-muted">Hành động này không thể hoàn tác.</div>
            </div>
            <div class="modal-footer justify-content-between">
                <button class="btn btn-link link-secondary command-modal-close">Hủy</button>
                <button class="btn btn-danger command-submit" type="button">
                    Xoá
                </button>
            </div>
        </form>
    </div>
</div>