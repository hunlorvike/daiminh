@using web.Areas.Admin.ViewModels.Brand
@model BrandViewModel
@{
	ViewData["Title"] = "Chỉnh sửa Thương hiệu - Hệ thống quản trị";
	ViewData["PageTitle"] = $"Chỉnh sửa Thương hiệu: {Model.Name}";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("Thương hiệu", Url.Action(nameof(Index)) ?? "/Admin/Brand"),
			($"Chỉnh sửa: {Model.Name}", "")
		};
}

<form asp-action="Edit" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger mb-3" role="alert"></div>

	<div class="card">
		<div class="card-header">
			<h3 class="card-title">Thông tin cơ bản</h3>
		</div>
		<div class="card-body">
			<partial name="_BrandFormFields" model="Model" />
		</div>
	</div>

	<div class="card mt-4">
		<div class="card-header">
			<h3 class="card-title">Tối ưu SEO</h3>
		</div>
		<div class="card-body">
			<partial name="Components/_SeoFormFields" model="Model.Seo" />
		</div>
		<div class="card-footer text-end bg-transparent border-top pt-3">
			<a asp-action="Index" class="btn btn-link">Hủy</a>
			<button type="submit" class="btn btn-primary ms-2">
				<i class="ti ti-device-floppy me-2"></i> Cập nhật Thương hiệu
			</button>
		</div>
	</div>
</form>

@section Scripts {
	<script src="~/js/slug.js" asp-append-version="true"></script>
	<script>
		$(document).ready(function () {
			const $name = $('#Name');
			const $slug = $('#Slug');
			const $generateBtn = $('#generateSlugButton');

			$name.on('input', function () {
				if ($slug.val() === '') {
					try {
						$slug.val(generateVietnameseSlug($name.val()));
					} catch (e) { console.error("Error generating slug:", e); }
				}
			});
			$generateBtn.on('click', function () {
				try {
					$slug.val(generateVietnameseSlug($name.val()));
				} catch (e) { console.error("Error generating slug:", e); }
			});
		});
	</script>
}