@model BrandViewModel

<div class="row g-3">
	<div class="col-md-6">
		<div class="form-group mb-3">
			<label asp-for="Name" class="form-label required"></label>
			<div class="input-group">
				<span class="input-group-text">
					<i class="ti ti-building-store"></i>
				</span>
				<input asp-for="Name" class="form-control" placeholder="Tên thương hiệu" />
			</div>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="form-group mb-3">
			<label asp-for="Slug" class="form-label required"></label>
			<div class="input-group">
				<span class="input-group-text">
					<i class="ti ti-link"></i>
				</span>
				<input asp-for="Slug" class="form-control" placeholder="ten-thuong-hieu" />
				<button class="btn btn-outline-secondary" type="button" id="generateSlugButton"
					title="Tạo slug tự động">
					<i class="ti ti-refresh"></i>
				</button>
			</div>
			<span asp-validation-for="Slug" class="text-danger"></span>
			<small class="form-hint">
				<i class="ti ti-info-circle me-1"></i>Dùng cho URL (chỉ chứa chữ cái thường, số và dấu gạch ngang)
			</small>
		</div>

		<div class="form-group mb-3">
			<label asp-for="Website" class="form-label"></label>
			<div class="input-group">
				<span class="input-group-text">
					<i class="ti ti-world"></i>
				</span>
				<input asp-for="Website" type="url" class="form-control" placeholder="https://example.com" />
			</div>
			<span asp-validation-for="Website" class="text-danger"></span>
			<small class="form-hint">Website chính thức của thương hiệu (nếu có)</small>
		</div>

		<div class="form-group mb-3">
			<label asp-for="LogoUrl" class="form-label"></label>
			<div class="row g-2 align-items-center mb-2">
				<div class="col-auto">
					<div class="avatar avatar-lg" id="logo-preview">
						@if (!string.IsNullOrEmpty(Model.LogoUrl))
						{
							<img src="@Model.LogoUrl" class="avatar-img rounded" />
						}
						else
						{
							<span class="avatar-img">
								<i class="ti ti-building-store fs-1"></i>
							</span>
						}
					</div>
				</div>
				<div class="col">
					<div class="input-group">
						<span class="input-group-text">
							<i class="ti ti-photo"></i>
						</span>
						<input asp-for="LogoUrl" class="form-control" id="logoUrlInput"
							placeholder="https://example.com/logo.png" />
						<button class="btn btn-outline-secondary" type="button" id="selectLogoBtn" title="Chọn logo"
							data-bs-toggle="modal" data-bs-target="#selectMediaModal" data-media-type-filter="0">
							<i class="ti ti-folder"></i>
						</button>
					</div>
				</div>
			</div>
			<span asp-validation-for="LogoUrl" class="text-danger"></span>
			<small class="form-hint">URL đầy đủ đến ảnh logo của thương hiệu</small>
		</div>
	</div>

	<div class="col-md-6">
		<div class="form-group mb-3">
			<label asp-for="Description" class="form-label"></label>
			<div class="input-group">
				<span class="input-group-text">
					<i class="ti ti-notes"></i>
				</span>
				<textarea asp-for="Description" class="form-control" rows="8"
					placeholder="Mô tả về thương hiệu..."></textarea>
			</div>
			<span asp-validation-for="Description" class="text-danger"></span>
			<small class="form-hint">Mô tả ngắn gọn về thương hiệu này</small>
		</div>

		<div class="form-group mb-3">
			<label class="form-label d-block">Trạng thái hiển thị</label>
			<label class="form-check form-switch">
				<input class="form-check-input" type="checkbox" asp-for="IsActive">
				<span class="form-check-label">Hiển thị thương hiệu này trên website</span>
			</label>
			<span asp-validation-for="IsActive" class="text-danger"></span>
		</div>

		<div class="alert alert-info d-flex mt-3" role="alert">
			<div class="alert-icon">
				<i class="ti ti-info-circle"></i>
			</div>
			<div>
				<h4 class="alert-title mb-0">Thông tin về thương hiệu</h4>
				<div class="text-muted">
					Thương hiệu giúp khách hàng dễ dàng tìm kiếm và lọc sản phẩm theo nhà sản xuất.
					Hãy đảm bảo thông tin chính xác và cập nhật.
				</div>
			</div>
		</div>
	</div>
</div>