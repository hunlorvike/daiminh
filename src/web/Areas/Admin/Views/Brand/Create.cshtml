@using web.Areas.Admin.ViewModels.Brand
@model BrandViewModel

@{
    ViewData["Title"] = "Thêm thương hiệu mới - Hệ thống quản trị";
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row g-4">
        <!-- Main Content Column -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Thông tin cơ bản</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label required">Tên thương hiệu</label>
                        <input asp-for="Name" id="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Slug" class="form-label required">Slug</label>
                        <div class="input-group">
                            <input asp-for="Slug" id="Slug" class="form-control" />
                            <button class="btn btn-outline-secondary" type="button" id="generateSlug">
                                <i class="ti ti-refresh me-1"></i> Tạo
                            </button>
                        </div>
                        <span asp-validation-for="Slug" class="text-danger"></span>
                        <small class="form-hint">Dùng cho URL (chỉ chứa chữ cái thường, số và dấu gạch ngang)</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Website" class="form-label">Website</label>
                        <input asp-for="Website" class="form-control" type="url" placeholder="https://example.com" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- SEO Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h3 class="card-title">Thông tin SEO</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="MetaTitle" class="form-label">Meta Title</label>
                        <input asp-for="MetaTitle" class="form-control" />
                        <span asp-validation-for="MetaTitle" class="text-danger"></span>
                        <small class="form-hint">Tiêu đề trang trong kết quả tìm kiếm (để trống sẽ dùng tên thương
                            hiệu)</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MetaDescription" class="form-label">Meta Description</label>
                        <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="MetaDescription" class="text-danger"></span>
                        <small class="form-hint">Mô tả ngắn trong kết quả tìm kiếm (để trống sẽ dùng mô tả thương
                            hiệu)</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MetaKeywords" class="form-label">Meta Keywords</label>
                        <input asp-for="MetaKeywords" class="form-control" />
                        <span asp-validation-for="MetaKeywords" class="text-danger"></span>
                        <small class="form-hint">Các từ khóa cách nhau bởi dấu phẩy</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
            <!-- Publish Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Trạng thái</h3>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                        <label class="form-check-label" asp-for="IsActive">Hiển thị thương hiệu</label>
                        <small class="form-hint d-block">Cho phép thương hiệu xuất hiện trên website.</small>
                    </div>
                </div>
            </div>

            <!-- Logo Card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Logo</h3>
                </div>
                <div class="card-body">
                    <label asp-for="LogoUrl" class="form-label d-none">Logo URL</label> @* Hidden label for model binding, visually hidden *@
                    <input asp-for="LogoUrl" id="LogoUrlInput" class="form-control" type="hidden" />
                    <span asp-validation-for="LogoUrl" class="text-danger d-block mb-2"></span>

                    @* Media Preview Area *@
                    <div id="media-preview-container"
                        class="border rounded p-3 mb-2 text-center d-flex align-items-center justify-content-center bg-light"
                        style="min-height: 150px; background-color: #f8f9fa;">
                        <div class="media-placeholder">
                            <i class="ti ti-photo-plus text-muted" style="font-size: 3rem;"></i>
                            <p class="mt-2 mb-0 text-muted small">Chưa có logo</p>
                        </div>
                    </div>

                    @* Action Buttons *@
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="button" class="btn btn-outline-primary btn-sm"
                            onclick="openMediaBrowser('handleSelectedMedia', 'image', false)"> @* Ensure allowMultiple is false *@
                            <i class="ti ti-folder-open me-1"></i> Chọn/Thay đổi logo
                        </button>
                        <button type="button" id="remove-media-button" class="btn btn-outline-danger btn-sm d-none"
                            onclick="removeSelectedMedia()">
                            <i class="ti ti-trash me-1"></i> Xóa logo
                        </button>
                    </div>
                    <small class="form-hint mt-1 d-block">Logo đại diện cho thương hiệu.</small>
                </div>
            </div>


        </div>
    </div>

    <!-- Form Actions -->
    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="ti ti-arrow-left me-2"></i> Quay lại danh sách
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="ti ti-device-floppy me-2"></i> Lưu thương hiệu
        </button>
    </div>
</form>

@section Scripts {
    <script>
        function handleSelectedMedia(fileData) {
            console.log('File đã chọn:', fileData);
            const previewContainer = document.getElementById('media-preview-container');
            const fileInput = document.getElementById('LogoUrlInput');
            const removeButton = document.getElementById('remove-media-button');

            if (fileData && fileData.url && fileInput && previewContainer && removeButton) {
                const fileExt = fileData.url.split('.').pop().toLowerCase();
                const imageExts = ['jpg', 'jpeg', 'png', 'gif', 'webp', 'svg'];

                if (!imageExts.includes(fileExt)) {
                    toastr.error('Vui lòng chọn một file hình ảnh (jpg, png, gif, svg, etc).');
                    return;
                }

                fileInput.value = fileData.url;

                previewContainer.innerHTML = `
                    <div class="media-item d-flex flex-column align-items-center">
                        <img src="${fileData.url}" alt="${fileData.filename || 'Preview'}" class="img-thumbnail mb-2" style="max-height: 120px; max-width: 100%;">
                        <small class="text-muted text-truncate" style="max-width: 100%;" title="${fileData.filename || ''}">${fileData.filename || 'Selected Image'}</small>
                    </div>
                `;
                previewContainer.classList.remove('text-center', 'bg-light');
                previewContainer.style.backgroundColor = '';

                removeButton.classList.remove('d-none');
            } else {
                console.error("Missing required elements or file data for media handling.");
                toastr.error('Có lỗi xảy ra khi chọn ảnh.');
            }
        }

        function removeSelectedMedia() {
            const previewContainer = document.getElementById('media-preview-container');
            const fileInput = document.getElementById('LogoUrlInput');
            const removeButton = document.getElementById('remove-media-button');

            if (previewContainer && fileInput && removeButton) {
                fileInput.value = '';

                previewContainer.innerHTML = `
                    <div class="media-placeholder">
                            <i class="ti ti-photo-plus text-muted" style="font-size: 3rem;"></i>
                            <p class="mt-2 mb-0 text-muted small">Chưa có logo</p>
                    </div>
                `;
                previewContainer.classList.add('text-center', 'bg-light');
                previewContainer.style.backgroundColor = '#f8f9fa';

                removeButton.classList.add('d-none');
            } else {
                console.error("Missing required elements for media removal.");
            }
        }

        // --- Slug Generation ---
        function generateSlug() {
            var name = $('#Name').val();
            var slugInput = $('#Slug');
            if (!slugInput) return;

            if (name) {
                var slug = name.toLowerCase();
                slug = slug.normalize('NFD').replace(/[\u0300-\u036f]/g, '');
                slug = slug.replace(/đ/g, 'd').replace(/Đ/g, 'D');
                slug = slug.replace(/\s+/g, '-')
                    .replace(/[^\w\-]+/g, '')
                    .replace(/\-\-+/g, '-')
                    .replace(/^-+/, '')
                    .replace(/-+$/, '');
                slugInput.val(slug);
            } else {
                slugInput.val('');
            }
        }

        // --- Document Ready ---
        $(document).ready(function () {

            // Auto-generate slug when name changes (if slug is empty)
            $('#Name').on('input', function () {
                if ($('#Slug').val() === '') {
                    generateSlug();
                }
            });

            // Generate slug on button click
            $('#generateSlug').on('click', function () {
                generateSlug();
            });

            const initialLogoUrl = $('#LogoUrlInput').val();
            if (initialLogoUrl) {
                handleSelectedMedia({
                    url: initialLogoUrl,
                    filename: initialLogoUrl.substring(initialLogoUrl.lastIndexOf('/') + 1)
                });
            } else {
                removeSelectedMedia();
            }

            if ($('form[action="Create"]').length > 0) {
                const isActiveCheckbox = document.getElementById('IsActive');
                if (isActiveCheckbox && !isActiveCheckbox.checked) {
                    isActiveCheckbox.checked = true;
                }
            }
        });
    </script>
}
