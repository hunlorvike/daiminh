@using X.PagedList.Mvc.Core
@using X.PagedList
@using web.Areas.Admin.ViewModels.Brand

@model BrandIndexViewModel
@{
	ViewData["Title"] = "Quản lý Thương hiệu - Hệ thống quản trị";
	ViewData["PageTitle"] = "Danh sách Thương hiệu";
	ViewData["Breadcrumbs"] = new List<(string Text, string Url)> {
			("Thương hiệu", Url.Action(nameof(Index)) ?? "/Admin/Brand")
		};
}

@section PageActions {
	<div class="btn-list">
		<a asp-action="Create" class="btn btn-primary d-sm-inline-block">
			<i class="ti ti-plus me-2"></i> Thêm Thương hiệu
		</a>
	</div>
}

<div class="card mb-3">
	<div class="card-body">
		<form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
			<div class="col-md-5">
				<label asp-for="Filter.SearchTerm" class="form-label"></label>
				<div class="input-group">
					<input asp-for="Filter.SearchTerm" class="form-control" placeholder="Tìm tên hoặc mô tả...">
					<button class="btn btn-icon" type="button" id="clearSearch" title="Xóa tìm kiếm">
						<i class="ti ti-x"></i>
					</button>
				</div>
			</div>
			<div class="col-md-3">
				<label asp-for="Filter.IsActive" class="form-label"></label>
				<select asp-for="Filter.IsActive" asp-items="@Model.Filter.StatusOptions" class="form-select"></select>
			</div>
			<div class="col-md-2">
				<button type="submit" class="btn btn-primary w-100">
					<i class="ti ti-filter me-1"></i> Lọc
				</button>
			</div>
			<div class="col-md-2">
				<a asp-action="Index" class="btn btn-outline-secondary w-100">
					<i class="ti ti-reload me-2"></i> Đặt lại
				</a>
			</div>
		</form>
	</div>
</div>

<div class="card">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h3 class="card-title mb-0">Danh sách Thương hiệu</h3>
		@if (Model.Brands.TotalItemCount > 0)
		{
			<small class="text-muted">Hiển thị @Model.Brands.FirstItemOnPage-@Model.Brands.LastItemOnPage trên tổng số @Model.Brands.TotalItemCount thương hiệu</small>
		}
	</div>
	<div class="card-body p-0">
		@if (!Model.Brands.Any())
		{
			<div class="empty">
				<div class="empty-icon"><i class="ti ti-building-store fs-1 text-muted"></i></div>
				<p class="empty-title">Không tìm thấy thương hiệu nào</p>
				<p class="empty-subtitle text-muted">
					@if (string.IsNullOrWhiteSpace(Model.Filter.SearchTerm) && !Model.Filter.IsActive.HasValue)
					{
						@:Hãy thêm thương hiệu đầu tiên của bạn.
					}
					else
					{
						@:Không có thương hiệu nào khớp với tiêu chí lọc của bạn. Hãy thử lại hoặc đặt lại bộ lọc.
					}
				</p>
				<div class="empty-action">
					@if (!string.IsNullOrWhiteSpace(Model.Filter.SearchTerm) || Model.Filter.IsActive.HasValue)
					{
						<a asp-action="Index" class="btn btn-outline-secondary">
							<i class="ti ti-reload me-2"></i> Đặt lại bộ lọc
						</a>
					}
					<a asp-action="Create" class="btn btn-primary ms-2"> <i class="ti ti-plus me-2"></i> Thêm thương hiệu </a>
				</div>
			</div>
		}
		else
		{
			<div class="table-responsive">
				<table class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th style="width: 5%;">Logo</th>
							<th>Tên thương hiệu</th>
							<th style="width: 20%;">Slug</th>
							<th class="text-center" style="width: 10%;">Sản phẩm</th>
							<th class="text-center" style="width: 10%;">Trạng thái</th>
							<th style="width: 15%;">Cập nhật lúc</th>
							<th class="w-1">Thao tác</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Brands)
						{
							<tr>
								<td>
									@if (!string.IsNullOrEmpty(item.LogoUrl))
									{
										<img src="@item.LogoUrl" alt="@item.Name Logo" class="avatar avatar-sm" />
									}
									else
									{
										<span class="avatar avatar-sm bg-secondary-lt">@item.Name.FirstOrDefault()</span>
									}
								</td>
								<td class="text-muted">
									<span class="fw-medium">@item.Name</span>
								</td>
								<td class="text-muted">
									<code>@item.Slug</code>
								</td>
								<td class="text-muted text-center">
									<span class="badge bg-blue-lt">@item.ProductCount</span>
								</td>
								<td class="text-muted text-center">
									@if (item.IsActive)
									{
										<span class="badge bg-success-lt">Kích hoạt</span>
									}
									else
									{
										<span class="badge bg-danger-lt">Ẩn</span>
									}
								</td>
								<td class="text-muted" title="@item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm:ss")">
									@item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
								</td>
								<td class="text-muted">
									<div class="btn-list flex-nowrap">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa">
											<i class="ti ti-pencil"></i>
										</a>
										<button class="btn btn-sm btn-icon btn-outline-danger delete-item-btn"
												title="Xóa"
												data-id="@item.Id"
												data-name="@item.Name"
												data-delete-url="@Url.Action("Delete", "Brand")">
											<i class="ti ti-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
	</div>
	@if (Model.Brands.PageCount > 1)
	{
		<div class="card-footer">
			<div class="d-flex align-items-center justify-content-center">
				@Html.PagedListPager(
								Model.Brands,
								page => Url.Action("Index", new
								{
									page,
									searchTerm = Model.Filter.SearchTerm,
									isActive = Model.Filter.IsActive
								}),
								new PagedListRenderOptions
			{
				UlElementClasses = new[] { "pagination mb-0" },
				LiElementClasses = new[] { "page-item" },
				PageClasses = new[] { "page-link" },
				DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
				DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
				DisplayLinkToNextPage = PagedListDisplayMode.Always,
				ActiveLiElementClass = "active",
				LinkToPreviousPageFormat = "<span aria-hidden=\"true\">«</span>",
				LinkToNextPageFormat = "<span aria-hidden=\"true\">»</span>",
			})
			</div>
		</div>
	}
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#clearSearch').on('click', function() {
				$('#Filter_SearchTerm').val('');
			});

		});
	</script>
 }