@model List<web.Areas.Admin.ViewModels.Brand.BrandListItemViewModel>

@{
    ViewData["Title"] = "Quản lý thương hiệu";
}

@section PageActions {
    <div class="btn-list">
        <a asp-action="Create" class="btn btn-primary d-sm-inline-block">
            <i class="ti ti-plus me-2"></i> Thêm nhãn hàng
        </a>
    </div>
}

<!-- Filter form -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" id="filterForm" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label">Tìm kiếm</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm thương hiệu..." name="searchTerm"
                        value="@ViewBag.SearchTerm">
                    <button class="btn btn-icon" type="button" id="clearSearch">
                        <i class="ti ti-x"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="ti ti-search me-2"></i> Tìm kiếm
                </button>
            </div>
            <div class="col-md-3">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
                    <i class="ti ti-reload me-2"></i> Đặt lại
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách thương hiệu</h3>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="empty">
                <div class="empty-img" style="font-size: 5rem;">
                    <i class="ti ti-message-dots text-muted"></i>
                </div>
                <p class="empty-title">Không tìm thấy thương hiệu nào</p>
                <p class="empty-subtitle text-muted">
                    Hãy thêm thương hiệu để hiển thị trên website
                </p>
                <div class="empty-action">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="ti ti-plus me-2"></i> Thêm thương hiệu mới
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-vcenter card-table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên thương hiệu</th>
                            <th>Slug</th>
                            <th>Số sản phẩm</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th class="w-1">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted">@(index++)</td>
                                <td>
                                    <div class="d-flex py-1 align-items-center">
                                        @if (!string.IsNullOrEmpty(item.LogoUrl))
                                        {
                                            <span class="avatar me-2" style="background-image: url(@item.LogoUrl)"></span>
                                        }
                                        <div class="flex-fill">
                                            <div class="font-weight-medium">@item.Name</div>
                                            <div class="text-muted">
                                                <a href="@item.Website" class="text-reset" target="_blank">@item.Website</a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-muted">@item.Slug</td>
                                <td class="text-muted">@item.ProductCount</td>
                                <td>
                                    <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post"
                                        class="toggle-active-form">
                                        <label class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" @(item.IsActive ? "checked" : "")>
                                            <span class="form-check-label">@(item.IsActive ? "Hiển thị" : "Ẩn")</span>
                                        </label>
                                    </form>
                                </td>
                                <td class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-list flex-nowrap">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                            class="btn btn-sm btn-icon btn-outline-primary" title="Chỉnh sửa">
                                            <i class="ti ti-pencil"></i>
                                        </a>
                                        <button class="btn btn-sm btn-icon btn-outline-danger delete-item"
                                            data-bs-toggle="modal" data-bs-target="#delete-modal" data-id="@item.Id"
                                            data-name="@item.Name" data-delete-url="@Url.Action("Delete", "Brand")" title="Xóa">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#clearSearch').on('click', function () {
                $('input[name="searchTerm"]').val('');
            });
        })

        document.addEventListener('DOMContentLoaded', function () {
            // Xử lý toggle active
            document.querySelectorAll('.toggle-active-form input[type="checkbox"]').forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    const form = this.closest('form');
                    fetch(form.action, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                const label = this.nextElementSibling;
                                label.textContent = data.active ? 'Hiển thị' : 'Ẩn';
                            }
                        });
                });
            });

            // Xử lý xóa
            document.querySelectorAll('.delete-btn').forEach(function (button) {
                button.addEventListener('click', function () {
                    const form = this.closest('form');
                    if (confirm('Bạn có chắc chắn muốn xóa thương hiệu này?')) {
                        fetch(form.action, {
                            method: 'POST',
                            headers: {
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            }
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    form.closest('tr').remove();
                                    showToast('success', data.message);
                                } else {
                                    showToast('error', data.message);
                                }
                            });
                    }
                });
            });
        });
    </script>
}