@model web.Areas.Client.ViewModels.ArticleCardViewModel

<div class="card h-100">
	<a href="@Url.Action("Detail", "Article", new { slug = Model.Slug })">
		<img src="@Model.ThumbnailUrl" class="card-img-top" alt="@Model.Title" style="height: 200px; object-fit: cover;" />
	</a>
	<div class="card-body d-flex flex-column">
		@if (!string.IsNullOrEmpty(Model.CategoryName))
		{
			<span class="badge bg-primary-lt me-auto mb-2">@Model.CategoryName</span>
		}
		<h3 class="h4 card-title flex-grow-1">
			<a href="@Url.Action("Detail", "Article", new { slug = Model.Slug })" class="text-reset">@Model.Title</a>
		</h3>
		<p class="text-muted">@Model.Summary</p>
		<div class="d-flex justify-content-between align-items-center mt-auto">
			<span class="text-muted small"><i class="ti ti-calendar me-1"></i>@Model.PublishedAt.ToString("dd/MM/yyyy")</span>
			<a href="@Url.Action("Detail", "Article", new { slug = Model.Slug })" class="btn-link">Đọc tiếp<i class="ti ti-arrow-right ms-1"></i></a>
		</div>
	</div>
</div>