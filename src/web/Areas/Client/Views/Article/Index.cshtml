@{
	ViewData["Title"] = "Kiến thức - Sơn Đại Minh";
}

<div class="page-wrapper">
	<div class="page-body">
		<div class="container-xl py-4">
			<div class="mb-4">
				<h1 class="h2 mb-2 font-serif">Kiến thức</h1>
				<div class="text-muted small">
					<a href="/" class="text-reset hover-text-primary">Trang chủ</a>
					<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<path d="M9 6l6 6l-6 6"></path>
					</svg>
					<span>Kiến thức</span>
				</div>
			</div>

			<!-- Featured Article -->
			<div class="card mb-5 overflow-hidden">
				<div class="position-relative">
					<img src="/img/placeholder.svg?text=Bài+viết+nổi+bật" class="card-img-top" style="height: 400px; object-fit: cover;" alt="Bài viết nổi bật">
					<div class="position-absolute top-0 bottom-0 start-0 end-0 bg-gradient-to-t from-dark to-transparent"></div>
					<div class="position-absolute bottom-0 start-0 p-4 text-white" style="max-width: 66.666%;">
						<span class="badge bg-orange mb-2">Nổi bật</span>
						<h2 class="h3 font-serif mb-2">Tổng hợp các giải pháp chống thấm hiệu quả cho mùa mưa</h2>
						<p class="text-white-70 mb-3 d-none d-md-block">
							Mùa mưa đang đến gần, hãy cùng tìm hiểu các giải pháp chống thấm hiệu quả để bảo vệ ngôi nhà của bạn
							khỏi những tác hại của nước mưa và độ ẩm.
						</p>
						<div class="d-flex flex-wrap gap-3 align-items-center">
							<div class="text-white-70 small">15/03/2023 • 10 phút đọc</div>
							<a href="#" class="btn btn-white text-primary">
								Đọc ngay
								<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-right ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
									<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
									<path d="M5 12l14 0"></path>
									<path d="M13 18l6 -6"></path>
									<path d="M13 6l6 6"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>

			<div class="row g-4">
				<!-- Sidebar -->
				<div class="col-lg-3">
					<div class="sticky-top pt-3" style="top: 80px;">
						<!-- Search -->
						<div class="card mb-4">
							<div class="card-body">
								<h2 class="card-title">Tìm kiếm</h2>
								<div class="input-icon mb-2">
									<span class="input-icon-addon">
										<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
											<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
											<path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
											<path d="M21 21l-6 -6"></path>
										</svg>
									</span>
									<input type="text" class="form-control" placeholder="Tìm kiếm bài viết...">
								</div>
							</div>
						</div>

						<!-- Categories -->
						<div class="card mb-4">
							<div class="card-body">
								<h2 class="card-title">Chuyên mục</h2>
								<div class="list-group list-group-flush">
									@{
										var categories = new[] {
									new { Name = "Tất cả bài viết", Count = 36 },
									new { Name = "Hướng dẫn thi công", Count = 12 },
									new { Name = "Kiến thức sản phẩm", Count = 8 },
									new { Name = "Mẹo hay", Count = 7 },
									new { Name = "Xử lý sự cố", Count = 5 },
									new { Name = "Tin tức ngành", Count = 4 }
									};
									}

									@for (int i = 0; i < categories.Length; i++)
									{
										var category = categories[i];
										var url = i == 0 ? "/kien-thuc" : $"/kien-thuc/chuyen-muc/{category.Name.ToLower().Replace(" ", "-")}";
										var activeClass = i == 0 ? "active text-primary" : "";

										<a href="@url" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @activeClass">
											@category.Name
											<span class="badge bg-light text-muted rounded-pill">@category.Count</span>
										</a>
									}
								</div>
							</div>
						</div>

						<!-- Popular Tags -->
						<div class="card mb-4">
							<div class="card-body">
								<h2 class="card-title">Từ khóa phổ biến</h2>
								<div class="d-flex flex-wrap gap-2">
									@foreach (var tag in new[] {
									"Chống thấm", "Sơn nội thất", "Sơn ngoại thất", "Chống nóng",
									"Kháng khuẩn", "Sửa chữa", "Tường ẩm", "Mùa mưa",
									"Bong tróc", "Bảo dưỡng", "Màu sắc", "Phong thủy"
									})
									{
										<a href="/kien-thuc/tag/@tag.ToLower().Replace(" ", "-")" class="badge bg-light text-muted hover-text-primary">
											@tag
										</a>
									}
								</div>
							</div>
						</div>

						<!-- Newsletter -->
						<div class="card card-primary text-white">
							<div class="card-body">
								<h2 class="card-title text-white">Đăng ký nhận tin</h2>
								<p class="text-white-70 small mb-3">
									Nhận thông tin mới nhất về sản phẩm, khuyến mãi và bài viết hữu ích
								</p>
								<div class="mb-2">
									<input type="email" class="form-control form-control-transparent" placeholder="Email của bạn">
								</div>
								<button type="button" class="btn btn-orange w-100">Đăng ký</button>
							</div>
						</div>
					</div>
				</div>

				<!-- Articles -->
				<div class="col-lg-9">
					<!-- Filter -->
					<div class="card mb-4">
						<div class="card-body">
							<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3">
								<div class="d-flex align-items-center">
									<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-filter me-2 text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
										<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
										<path d="M4 4h16v2.172a2 2 0 0 1 -.586 1.414l-4.414 4.414v7l-6 2v-8.5l-4.48 -4.928a2 2 0 0 1 -.52 -1.345v-2.227z"></path>
									</svg>
									<span class="fw-medium">Lọc bài viết</span>
								</div>
								<div class="d-flex align-items-center w-100 w-sm-auto">
									<select class="form-select">
										<option>Mới nhất</option>
										<option>Phổ biến nhất</option>
										<option>Đọc nhiều nhất</option>
										<option>A-Z</option>
									</select>
								</div>
							</div>
						</div>
					</div>

					<!-- Articles Grid -->
					<div class="row row-cards">
						@{
							string[] titles = {
						"Hướng dẫn chống thấm ban công hiệu quả",
						"5 loại sơn nội thất tốt nhất năm 2023",
						"Cách xử lý tường bị thấm nước mùa mưa",
						"Bí quyết chọn màu sơn hợp phong thủy cho nhà ở",
						"Hướng dẫn sơn lại tường cũ đúng cách",
						"Cách khắc phục sơn bị bong tróc, rạn nứt"
										};
						}

						@for (int i = 0; i < 6; i++)
						{
							Random rnd = new Random();
							int readTime = rnd.Next(5, 10);

							<div class="col-md-6">
								<div class="card">
									<div class="img-responsive img-responsive-21x9 card-img-top" style="background-image: url('/img/placeholder.svg?text=Bài+viết+@(i+1)')"></div>
									<div class="card-body">
										<div class="d-flex flex-column">
											<div class="mb-2">
												<span class="badge bg-light text-primary">@categories[i % categories.Length]</span>
											</div>
											<h3 class="card-title mb-2">
												<a href="/kien-thuc/huong-dan-chong-tham-ban-cong-hieu-qua" class="text-reset hover-text-primary">@titles[i % titles.Length]</a>
											</h3>
											<p class="text-muted small mb-3">
												Bài viết hướng dẫn chi tiết cách thực hiện công việc chống thấm/sơn hiệu quả, giúp bạn tiết
												kiệm chi phí và đạt kết quả tốt nhất.
											</p>
											<div class="d-flex justify-content-between align-items-center">
												<span class="text-muted small">@(15 - i)/03/2023 • @readTime phút đọc</span>
												<a href="/kien-thuc/huong-dan-chong-tham-ban-cong-hieu-qua" class="text-primary small fw-medium">
													Đọc tiếp
												</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						}
					</div>

					<!-- Pagination -->
					<div class="d-flex justify-content-center mt-4">
						<ul class="pagination">
							<li class="page-item disabled">
								<a class="page-link" href="#" tabindex="-1" aria-disabled="true">
									<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
										<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
										<path d="M15 6l-6 6l6 6"></path>
									</svg>
								</a>
							</li>
							<li class="page-item active"><a class="page-link" href="#">1</a></li>
							<li class="page-item"><a class="page-link" href="#">2</a></li>
							<li class="page-item"><a class="page-link" href="#">3</a></li>
							<li class="page-item">
								<a class="page-link" href="#">
									<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
										<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
										<path d="M9 6l6 6l-6 6"></path>
									</svg>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

