@model web.Areas.Client.Requests.Auth.LoginRequest
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "Layout/_Layout.Blank";
}

<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="text-center mb-4">
            <a href="/" class="navbar-brand navbar-brand-autodark">
                <img src="/img/logo.svg" height="36" alt="">
            </a>
        </div>
        <div class="card card-md">
            <div class="card-body">
                <h2 class="h2 text-center mb-4">Đăng nhập vào tài khoản của bạn</h2>

                <form asp-area="Client" asp-controller="Auth" asp-action="Login"
                      asp-route-returnUrl="@ViewData["ReturnUrl"]"
                      method="post" autocomplete="off" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" autocomplete="off">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="Password" class="form-label">
                            Mật khẩu
                            @* <span class="form-label-description"> *@
                            @*     <a href="#">Quên mật khẩu?</a> *@
                            @* </span> *@
                        </label>
                        <div class="input-group input-group-flat">
                            <input asp-for="Password" type="password" class="form-control"
                                   placeholder="Mật khẩu của bạn"
                                   autocomplete="off">
                            <span class="input-group-text">
                                <button class="btn-toggle-password btn-link" title="Hiện mật khẩu"
                                        data-bs-toggle="tooltip">
                                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                          fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                          stroke-linejoin="round"
                                          class="icon icon-tabler icons-tabler-outline icon-tabler-eye">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
                                        <path
                                            d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/>
                                    </svg>
                                </button>
                            </span>

                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label class="form-check">
                            <input type="checkbox" class="form-check-input"/>
                            <span class="form-check-label">Ghi nhớ đăng nhập</span>
                        </label>
                    </div>
                    <div class="form-footer">
                        <button type="button" class="btn btn-primary w-100 command-submit">Đăng nhập</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center text-muted mt-3">
            Chưa có tài khoản? <a asp-controller="Auth" asp-action="Register" tabindex="-1">Đăng ký</a>
        </div>

        <div class="text-center mt-4">
            <div class="text-muted mb-3">Hoặc đăng nhập với</div>
            <div class="d-flex gap-2 justify-content-center">
                <a href="#" class="btn btn-icon btn-outline-google">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-google" width="24"
                         height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M17.788 5.108a9 9 0 1 0 3.212 6.892h-8"></path>
                    </svg>
                </a>
                <a href="#" class="btn btn-icon btn-outline-facebook">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-facebook"
                         width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>

@section FootScripts {
    <script>
        $(document).ready(function () {
            const eyeOpenIcon = `<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  
                                    fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-eye">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                                    <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
                                </svg>`;

            const eyeOffIcon = `<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  
                                    fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-eye-off">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M10.585 10.587a2 2 0 0 0 2.829 2.828" />
                                    <path d="M16.681 16.673a8.717 8.717 0 0 1 -4.681 1.327c-3.6 0 -6.6 -2 -9 -6c1.272 -2.12 2.712 -3.678 4.32 -4.674m2.86 -1.146a9.055 9.055 0 0 1 1.82 -.18c3.6 0 6.6 2 9 6c-.666 1.11 -1.379 2.067 -2.138 2.87" />
                                    <path d="M3 3l18 18" />
                                </svg>`

            $(document).on('click', '.btn-toggle-password', function (e) {
                e.preventDefault();

                const $button = $(this),
                    $input = $button.closest('.input-group').find('input');

                if ($input.attr('type') === 'password') {
                    $input.attr('type', 'text');
                    $button.attr('title', 'Ẩn mật khẩu').attr('data-bs-original-title', 'Ẩn mật khẩu').html(eyeOffIcon);
                } else {
                    $input.attr('type', 'password');
                    $button.attr('title', 'Hiện mật khẩu').attr('data-bs-original-title', 'Hiện mật khẩu').html(eyeOpenIcon);
                }

                const tooltip = bootstrap.Tooltip.getOrCreateInstance($button[0]);
                tooltip.hide();
                tooltip.update();
            });

        });
    </script>
}

