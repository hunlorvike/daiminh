@{
	ViewData["Title"] = "Liên hệ - Sơn Đại Minh";
}

<div class="container-xl py-4">
	<!-- Contact Info and Form -->
	<div class="row g-4 mb-5">
		<!-- Contact Info -->
		<div class="col-lg-4">
			<div class="card">
				<div class="card-body">
					<h2 class="card-title mb-4">Thông tin liên hệ</h2>

					<div class="list-group list-group-flush">
						<div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
							<div class="avatar avatar-rounded bg-primary-lt me-3">
								<i class="ti ti-map-pin"></i>
							</div>
							<div>
								<h3 class="h6 mb-1">Địa chỉ</h3>
								<p class="text-muted mb-0">123 Đường ABC, Quận 1, TP. Hồ Chí Minh</p>
							</div>
						</div>

						<div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
							<div class="avatar avatar-rounded bg-primary-lt me-3">
								<i class="ti ti-phone"></i>
							</div>
							<div>
								<h3 class="h6 mb-1">Điện thoại</h3>
								<p class="text-muted mb-1">Hotline: 0123.456.789</p>
								<p class="text-muted mb-0">Tư vấn kỹ thuật: 0987.654.321</p>
							</div>
						</div>

						<div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
							<div class="avatar avatar-rounded bg-primary-lt me-3">
								<i class="ti ti-mail"></i>
							</div>
							<div>
								<h3 class="h6 mb-1">Email</h3>
								<p class="text-muted mb-1">info@sonchongtham.vn</p>
								<p class="text-muted mb-0">kythuat@sonchongtham.vn</p>
							</div>
						</div>

						<div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
							<div class="avatar avatar-rounded bg-primary-lt me-3">
								<i class="ti ti-clock"></i>
							</div>
							<div>
								<h3 class="h6 mb-1">Giờ làm việc</h3>
								<p class="text-muted mb-1">Thứ 2 - Thứ 6: 8:00 - 17:30</p>
								<p class="text-muted mb-1">Thứ 7: 8:00 - 12:00</p>
								<p class="text-muted mb-0">Chủ nhật: Nghỉ</p>
							</div>
						</div>
					</div>

					<div class="mt-4">
						<h3 class="h6 mb-3">Kết nối với chúng tôi</h3>
						<div class="d-flex gap-2">
							<a href="#" class="btn btn-icon btn-sm btn-ghost-primary rounded-circle">
								<i class="ti ti-brand-facebook"></i>
							</a>
							<a href="#" class="btn btn-icon btn-sm btn-ghost-primary rounded-circle">
								<i class="ti ti-brand-instagram"></i>
							</a>
							<a href="#" class="btn btn-icon btn-sm btn-ghost-primary rounded-circle">
								<i class="ti ti-brand-youtube"></i>
							</a>
							<a href="#" class="btn btn-icon btn-sm btn-ghost-primary rounded-circle">
								<i class="ti ti-brand-twitter"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Contact Form -->
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<h2 class="card-title mb-4">Gửi tin nhắn cho chúng tôi</h2>

					<form>
						<div class="row mb-3">
							<div class="col-sm-6 mb-3 mb-sm-0">
								<label class="form-label required">Họ và tên</label>
								<input type="text" class="form-control" placeholder="Nhập họ và tên" required>
							</div>
							<div class="col-sm-6">
								<label class="form-label required">Email</label>
								<input type="email" class="form-control" placeholder="Nhập email" required>
							</div>
						</div>

						<div class="row mb-3">
							<div class="col-sm-6 mb-3 mb-sm-0">
								<label class="form-label required">Số điện thoại</label>
								<input type="tel" class="form-control" placeholder="Nhập số điện thoại" required>
							</div>
							<div class="col-sm-6">
								<label class="form-label">Chủ đề</label>
								<select class="form-select">
									<option value="">Chọn chủ đề</option>
									<option value="product">Thông tin sản phẩm</option>
									<option value="price">Báo giá</option>
									<option value="service">Dịch vụ thi công</option>
									<option value="support">Hỗ trợ kỹ thuật</option>
									<option value="other">Khác</option>
								</select>
							</div>
						</div>

						<div class="mb-3">
							<label class="form-label required">Nội dung tin nhắn</label>
							<textarea class="form-control" rows="6" placeholder="Nhập nội dung tin nhắn" required></textarea>
						</div>

						<div class="mb-3">
							<label class="form-check">
								<input class="form-check-input" type="checkbox" required>
								<span class="form-check-label">
									Tôi đồng ý với <a href="/privacy-policy" class="text-primary">chính sách bảo mật</a> của website
								</span>
							</label>
						</div>

						<button type="submit" class="btn btn-primary">
							<i class="ti ti-send me-2"></i>
							Gửi tin nhắn
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Map -->
	<div class="mb-5">
		<h2 class="h3 mb-3">Bản đồ</h2>
		<div class="card">
			<div class="card-body p-0">
				<div class="ratio ratio-21x9 d-flex align-items-center justify-content-center bg-light">
					<div class="text-center">
						<i class="ti ti-map-pin fs-1 text-primary mb-2"></i>
						<p class="text-muted">Bản đồ Google Maps sẽ hiển thị ở đây</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Branches -->
	<div class="mb-5">
