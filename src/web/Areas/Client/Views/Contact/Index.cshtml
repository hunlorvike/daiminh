@{
    ViewData["Title"] = "Liên hệ - Sơn Đại Minh";
}

<div class="container-lg py-4">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liên hệ</li>
        </ol>
    </nav>

    <h1 class="h2 mb-4">Liên hệ với chúng tôi</h1>

    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="card-title mb-4">Thông tin liên hệ</h2>

                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
                            <div class="avatar avatar-rounded bg-primary-lt me-3 flex-shrink-0">
                                <i class="ti ti-map-pin fs-3"></i>
                            </div>
                            <div>
                                <h3 class="mb-1">Địa chỉ</h3>
                                <p class="text-muted mb-0">Tiên Phương, Chương Mỹ, Hà Nội</p>
                            </div>
                        </div>

                        <div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
                            <div class="avatar avatar-rounded bg-primary-lt me-3 flex-shrink-0">
                                <i class="ti ti-phone fs-3"></i>
                            </div>
                            <div>
                                <h3 class="mb-1">Điện thoại</h3>
                                <p class="text-muted mb-1">Hotline: <a href="tel:0359021323"
                                        class="text-reset">035.902.1323</a></p>
                                <p class="text-muted mb-0">Tư vấn kỹ thuật: <a href="tel:0359021323"
                                        class="text-reset">035.902.1323</a></p>
                            </div>
                        </div>

                        <div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
                            <div class="avatar avatar-rounded bg-primary-lt me-3 flex-shrink-0">
                                <i class="ti ti-mail fs-3"></i>
                            </div>
                            <div>
                                <h3 class="mb-1">Email</h3>
                                <p class="text-muted mb-1"><a href="mailto:daiminhvietnam@gmail.com"
                                        class="text-reset">daiminhvietnam@gmail.com</a></p>
                                <p class="text-muted mb-0"><a href="mailto:daiminhvietnam@gmail.com"
                                        class="text-reset">sondaiminh@gmail.com</a></p>
                            </div>
                        </div>

                        <div class="list-group-item d-flex align-items-start border-0 px-0 py-3">
                            <div class="avatar avatar-rounded bg-primary-lt me-3 flex-shrink-0">
                                <i class="ti ti-clock fs-3"></i>
                            </div>
                            <div>
                                <h3 class="mb-1">Giờ làm việc</h3>
                                <p class="text-muted mb-1">Thứ 2 - Thứ 76: 8:00 - 18:30</p>
                                <p class="text-muted mb-0">Chủ nhật: Nghỉ</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form Card -->
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="card-title mb-4">Gửi tin nhắn cho chúng tôi</h2>

                    <form asp-controller="Contact" asp-action="Submit" method="post" id="contactForm">
                        <div class="row mb-3">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label class="form-label required" for="fullName">Họ và tên</label>
                                <input type="text" class="form-control" id="fullName" name="FullName"
                                    placeholder="Nhập họ và tên" required>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label required" for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="Email"
                                    placeholder="Nhập email" required>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label class="form-label required" for="phone">Số điện thoại</label>
                                <input type="tel" class="form-control" id="phone" name="Phone"
                                    placeholder="Nhập số điện thoại" required>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label" for="subject">Chủ đề</label>
                                <select class="form-select tom-selected"  name="Subject">
                                    <option value="">Chọn chủ đề</option>
                                    <option value="product">Thông tin sản phẩm</option>
                                    <option value="price">Báo giá</option>
                                    <option value="service">Dịch vụ thi công</option>
                                    <option value="support">Hỗ trợ kỹ thuật</option>
                                    <option value="other">Khác</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label required" for="message">Nội dung tin nhắn</label>
                            <textarea class="form-control" id="message" name="Message" rows="6"
                                placeholder="Nhập nội dung tin nhắn" required></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-check">
                                <input class="form-check-input" type="checkbox" id="privacyPolicy" name="PrivacyPolicy"
                                    required>
                                <span class="form-check-label">
                                    Tôi đồng ý với <a href="/privacy-policy" class="text-primary">chính sách bảo mật</a>
                                    của website
                                </span>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="ti ti-send me-2"></i>
                            Gửi tin nhắn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="mb-5">
        <h2 class="h3 mb-3">Bản đồ</h2>
        <div class="card">
            <div class="card-body p-0">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5152.719626588438!2d105.6859916119948!3d20.94205048060509!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3134539b465b1be5%3A0x279c032890c390c5!2zxJDhuqFpIE1pbmggVmnhu4d0IE5hbQ!5e1!3m2!1svi!2s!4v1746603351659!5m2!1svi!2s"
                    width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>