@model web.Areas.Client.Models.Content.ContentViewModel
@{
	ViewData["Title"] = ViewBag.Title ?? "Bài viết";
	const string screenCode = "content";
}

<div class="screen @screenCode">
	<!-- Page header -->
	<section class="page-header d-print-none">
		<div class="container-xl">
			<div class="row g-2 align-items-center">
				<div class="col">
					<div class="page-pretitle">Trang tin tức</div>
					<h2 class="page-title">@ViewBag.Title</h2>
					<div class="text-muted mt-1">
						Hiển thị @(Model.Contents.Count) trong tổng số @Model.TotalContents bài viết
					</div>
				</div>
				<div class="col-auto ms-auto">
					<div class="d-flex">
						<div class="me-2">
							<form action="@Url.Action("Index")" method="get" class="d-flex">
								@if (!string.IsNullOrEmpty(Model.CategorySlug))
								{
									<input type="hidden" name="category" value="@Model.CategorySlug" />
								}
								@if (!string.IsNullOrEmpty(Model.TagSlug))
								{
									<input type="hidden" name="tag" value="@Model.TagSlug" />
								}
								<div class="input-group">
									<input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Tìm kiếm...">
									<button type="submit" class="btn btn-primary">
										<svg xmlns="http://www.w3.org/2000/svg" class="icon m-0" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
											<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
											<path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
											<path d="M21 21l-6 -6"></path>
										</svg>
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="page-body">
		<div class="container-xl">
			<div class="row g-4">
				<div class="col-lg-8">
					<partial name="_FeaturedContent" model="Model" />
					<partial name="_ContentsGrid" model="Model" />
					<partial name="_Pagination" model="Model" />
				</div>
				<div class="col-lg-4">
					<partial name="_Sidebar" model="Model" />
				</div>
			</div>
		</div>
	</section>
</div>

