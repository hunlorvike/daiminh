@model web.Areas.Client.Models.Content.ContentDetailViewModel

<div class="container py-5">
	<div class="row">
		<!-- Main Content -->
		<div class="col-lg-8">
			<article class="blog-post">
				<h1 class="blog-post-title mb-4">@Model.Content.Title</h1>

				<div class="blog-post-meta text-muted mb-4">
					<span>
						<i class="far fa-calendar-alt"></i>
						@Model.Content.CreatedAt.ToString("dd/MM/yyyy")
					</span>
					<span class="mx-2">|</span>
					<span>
						<i class="far fa-user"></i>
						Đại Minh
					</span>
				</div>

				@if (!string.IsNullOrEmpty(Model.Content.CoverImageUrl))
				{
					<img src="@Model.Content.CoverImageUrl"
						 class="img-fluid rounded mb-4"
						 alt="@Model.Content.Title">
				}

				<div class="blog-post-content">
					@Html.Raw(Model.Content.ContentBody)
				</div>

				@if (Model.Content.ContentCategories != null && Model.Content.ContentCategories.Any())
				{
					<div class="mt-4">
						<h5>Danh mục:</h5>
						<div class="d-flex flex-wrap gap-2">
							@foreach (var category in Model.Content.ContentCategories)
							{
								<a href="@Url.Action("PolicyList", new { category = category.Category.Slug })"
								   class="badge bg-primary text-decoration-none">
									@category.Category.Name
								</a>
							}
						</div>
					</div>
				}
			</article>
		</div>

		<!-- Sidebar -->
		<div class="col-lg-4">
			@if (Model.RelatedContents.Any())
			{
				<div class="card mb-4">
					<div class="card-header">
						<h5 class="card-title mb-0">Chính sách liên quan</h5>
					</div>
					<div class="card-body">
						<div class="list-group list-group-flush">
							@foreach (var related in Model.RelatedContents)
							{
								<a href="@Url.Action("PolicyDetail", new { slug = related.Slug })"
								   class="list-group-item list-group-item-action">
									<div class="d-flex w-100 justify-content-between">
										<h6 class="mb-1">@related.Title</h6>
										<small class="text-muted">
											@related.CreatedAt.ToString("dd/MM/yyyy")
										</small>
									</div>
								</a>
							}
						</div>
					</div>
				</div>
			}

			<!-- Contact Info -->
			<div class="card">
				<div class="card-header">
					<h5 class="card-title mb-0">Liên hệ</h5>
				</div>
				<div class="card-body">
					<p class="mb-2">
						<i class="fas fa-phone"></i>
						<a href="tel:+84123456789" class="text-decoration-none">0123 456 789</a>
					</p>
					<p class="mb-2">
						<i class="fas fa-envelope"></i>
						<a href="mailto:contact@example.com" class="text-decoration-none">contact@example.com</a>
					</p>
					<p class="mb-0">
						<i class="fas fa-map-marker-alt"></i>
						123 Đường ABC, Quận 1, TP.HCM
					</p>
				</div>
			</div>
		</div>
	</div>
</div> 