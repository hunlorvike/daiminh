@model web.Areas.Client.Models.Content.ContentViewModel
@{
    var featured = Model.Contents.FirstOrDefault();
}

@if (featured != null)
{
    <div class="card card-lg mb-4">
        <div class="card-status-top bg-primary"></div>
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-md-5">
                    <img src="@featured.CoverImageUrl" class="w-100 h-100 object-cover rounded-start" alt="@featured.Title" style="min-height: 320px;">
                </div>
                <div class="col-md-7">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            @if (featured.ContentCategories != null && featured.ContentCategories.Any())
                            {
                                var category = featured.ContentCategories.FirstOrDefault()?.Category;
                                if (category != null)
                                {
                                    <a href="@Url.Action("Index", new { category = category.Slug })" class="badge bg-azure-lt me-2">
                                        @category.Name
                                    </a>
                                }
                            }
                            else
                            {
                                <span class="badge bg-azure-lt me-2">Nổi bật</span>
                            }
                            <div class="ms-auto text-muted">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"></path>
                                    <path d="M16 3v4"></path>
                                    <path d="M8 3v4"></path>
                                    <path d="M4 11h16"></path>
                                    <path d="M11 15h1"></path>
                                    <path d="M12 15v3"></path>
                                </svg>
                                @featured.CreatedAt.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <h2 class="card-title mb-3">
							<a href="@Url.Action("Detail", new { slug = featured.Slug })" class="text-reset">@featured.Title</a>
						</h2>
                        <p class="card-text text-muted">@featured.Summary</p>
                        <div class="d-flex align-items-center mt-4">
                            <span class="avatar avatar-md me-3" style="background-image: url('/img/icon.jpg');"></span>
                            <div class="me-auto">
                                <a href="#" class="text-reset">
                                    @((featured?.Author?.Email) ?? "Đại Minh")
                                </a>
                                <div class="text-muted">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-clock me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                                        <path d="M12 7v5l3 3"></path>
                                    </svg>
                                    @(Math.Max(1, featured.ContentBody.Length / 1000)) phút đọc
                                </div>
                            </div>
							<a href="@Url.Action("Detail", new { slug = featured.Slug })" class="btn btn-primary">
								Đọc tiếp
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <path d="M5 12l14 0"></path>
                                    <path d="M13 18l6 -6"></path>
                                    <path d="M13 6l6 6"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}