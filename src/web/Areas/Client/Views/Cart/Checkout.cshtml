@{
    ViewData["Title"] = "Thanh toán đơn hàng - Sơn Đại Minh";
    ViewData[TempDataConstants.Breadcrumbs] = new List<(string Text, string Url)> {
        new("Giỏ hàng", ""),
        new("Thanh toán", "")
    };
}


<form action="/hoan-tat-don-hang" method="post">

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header"><h3 class="card-title"><i class="ti ti-user-circle me-2 text-primary"></i>Thông tin nhận hàng</h3></div>
                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="checkoutFullName" class="form-label required">Họ và tên</label>
                            <input type="text" class="form-control" id="checkoutFullName" placeholder="Nguyễn Văn A">
                        </div>
                        <div class="col-md-6">
                            <label for="checkoutPhone" class="form-label required">Số điện thoại</label>
                            <input type="tel" class="form-control" id="checkoutPhone" placeholder="09xxxxxxxx">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="checkoutEmail" class="form-label">Email (nếu có)</label>
                        <input type="email" class="form-control" id="checkoutEmail" placeholder="email@example.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label required">Địa chỉ giao hàng</label>
                        <div class="row g-2">
                            <div class="col-md-4">
                                <select class="form-select">
                                    <option value="">-- Chọn Tỉnh/Thành --</option>
                                    <option value="hanoi">Hà Nội</option>
                                    <!-- More options -->
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select">
                                    <option value="">-- Chọn Quận/Huyện --</option>
                                    <option value="chm">Chương Mỹ</option>
                                    <!-- More options -->
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select">
                                    <option value="">-- Chọn Phường/Xã --</option>
                                    <option value="tienphuong">Tiên Phương</option>
                                    <!-- More options -->
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="checkoutAddressDetail" class="form-label required">Địa chỉ chi tiết (Số nhà, Tên đường...)</label>
                        <input type="text" class="form-control" id="checkoutAddressDetail" placeholder="Số nhà, ngõ, tên đường...">
                    </div>
                    <div class="mb-3">
                        <label for="checkoutNotes" class="form-label">Ghi chú cho đơn hàng (Tùy chọn)</label>
                        <textarea class="form-control" id="checkoutNotes" rows="3" placeholder="Ví dụ: Giao giờ hành chính, gọi trước khi giao..."></textarea>
                    </div>
                </div>
            </div>

            <!-- Section: Shipping Method -->
            <div class="card mb-3">
                <div class="card-header"><h3 class="card-title"><i class="ti ti-truck-delivery me-2 text-primary"></i>Phương thức vận chuyển</h3></div>
                <div class="card-body">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="shippingMethod" id="shippingStandard" value="standard" checked>
                        <label class="form-check-label d-flex justify-content-between" for="shippingStandard">
                            <span>Giao hàng tiêu chuẩn</span>
                            <span class="fw-medium text-primary">25.000₫</span>
                        </label>
                        <div class="text-muted small ms-4">Thời gian dự kiến: 2-3 ngày làm việc</div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="shippingMethod" id="shippingExpress" value="express">
                        <label class="form-check-label d-flex justify-content-between" for="shippingExpress">
                            <span>Giao hàng nhanh</span>
                            <span class="fw-medium text-primary">50.000₫</span>
                        </label>
                        <div class="text-muted small ms-4">Thời gian dự kiến: 1 ngày làm việc</div>
                    </div>
                </div>
            </div>

            <!-- Section: Payment Method -->
            <div class="card mb-3">
                <div class="card-header"><h3 class="card-title"><i class="ti ti-coin me-2 text-primary"></i>Phương thức thanh toán</h3></div>
                <div class="card-body">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="paymentCOD" value="cod" checked>
                        <label class="form-check-label" for="paymentCOD">
                            <i class="ti ti-cash me-2"></i>Thanh toán khi nhận hàng (COD)
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="paymentBankTransfer" value="bank">
                        <label class="form-check-label" for="paymentBankTransfer">
                            <i class="ti ti-building-bank me-2"></i>Chuyển khoản ngân hàng
                        </label>
                    </div>
                    <div class="alert alert-info-lt bg-info-lt text-info-fg d-none" id="bankInfoBlock">
                        <div class="d-flex">
                            <div><i class="ti ti-info-circle alert-icon me-2"></i></div>
                            <div>
                                Vui lòng chuyển khoản đến thông tin sau:<br>
                                <strong>Ngân hàng:</strong> Vietcombank<br>
                                <strong>Số tài khoản:</strong> 123 456 789 012<br>
                                <strong>Chủ tài khoản:</strong> CONG TY TNHH SON DAI MINH VIET NAM<br>
                                <strong>Nội dung chuyển khoản:</strong> [Mã đơn hàng] + [Số điện thoại của bạn]<br>
                                <small>(Mã đơn hàng sẽ được hiển thị sau khi bạn hoàn tất đặt hàng)</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="paymentOnline" value="online">
                        <label class="form-check-label" for="paymentOnline">
                            <i class="ti ti-device-mobile-message me-2"></i>Thanh toán online (VNPay, Momo...)
                        </label>
                    </div>
                    <div class="alert alert-warning-lt bg-warning-lt text-warning-fg d-none" id="onlinePaymentInfo">
                        <div class="d-flex">
                            <div><i class="ti ti-alert-triangle alert-icon me-2"></i></div>
                            <div>
                                Bạn sẽ được chuyển hướng đến cổng thanh toán sau khi nhấn "Hoàn Tất Đặt Hàng".
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="termsConsent" checked>
                <label class="form-check-label" for="termsConsent">
                    Tôi đã đọc và đồng ý với <a href="/dieu-khoan" target="_blank">Điều khoản dịch vụ</a> và <a href="/chinh-sach-bao-mat" target="_blank">Chính sách bảo mật</a> của Sơn Đại Minh.
                </label>
            </div>

            @* Submit button for the form *@
            <div class="d-grid d-lg-block">
                <button type="submit" class="btn btn-primary w-100 w-lg-auto">
                    <i class="ti ti-lock me-2"></i>Hoàn Tất Đặt Hàng
                </button>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="h4 mb-3">Đơn hàng của bạn</h3>
                    <div class="list-group list-group-flush mb-3">
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span>Sơn nội thất Dulux EasyClean x 2</span>
                            <span class="fw-medium">1.300.000₫</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span>Chống thấm Sika Topseal x 1</span>
                            <span class="fw-medium">420.000₫</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0 border-top mt-2 pt-2">
                            <span>Tạm tính</span>
                            <span class="fw-medium">1.720.000₫</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span>Phí vận chuyển</span>
                            <span class="fw-medium text-primary">25.000₫</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0 text-success">
                            <span>Giảm giá (Nếu có)</span>
                            <span class="fw-medium">- 0₫</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="h4 mb-0">Tổng cộng</h4>
                        <div class="h3 fw-bold text-primary mb-0">1.745.000₫</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>