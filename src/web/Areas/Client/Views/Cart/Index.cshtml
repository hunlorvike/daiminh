@{
    ViewData["Title"] = "Giỏ hàng của bạn - Sơn Đại Minh";
}

<div class="container-xl mt-3 mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-arrows mb-0">
            <li class="breadcrumb-item"><a href="/" class="text-reset"><i class="ti ti-home"></i> Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
        </ol>
    </nav>
</div>

<div class="container-xl mb-5">
    <div class="page-header mb-4">
        <h1 class="page-title">
            <i class="ti ti-shopping-cart me-2"></i>Giỏ hàng của bạn
        </h1>
    </div>

    <div class="row g-4">
        <!-- Cart Items List -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="h4 mb-3">Sản phẩm trong giỏ</h3>

                    <div class="list-group list-group-flush">
                        <!-- Cart Item 1 -->
                        <div class="list-group-item py-3">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <img src="/img/placeholder.svg" alt="Sản phẩm 1" class="avatar avatar-lg rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                </div>
                                <div class="col">
                                    <h4 class="h5 mb-1">Sơn nội thất Dulux EasyClean Lau chùi vượt trội</h4>
                                    <div class="text-muted small">5 Lít / Trắng sứ (001)</div>
                                </div>
                                <div class="col-md-3 col-4 text-center">
                                    <label for="qty1" class="form-label visually-hidden">Số lượng</label>
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary" type="button">-</button>
                                        <input type="number" id="qty1" class="form-control text-center" value="2" min="1">
                                        <button class="btn btn-outline-secondary" type="button">+</button>
                                    </div>
                                </div>
                                <div class="col-md-2 col-4 text-end">
                                     <div class="text-muted text-decoration-line-through small">720.000₫</div>
                                    <div class="fw-bold text-primary">650.000₫</div>
                                </div>
                                 <div class="col-md-2 col-4 text-end">
                                     <div class="fw-bold text-primary">1.300.000₫</div> <!-- Subtotal (650k * 2) -->
                                </div>
                                <div class="col-auto">
                                    <button type="button" class="btn btn-icon btn-link text-danger" title="Xóa sản phẩm">
                                        <i class="ti ti-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- Cart Item 2 -->
                         <div class="list-group-item py-3">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <img src="/img/placeholder.svg" alt="Sản phẩm 2" class="avatar avatar-lg rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                </div>
                                <div class="col">
                                    <h4 class="h5 mb-1">Chống thấm Sika Topseal 107</h4>
                                    <div class="text-muted small">Bộ 25Kg</div>
                                </div>
                                <div class="col-md-3 col-4 text-center">
                                     <label for="qty2" class="form-label visually-hidden">Số lượng</label>
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary" type="button">-</button>
                                        <input type="number" id="qty2" class="form-control text-center" value="1" min="1">
                                        <button class="btn btn-outline-secondary" type="button">+</button>
                                    </div>
                                </div>
                                <div class="col-md-2 col-4 text-end">
                                    <div class="fw-bold text-primary">420.000₫</div>
                                </div>
                                 <div class="col-md-2 col-4 text-end">
                                     <div class="fw-bold text-primary">420.000₫</div> <!-- Subtotal (420k * 1) -->
                                </div>
                                <div class="col-auto">
                                    <button type="button" class="btn btn-icon btn-link text-danger" title="Xóa sản phẩm">
                                        <i class="ti ti-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- Add more items here -->
                    </div>

                     <div class="mt-4">
                        <h3 class="h4 mb-3">Mã giảm giá / Phiếu quà tặng</h3>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập mã giảm giá">
                            <button class="btn btn-outline-primary" type="button">Áp dụng</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card sticky-lg-top" style="top: 80px;">
                <div class="card-body">
                    <h3 class="h4 mb-3">Tóm tắt đơn hàng</h3>
                    <div class="list-group list-group-flush mb-3">
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span>Tạm tính</span>
                            <span class="fw-medium">1.720.000₫</span> <!-- 1.300.000 + 420.000 -->
                        </div>
                         <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span>Phí vận chuyển</span>
                             <span class="text-muted small">Tính ở bước sau</span>
                        </div>
                         <div class="list-group-item d-flex justify-content-between align-items-center px-0 text-success">
                            <span>Giảm giá (Nếu có)</span>
                            <span class="fw-medium">- 0₫</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="h4 mb-0">Tổng cộng</h4>
                        <div class="h3 fw-bold text-primary mb-0">1.720.000₫</div>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="/thanh-toan" class="btn btn-primary btn-lg">
                            <i class="ti ti-credit-card me-2"></i>Tiến Hành Thanh Toán
                        </a>
                        <a href="/san-pham" class="btn btn-outline-secondary">
                            <i class="ti ti-arrow-left me-2"></i>Tiếp Tục Mua Sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Suggested Products Section -->
     <div class="mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h2 mb-0">Có thể bạn cũng thích</h2>
        </div>
        
        <div class="row row-cards g-3">
            <!-- Product Card 1 -->
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card h-100">
                    <div class="card-img-top position-relative">
                         <a href="#">
                            <img src="/img/placeholder.svg" alt="Sản phẩm liên quan 1" class="w-100" style="height: 180px; object-fit: cover;">
                        </a>
                        <button class="btn btn-icon btn-light rounded-circle position-absolute top-0 start-0 m-2" data-bs-toggle="tooltip" title="Thêm vào yêu thích">
                            <i class="ti ti-heart"></i>
                        </button>
                    </div>
                    <div class="card-body d-flex flex-column">
                         <div class="d-flex align-items-center mb-1">
                            <span class="badge bg-blue-lt me-2 small">Dulux</span>
                        </div>
                        <h3 class="h6 mb-1 card-title"><a href="#" class="text-reset text-decoration-none stretched-link-pseudo">Sơn lót nội thất Dulux A934</a></h3>
                        <p class="text-muted small mb-2 flex-grow-1">Sơn lót kháng kiềm cao cấp.</p>
                        <div class="fw-bold text-primary">Từ 450.000₫</div>
                    </div>
                </div>
            </div>
             <!-- Product Card 2 -->
            <div class="col-6 col-md-4 col-lg-3">
                 <div class="card h-100">
                    <div class="card-img-top position-relative">
                         <a href="#">
                            <img src="/img/placeholder.svg" alt="Sản phẩm liên quan 2" class="w-100" style="height: 180px; object-fit: cover;">
                        </a>
                        <button class="btn btn-icon btn-light rounded-circle position-absolute top-0 start-0 m-2" data-bs-toggle="tooltip" title="Thêm vào yêu thích">
                            <i class="ti ti-heart"></i>
                        </button>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-1">
                            <span class="badge bg-orange-lt me-2 small">Jotun</span>
                        </div>
                        <h3 class="h6 mb-1 card-title"><a href="#" class="text-reset text-decoration-none stretched-link-pseudo">Sơn Jotun Majestic Đẹp Hoàn Hảo</a></h3>
                         <p class="text-muted small mb-2 flex-grow-1">Sơn nội thất siêu bóng.</p>
                        <div class="fw-bold text-primary">Từ 850.000₫</div>
                    </div>
                </div>
            </div>
             <!-- Product Card 3 -->
            <div class="col-6 col-md-4 col-lg-3 d-none d-lg-block">
                 <div class="card h-100">
                    <div class="card-img-top position-relative">
                         <a href="#">
                            <img src="/img/placeholder.svg" alt="Sản phẩm liên quan 3" class="w-100" style="height: 180px; object-fit: cover;">
                        </a>
                        <button class="btn btn-icon btn-light rounded-circle position-absolute top-0 start-0 m-2" data-bs-toggle="tooltip" title="Thêm vào yêu thích">
                            <i class="ti ti-heart"></i>
                        </button>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-1">
                            <span class="badge bg-green-lt me-2 small">Sika</span>
                        </div>
                        <h3 class="h6 mb-1 card-title"><a href="#" class="text-reset text-decoration-none stretched-link-pseudo">Chống thấm SikaLastomer</a></h3>
                        <p class="text-muted small mb-2 flex-grow-1">Chất trám khe chống thấm.</p>
                        <div class="fw-bold text-primary">Từ 120.000₫</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>