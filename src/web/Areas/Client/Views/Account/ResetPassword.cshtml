@{
    ViewData["Title"] = "Đặt lại mật khẩu - Sơn Đại Minh";
    Layout = "Layout/Layout.Blank";
}

<div class="container-tight py-4">
    <div class="text-center mb-4">
         <a asp-controller="Home" asp-action="Index" class="navbar-brand navbar-brand-autodark d-flex align-items-center text-decoration-none justify-content-center">
            <span class="bg-primary rounded-3 p-2 p-sm-3 me-3">
                <i class="ti ti-paint text-white fs-2"></i>
            </span>
            <div class="text-start">
                <span class="fw-bold h2 text-uppercase text-primary m-0">Daiminh</span>
                <div class="text-secondary small">Giải pháp sơn & chống thấm</div>
            </div>
        </a>
    </div>
    <div class="card card-md">
        <div class="card-status-top bg-primary"></div>
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Đặt lại mật khẩu</h2>
            <p class="text-muted mb-4">Vui lòng nhập mật khẩu mới cho tài khoản của bạn.</p>
            <form action="/tai-khoan/dat-lai-mat-khau" method="post" autocomplete="off">
                 @* Simulate Anti-forgery token and hidden field for reset token *@
                <input type="hidden" name="__RequestVerificationToken" value="SIMULATED_CSRF_TOKEN_VALUE">
                 <input type="hidden" name="token" value="SIMULATED_RESET_TOKEN_FROM_URL">

                <div class="mb-3">
                    <label class="form-label required">Mật khẩu mới</label>
                    <input type="password" class="form-control" placeholder="Nhập mật khẩu mới">
                </div>
                 <div class="mb-3">
                    <label class="form-label required">Xác nhận mật khẩu mới</label>
                    <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới">
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Đặt lại mật khẩu</button>
                </div>
            </form>
        </div>
    </div>
</div>