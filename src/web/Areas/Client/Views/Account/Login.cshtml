@{
    ViewData["Title"] = "Đăng nhập tài khoản - Sơn Đại Minh";
    Layout = "Layout/Layout.Blank";
    // Breadcrumbs are typically not shown on Auth pages, but including for consistency if needed
    // ViewData[TempDataConstants.Breadcrumbs] = new List<(string Text, string Url)> { new("Đăng nhập", "") };
}

<div class="container-tight py-4">
    <div class="text-center mb-4">
        <a asp-controller="Home" asp-action="Index"
            class="navbar-brand navbar-brand-autodark d-flex align-items-center text-decoration-none justify-content-center">
            <span class="bg-primary rounded-3 p-2 p-sm-3 me-3">
                <i class="ti ti-paint text-white fs-2"></i>
            </span>
            <div class="text-start">
                <span class="fw-bold h2 text-uppercase text-primary m-0">Daiminh</span>
                <div class="text-secondary small">Giải pháp sơn & chống thấm</div>
            </div>
        </a>
    </div>

    <div class="card card-md">
        <div class="card-status-top bg-primary"></div>
        <div class="card-body">
            <h2 class="h2 text-center mb-4">Đăng nhập tài khoản</h2>

            <form action="/tai-khoan/dang-nhap" method="post" autocomplete="off">
                <div class="mb-3">
                    <label class="form-label required">Email hoặc Số điện thoại</label>
                    <input type="text" class="form-control" placeholder="Nhập email hoặc số điện thoại">
                </div>
                <div class="mb-2">
                    <label class="form-label required">
                        Mật khẩu
                        <span class="form-label-description">
                            <a href="/tai-khoan/quen-mat-khau">Quên mật khẩu?</a>
                        </span>
                    </label>
                    <div class="input-group">
                        <input type="password" class="form-control" placeholder="Nhập mật khẩu" autocomplete="off">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-check">
                        <input type="checkbox" class="form-check-input">
                        <span class="form-check-label">Ghi nhớ đăng nhập</span>
                    </label>
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center text-muted mt-3">
        Chưa có tài khoản? <a tabindex="-1">Đăng ký</a>
    </div>

    <div class="text-center text-muted mt-3">
        <a href="/" class="text-muted">Quay lại trang chủ</a>
    </div>
</div>