@{
    ViewData["Title"] = "Sản phẩm yêu thích - Sơn Đại Minh";
    var activeMenuItem = "wishlist";
}

<div class="container mt-3 mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-arrows mb-0">
            <li class="breadcrumb-item"><a href="/" class="text-reset"><i class="ti ti-home"></i> Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/tai-khoan" class="text-reset">Tài khoản</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sản phẩm yêu thích</li>
        </ol>
    </nav>
</div>

<div class="container mb-5">
    <div class="page-header mb-3">
        <h1 class="page-title">
            <i class="ti ti-heart me-2"></i>Sản phẩm yêu thích
        </h1>
    </div>

    <div class="row g-4">
        <!-- Sidebar Navigation (Same as Dashboard) -->
        <div class="col-lg-3">
            <div class="card sticky-lg-top" style="top: 80px;">
                <div class="list-group list-group-flush">
                    <a href="/tai-khoan" class="list-group-item list-group-item-action @(activeMenuItem == "dashboard" ? "active" : "")">
                        <i class="ti ti-dashboard me-2"></i>Tổng quan
                    </a>
                    <a href="/tai-khoan/thong-tin-ca-nhan" class="list-group-item list-group-item-action @(activeMenuItem == "profile" ? "active" : "")">
                        <i class="ti ti-user me-2"></i>Thông tin cá nhân
                    </a>
                     <a href="/tai-khoan/don-hang" class="list-group-item list-group-item-action @(activeMenuItem == "orders" ? "active" : "")">
                        <i class="ti ti-list-check me-2"></i>Lịch sử đơn hàng
                    </a>
                     <a href="/tai-khoan/so-dia-chi" class="list-group-item list-group-item-action @(activeMenuItem == "addresses" ? "active" : "")">
                        <i class="ti ti-map-pin me-2"></i>Sổ địa chỉ
                    </a>
                     <a href="/tai-khoan/san-pham-yeu-thich" class="list-group-item list-group-item-action @(activeMenuItem == "wishlist" ? "active" : "")">
                        <i class="ti ti-heart me-2"></i>Sản phẩm yêu thích
                    </a>
                     <a href="/tai-khoan/doi-mat-khau" class="list-group-item list-group-item-action @(activeMenuItem == "change-password" ? "active" : "")">
                        <i class="ti ti-lock me-2"></i>Đổi mật khẩu
                    </a>
                     <a href="/tai-khoan/dang-xuat" class="list-group-item list-group-item-action text-danger">
                        <i class="ti ti-logout me-2"></i>Đăng xuất
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content: Wishlist Items -->
        <div class="col-lg-9">
            <div class="row row-cards g-3">
                @* Simulate Wishlist Item 1 *@
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="card h-100">
                         <div class="card-img-top position-relative">
                             <a href="/san-pham/son-noi-that-dulux-easyclean-lau-chui-vuot-troi">
                                <img src="/img/placeholder.svg" alt="Sản phẩm yêu thích 1" class="w-100" style="height: 180px; object-fit: cover;">
                            </a>
                            @* Remove from wishlist button directly on image *@
                            <button class="btn btn-icon btn-light rounded-circle position-absolute top-0 end-0 m-2 text-danger" title="Xóa khỏi yêu thích">
                                <i class="ti ti-heart-filled"></i>
                            </button>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-blue-lt me-2">Dulux</span>
                                <div class="text-warning small">
                                    <i class="ti ti-star-filled"></i><i class="ti ti-star-filled"></i><i class="ti ti-star-filled"></i><i class="ti ti-star-half-filled"></i><i class="ti ti-star"></i>
                                </div>
                            </div>
                            <h3 class="h5 mb-1">
                                <a href="/san-pham/son-noi-that-dulux-easyclean-lau-chui-vuot-troi" class="text-reset text-decoration-none stretched-link-pseudo">Sơn nội thất Dulux EasyClean</a>
                            </h3>
                             <div class="text-muted small mb-2 flex-grow-1">5 Lít</div>
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div>
                                    <div class="fw-bold h5 mb-0">650.000₫</div>
                                     <div class="text-muted text-decoration-line-through small">720.000₫</div>
                                </div>
                            </div>
                             <div class="d-grid gap-2 mt-auto">
                                 @* Option 1: Button to add to cart directly if simple product *@
                                 <button class="btn btn-primary">
                                     <i class="ti ti-shopping-cart me-2"></i>Thêm vào giỏ
                                 </button>
                                 @* Option 2: Button to view detail if product has variants (color, volume) *@
                                 @*
                                  <a href="/san-pham/son-noi-that-dulux-easyclean-lau-chui-vuot-troi" class="btn btn-primary">
                                     <i class="ti ti-eye me-2"></i>Xem chi tiết
                                 </a>
                                 *@
                             </div>
                        </div>
                    </div>
                </div>

                @* Simulate Wishlist Item 2 *@
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="card h-100">
                         <div class="card-img-top position-relative">
                             <a href="/san-pham/chong-tham-sika-topseal-107">
                                <img src="/img/placeholder.svg" alt="Sản phẩm yêu thích 2" class="w-100" style="height: 180px; object-fit: cover;">
                            </a>
                            <button class="btn btn-icon btn-light rounded-circle position-absolute top-0 end-0 m-2 text-danger" title="Xóa khỏi yêu thích">
                                <i class="ti ti-heart-filled"></i>
                            </button>
                        </div>
                        <div class="card-body d-flex flex-column">
                             <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-green-lt me-2">Sika</span>
                                 <div class="text-warning small">
                                    <i class="ti ti-star-filled"></i><i class="ti ti-star-filled"></i><i class="ti ti-star-filled"></i><i class="ti ti-star-half-filled"></i><i class="ti ti-star"></i>
                                </div>
                            </div>
                            <h3 class="h5 mb-1">
                                <a href="/san-pham/chong-tham-sika-topseal-107" class="text-reset text-decoration-none stretched-link-pseudo">Chống thấm Sika Topseal 107</a>
                            </h3>
                            <div class="text-muted small mb-2 flex-grow-1">Bộ 25Kg</div>
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div>
                                    <div class="fw-bold h5 mb-0">420.000₫</div>
                                </div>
                            </div>
                             <div class="d-grid gap-2 mt-auto">
                                 @* For products without variants, can add to cart directly *@
                                 <button class="btn btn-primary">
                                     <i class="ti ti-shopping-cart me-2"></i>Thêm vào giỏ
                                 </button>
                             </div>
                        </div>
                    </div>
                </div>

                 @* Simulate empty wishlist state *@
                 @*
                 <div class="col-12">
                      <div class="card card-body">
                           <div class="empty">
                                <div class="empty-icon">
                                    <i class="ti ti-heart-off text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <p class="empty-title">Danh sách yêu thích trống</p>
                                <p class="empty-subtitle text-muted">
                                    Bạn chưa thêm sản phẩm nào vào danh sách yêu thích.<br>
                                    Duyệt qua các sản phẩm của chúng tôi và nhấn biểu tượng <i class="ti ti-heart text-primary"></i> để thêm vào.
                                </p>
                                <div class="empty-action">
                                    <a href="/san-pham" class="btn btn-primary">
                                        <i class="ti ti-package me-2"></i>Khám phá sản phẩm
                                    </a>
                                </div>
                            </div>
                         </div>
                 </div>
                 *@
            </div>
        </div>
    </div>
</div>