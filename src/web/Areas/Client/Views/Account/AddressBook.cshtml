@{
    ViewData["Title"] = "Sổ địa chỉ - Sơn Đại Minh";
    var activeMenuItem = "addresses";
}

<div class="container mt-3 mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-arrows mb-0">
            <li class="breadcrumb-item"><a href="/" class="text-reset"><i class="ti ti-home"></i> Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/tai-khoan" class="text-reset">Tài khoản</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sổ địa chỉ</li>
        </ol>
    </nav>
</div>

<div class="container mb-5">
    <div class="page-header mb-3">
        <div class="row align-items-center">
            <div class="col">
                 <h1 class="page-title">
                    <i class="ti ti-map-pin me-2"></i>Sổ địa chỉ
                </h1>
            </div>
             <div class="col-auto ms-auto">
                 <a href="#add-address-form" class="btn btn-primary">
                    <i class="ti ti-plus me-2"></i>Thêm địa chỉ mới
                </a>
             </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Sidebar Navigation (Same as Dashboard) -->
        <div class="col-lg-3">
            <div class="card sticky-lg-top" style="top: 80px;">
                 <div class="list-group list-group-flush">
                    <a href="/tai-khoan" class="list-group-item list-group-item-action @(activeMenuItem == "dashboard" ? "active" : "")">
                        <i class="ti ti-dashboard me-2"></i>Tổng quan
                    </a>
                    <a href="/tai-khoan/thong-tin-ca-nhan" class="list-group-item list-group-item-action @(activeMenuItem == "profile" ? "active" : "")">
                        <i class="ti ti-user me-2"></i>Thông tin cá nhân
                    </a>
                     <a href="/tai-khoan/don-hang" class="list-group-item list-group-item-action @(activeMenuItem == "orders" ? "active" : "")">
                        <i class="ti ti-list-check me-2"></i>Lịch sử đơn hàng
                    </a>
                     <a href="/tai-khoan/so-dia-chi" class="list-group-item list-group-item-action @(activeMenuItem == "addresses" ? "active" : "")">
                        <i class="ti ti-map-pin me-2"></i>Sổ địa chỉ
                    </a>
                     <a href="/tai-khoan/san-pham-yeu-thich" class="list-group-item list-group-item-action @(activeMenuItem == "wishlist" ? "active" : "")">
                        <i class="ti ti-heart me-2"></i>Sản phẩm yêu thích
                    </a>
                     <a href="/tai-khoan/doi-mat-khau" class="list-group-item list-group-item-action @(activeMenuItem == "change-password" ? "active" : "")">
                        <i class="ti ti-lock me-2"></i>Đổi mật khẩu
                    </a>
                     <a href="/tai-khoan/dang-xuat" class="list-group-item list-group-item-action text-danger">
                        <i class="ti ti-logout me-2"></i>Đăng xuất
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="row row-cards g-3">
                @* Simulate Address 1 (Default) *@
                <div class="col-md-6">
                    <div class="card h-100 border-primary">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-2">
                                <h4 class="card-title mb-0">Nguyễn Văn A</h4>
                                <span class="badge bg-primary ms-auto">Mặc định</span>
                            </div>
                             <div class="text-muted mb-2">
                                <i class="ti ti-phone me-1"></i>0912 345 678
                             </div>
                            <address class="text-muted mb-3 flex-grow-1">
                                Số 123, Đường ABC, Phường XYZ, Quận QK, TP. Hà Nội
                            </address>
                            <div class="d-flex gap-2 mt-auto">
                                <a href="#" class="btn btn-sm btn-outline-primary"><i class="ti ti-edit me-1"></i>Sửa</a>
                                <a href="#" class="btn btn-sm btn-outline-danger"><i class="ti ti-trash me-1"></i>Xóa</a>
                                @* No "Set as Default" button for default address *@
                            </div>
                        </div>
                    </div>
                </div>
                 @* Simulate Address 2 *@
                 <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-2">
                                <h4 class="card-title mb-0">Nguyễn Văn A (Công trình 2)</h4>
                                @* No badge for non-default *@
                            </div>
                             <div class="text-muted mb-2">
                                <i class="ti ti-phone me-1"></i>0987 654 321
                             </div>
                            <address class="text-muted mb-3 flex-grow-1">
                                Số 456, Đường DEF, Phường UVW, Quận ST, Tỉnh GH
                            </address>
                            <div class="d-flex gap-2 mt-auto">
                                <a href="#" class="btn btn-sm btn-outline-primary"><i class="ti ti-edit me-1"></i>Sửa</a>
                                <a href="#" class="btn btn-sm btn-outline-danger"><i class="ti ti-trash me-1"></i>Xóa</a>
                                <a href="#" class="btn btn-sm btn-outline-secondary ms-auto"><i class="ti ti-star me-1"></i>Đặt làm mặc định</a>
                            </div>
                        </div>
                    </div>
                </div>
                 @* Add more address cards *@
            </div>

            @* Simulate Add/Edit Address Form (Can be a modal or shown/hidden) *@
             <div class="card mt-3" id="add-address-form">
                <div class="card-header"><h3 class="card-title"><i class="ti ti-plus me-2 text-primary"></i>Thêm địa chỉ mới</h3></div>
                <div class="card-body">
                     <form>
                         <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label for="addressFullName" class="form-label required">Họ và tên người nhận</label>
                                <input type="text" class="form-control" id="addressFullName" placeholder="Nguyễn Văn A">
                            </div>
                            <div class="col-md-6">
                                <label for="addressPhone" class="form-label required">Số điện thoại</label>
                                <input type="tel" class="form-control" id="addressPhone" placeholder="09xxxxxxxx">
                            </div>
                         </div>
                         <div class="mb-3">
                            <label class="form-label required">Tỉnh/Thành, Quận/Huyện, Phường/Xã</label>
                             <div class="row g-2">
                                <div class="col-md-4">
                                    <select class="form-select">
                                        <option value="">-- Chọn Tỉnh/Thành --</option>
                                         @* Options *@
                                    </select>
                                </div>
                                <div class="col-md-4">
                                     <select class="form-select">
                                        <option value="">-- Chọn Quận/Huyện --</option>
                                        @* Options *@
                                    </select>
                                </div>
                                <div class="col-md-4">
                                     <select class="form-select">
                                        <option value="">-- Chọn Phường/Xã --</option>
                                        @* Options *@
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                             <label for="addressDetail" class="form-label required">Địa chỉ chi tiết (Số nhà, Tên đường...)</label>
                             <input type="text" class="form-control" id="addressDetail" placeholder="Số nhà, ngõ, tên đường...">
                        </div>
                         <div class="mb-3">
                            <label class="form-check">
                                <input type="checkbox" class="form-check-input" checked>
                                <span class="form-check-label">Đặt làm địa chỉ mặc định</span>
                            </label>
                        </div>
                         <div class="form-footer">
                            <button type="submit" class="btn btn-primary me-2"><i class="ti ti-device-floppy me-1"></i>Lưu địa chỉ</button>
                             @* Optional Cancel button if this form is shown/hidden *@
                            @* <button type="button" class="btn btn-outline-secondary">Hủy</button> *@
                         </div>
                     </form>
                </div>
             </div>

        </div>
    </div>
</div>