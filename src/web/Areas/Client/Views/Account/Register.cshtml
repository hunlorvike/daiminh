@{
    ViewData["Title"] = "Đăng ký tài khoản - Sơn Đại Minh";
    Layout = "Layout/Layout.Blank";
}

<div class="container-tight py-4">
    <div class="text-center mb-4">
         <a asp-controller="Home" asp-action="Index" class="navbar-brand navbar-brand-autodark d-flex align-items-center text-decoration-none justify-content-center">
            <span class="bg-primary rounded-3 p-2 p-sm-3 me-3">
                <i class="ti ti-paint text-white fs-2"></i>
            </span>
            <div class="text-start">
                <span class="fw-bold h2 text-uppercase text-primary m-0">Daiminh</span>
                <div class="text-secondary small">Giải pháp sơn & chống thấm</div>
            </div>
        </a>
    </div>
    <div class="card card-md">
        <div class="card-status-top bg-primary"></div>
        <div class="card-body">
            <h2 class="h2 text-center mb-4">Tạo tài khoản mới</h2>
            <form action="/tai-khoan/dang-ky" method="post" autocomplete="off">
                 @* Simulate Anti-forgery token *@
                <input type="hidden" name="__RequestVerificationToken" value="SIMULATED_CSRF_TOKEN_VALUE">

                <div class="mb-3">
                    <label class="form-label required">Họ và tên</label>
                    <input type="text" class="form-control" placeholder="Nhập họ và tên của bạn">
                </div>
                 <div class="mb-3">
                    <label class="form-label required">Email</label>
                    <input type="email" class="form-control" placeholder="Nhập địa chỉ email">
                </div>
                 <div class="mb-3">
                    <label class="form-label">Số điện thoại (Tùy chọn)</label>
                    <input type="tel" class="form-control" placeholder="Nhập số điện thoại">
                </div>
                <div class="mb-3">
                    <label class="form-label required">Mật khẩu</label>
                    <div class="input-group input-group-flat">
                        <input type="password" class="form-control" placeholder="Tạo mật khẩu an toàn">
                         @* Optional: Toggle password visibility *@
                    </div>
                </div>
                 <div class="mb-3">
                    <label class="form-label required">Xác nhận mật khẩu</label>
                     <input type="password" class="form-control" placeholder="Nhập lại mật khẩu">
                </div>
                <div class="mb-3">
                    <label class="form-check">
                        <input type="checkbox" class="form-check-input" checked>
                        <span class="form-check-label">
                            Tôi đồng ý với <a href="/dieu-khoan" tabindex="-1">Điều khoản dịch vụ</a> và
                            <a href="/chinh-sach-bao-mat" tabindex="-1">Chính sách bảo mật</a>.
                        </span>
                    </label>
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
     <div class="text-center text-muted mt-3">
        Đã có tài khoản? <a href="/tai-khoan/dang-nhap" tabindex="-1">Đăng nhập</a>
    </div>
</div>