@{
    ViewData["Title"] = "Quên mật khẩu - Sơn Đại Minh";
    Layout = "Layout/Layout.Blank";
}

<div class="container-tight py-4">
    <div class="text-center mb-4">
         <a asp-controller="Home" asp-action="Index" class="navbar-brand navbar-brand-autodark d-flex align-items-center text-decoration-none justify-content-center">
            <span class="bg-primary rounded-3 p-2 p-sm-3 me-3">
                <i class="ti ti-paint text-white fs-2"></i>
            </span>
            <div class="text-start">
                <span class="fw-bold h2 text-uppercase text-primary m-0">Daiminh</span>
                <div class="text-secondary small">Giải pháp sơn & chống thấm</div>
            </div>
        </a>
    </div>
    <div class="card card-md">
        <div class="card-status-top bg-primary"></div>
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Quên mật khẩu</h2>
            <p class="text-muted mb-4">Nhập địa chỉ email đã đăng ký của bạn. Chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu.</p>
            <form action="/tai-khoan/quen-mat-khau" method="post" autocomplete="off">
                 @* Simulate Anti-forgery token *@
                <input type="hidden" name="__RequestVerificationToken" value="SIMULATED_CSRF_TOKEN_VALUE">

                <div class="mb-3">
                    <label class="form-label required">Địa chỉ Email</label>
                    <input type="email" class="form-control" placeholder="Nhập email của bạn">
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Gửi yêu cầu</button>
                </div>
            </form>
        </div>
    </div>
     <div class="text-center text-muted mt-3">
        Nhớ mật khẩu rồi? <a href="/tai-khoan/dang-nhap">Đăng nhập</a>
    </div>
</div>