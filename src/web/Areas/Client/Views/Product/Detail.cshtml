@model domain.Entities.Product
@{
	ViewData["Title"] = Model.Name;
	var relatedProducts = ViewBag.RelatedProducts as List<domain.Entities.Product> ?? new List<domain.Entities.Product>();
}

<div class="page-header d-print-none">
	<div class="container-xl">
		<div class="row g-2 align-items-center">
			<div class="col">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
						<li class="breadcrumb-item"><a href="@Url.Action("Index", "Product")">Sản phẩm</a></li>
						@if (Model.ProductCategories != null && Model.ProductCategories.Any())
						{
							var category = Model.ProductCategories.FirstOrDefault()?.Category;
							if (category != null)
							{
								<li class="breadcrumb-item">
									<a href="@Url.Action("Index", "Product", new { categoryIds = category.Id })">
										@category.Name
									</a>
								</li>
							}
						}
						<li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
					</ol>
				</nav>
				<h2 class="page-title">
					@Model.Name
				</h2>
			</div>
		</div>
	</div>
</div>

<div class="page-body">
	<div class="container-xl">
		<div class="row">
			<div class="col-lg-8">
				<div class="card">
					<div class="card-body">
						<div class="row">
							<!-- Product images -->
							<div class="col-md-6 mb-3 mb-md-0">
								<div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
									<div class="carousel-inner">
										@{
											var primaryImage = Model.Images?.FirstOrDefault(i => i.IsPrimary);
											var hasImages = Model.Images != null && Model.Images.Any();
										}

										@if (primaryImage != null)
										{
											<div class="carousel-item active">
												<img src="@primaryImage.ImageUrl" class="d-block w-100 rounded" alt="@(primaryImage.AltText ?? Model.Name)">
											</div>
										}

										@if (hasImages)
										{
											foreach (var image in Model.Images.Where(i => !i.IsPrimary))
											{
												<div class="carousel-item @(!hasImages ? "active" : "")">
													<img src="@image.ImageUrl" class="d-block w-100 rounded" alt="@(image.AltText ?? Model.Name)">
												</div>
											}
										}

										@if (!hasImages)
										{
											<div class="carousel-item active">
												<img src="/img/placeholder.svg" class="d-block w-100 rounded" alt="@Model.Name">
											</div>
										}
									</div>
									<button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Previous</span>
									</button>
									<button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Next</span>
									</button>
								</div>

								@if (hasImages && Model.Images.Count > 1)
								{
									<div class="d-flex mt-2 overflow-auto">
										@{
											var index = 0;
										}

										@foreach (var image in Model.Images)
										{
											<div class="me-2" style="width: 80px;">
												<img src="@image.ImageUrl" class="img-thumbnail" alt="@(image.AltText ?? Model.Name)"
													 data-bs-target="#productCarousel" data-bs-slide-to="@index">
											</div>
											index++;
										}
									</div>
								}
							</div>

							<!-- Product details -->
							<div class="col-md-6">
								<div class="d-flex align-items-center mb-3">
									<span class="badge bg-blue me-2">@Model.ProductType?.Name</span>
								</div>

								<div class="mb-3">
									<div class="h1 text-primary mb-0">
										@Model.BasePrice.ToString("N0") ₫
									</div>
								</div>

								<div class="mb-3">
									<div class="text-muted mb-2">Mã sản phẩm: @Model.Sku</div>
									<div class="text-muted mb-2">
										Tình trạng:
										@if (Model.Status == shared.Enums.PublishStatus.Published)
										{
											<span class="badge bg-green">Còn hàng</span>
										}
										else
										{
											<span class="badge bg-red">Hết hàng</span>
										}
									</div>
								</div>

								<div class="mb-4">
									<p>@Model.MetaDescription</p>
								</div>

								<form method="post" action="@Url.Action("AddToCart")" id="addToCartForm">
									@Html.AntiForgeryToken()
									<input type="hidden" name="productId" value="@Model.Id">

									<div class="mb-3">
										<label class="form-label">Số lượng</label>
										<div class="input-group">
											<button type="button" class="btn btn-outline-secondary" id="decreaseQuantity">
												<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
													<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
													<path d="M5 12l14 0"></path>
												</svg>
											</button>
											<input type="number" name="quantity" id="quantity" class="form-control text-center" value="1" min="1" max="99">
											<button type="button" class="btn btn-outline-secondary" id="increaseQuantity">
												<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
													<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
													<path d="M12 5l0 14"></path>
													<path d="M5 12l14 0"></path>
												</svg>
											</button>
										</div>
									</div>

									<div class="d-flex gap-2">
										<button type="submit" class="btn btn-primary w-100 ">
											<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
												<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
												<path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
												<path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
												<path d="M17 17h-11v-14h-2"></path>
												<path d="M6 5l6.005 .429m7.138 6.573l-.143 .998h-13"></path>
												<path d="M15 6h6m-3 -3v6"></path>
											</svg>
											Thêm vào giỏ hàng
										</button>

										<form method="post" >
											@Html.AntiForgeryToken()
											<input type="hidden" name="productId" value="@Model.Id">
											<button type="submit" class="btn btn-outline-primary">
												<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
													<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
													<path d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572"></path>
												</svg>
												 Yêu thích
											</button>
										</form>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>

				<!-- Product description -->
				<div class="card mt-4">
					<div class="card-header">
						<ul class="nav nav-tabs card-header-tabs" data-bs-toggle="tabs">
							<li class="nav-item">
								<a href="#tabs-description" class="nav-link active" data-bs-toggle="tab">Mô tả</a>
							</li>
							<li class="nav-item">
								<a href="#tabs-specifications" class="nav-link" data-bs-toggle="tab">Thông số kỹ thuật</a>
							</li>
						</ul>
					</div>
					<div class="card-body">
						<div class="tab-content">
							<div class="tab-pane active show" id="tabs-description">
								<div class="product-description">
									@Html.Raw(Model.Description)
								</div>
							</div>
							<div class="tab-pane" id="tabs-specifications">
								<div class="table-responsive">
									<table class="table table-vcenter">
										<tbody>
											<tr>
												<td class="text-muted">Mã sản phẩm</td>
												<td>@Model.Sku</td>
											</tr>
											<tr>
												<td class="text-muted">Loại sản phẩm</td>
												<td>@Model.ProductType?.Name</td>
											</tr>
											@if (Model.FieldValues != null && Model.FieldValues.Any())
											{
												foreach (var fieldValue in Model.FieldValues.OrderBy(f => f.Field?.FieldName))
												{
													<tr>
														<td class="text-muted">@fieldValue.Field?.FieldName</td>
														<td>@fieldValue.Value</td>
													</tr>
												}
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-lg-4">
				<!-- Categories -->
				<div class="card mb-4">
					<div class="card-header">
						<h3 class="card-title">Danh mục</h3>
					</div>
					<div class="card-body">
						<div class="d-flex flex-wrap gap-2">
							@if (Model.ProductCategories != null && Model.ProductCategories.Any())
							{
								foreach (var pc in Model.ProductCategories)
								{
									<a href="@Url.Action("Index", new { categoryIds = pc.CategoryId })" class="badge bg-blue-lt">
										@pc.Category?.Name
									</a>
								}
							}
							else
							{
								<span class="text-muted">Không có danh mục</span>
							}
						</div>
					</div>
				</div>

				<!-- Tags -->
				<div class="card mb-4">
					<div class="card-header">
						<h3 class="card-title">Thẻ</h3>
					</div>
					<div class="card-body">
						<div class="d-flex flex-wrap gap-2">
							@if (Model.ProductTags != null && Model.ProductTags.Any())
							{
								foreach (var pt in Model.ProductTags)
								{
									<a href="@Url.Action("Index", new { tagIds = pt.TagId })" class="badge bg-azure-lt">
										#@pt.Tag?.Name
									</a>
								}
							}
							else
							{
								<span class="text-muted">Không có thẻ</span>
							}
						</div>
					</div>
				</div>

				<!-- Related products -->
				@if (relatedProducts.Any())
				{
					<div class="card mb-4">
						<div class="card-header">
							<h3 class="card-title">Sản phẩm liên quan</h3>
						</div>
						<div class="card-body">
							<div class="row row-cards">
								@foreach (var relatedProduct in relatedProducts)
								{
									var relatedProductImage = relatedProduct.Images?.FirstOrDefault(i => i.IsPrimary)?.ImageUrl
									?? relatedProduct.Images?.FirstOrDefault()?.ImageUrl
									?? "/img/placeholder.svg";

									<div class="col-md-6 col-lg-12">
										<div class="row g-3 align-items-center">
											<a href="@Url.Action("Detail", new { id = relatedProduct.Id })" class="col-auto">
												<span class="avatar avatar-lg" style="background-image: url('@relatedProductImage')"></span>
											</a>
											<div class="col">
												<a href="@Url.Action("Detail", new { id = relatedProduct.Id })" class="text-reset">
													<div class="text-truncate">@relatedProduct.Name</div>
												</a>
												<div class="text-muted">@relatedProduct.BasePrice.ToString("N0") ₫</div>
											</div>
										</div>
									</div>
								}
							</div>
						</div>
					</div>
				}
			</div>
		</div>
