erDiagram
    Users {
        UNIQUEIDENTIFIER Id PK
        NVARCHAR(256) UserName
        NVARCHAR(256) Email
        VARCHAR(MAX) PasswordHash
        NVARCHAR(150) Name
        VARCHAR(20) PhoneNumber
        VARCHAR(20) Role
        BIT IsActive
        DATETIME2 CreatedAt
        DATETIME2 UpdatedAt
        DATETIME2 DeletedAt
    }

    Categories {
        UNIQUEIDENTIFIER Id PK
        UNIQUEIDENTIFIER ParentId FK
        NVARCHAR(100) Name
        VARCHAR(500) Slug
        NVARCHAR(200) MetaTitle
        NVARCHAR(500) MetaDescription
        NVARCHAR(200) MetaKeywords
        INT DisplayOrder
        BIT IsActive
        DATETIME2 CreatedAt
        DATETIME2 UpdatedAt
        DATETIME2 DeletedAt
    }

    Tags {
