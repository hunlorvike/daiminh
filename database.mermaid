        NVARCHAR(200) MetaKeywords
        BIT IsActive
        DATETIME2 CreatedAt
        DATETIME2 UpdatedAt
        DATETIME2 DeletedAt
    }

    Posts {
        UNIQUEIDENTIFIER Id PK
